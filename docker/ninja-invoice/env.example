# Ninja Invoice Environment Configuration

APP_NAME="Ninja Invoice"
APP_ENV=production
APP_KEY=
APP_DEBUG=false
APP_URL=https://your-ninja-invoice-instance.com

LOG_CHANNEL=stack
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# Database Configuration
DB_CONNECTION=mysql
DB_HOST=mysql
DB_PORT=3306
DB_DATABASE=ninja_invoice
DB_USERNAME=ninja_user
DB_PASSWORD=ninja_password

# Cache Configuration
CACHE_DRIVER=redis
FILESYSTEM_DISK=local
QUEUE_CONNECTION=redis

# Redis Configuration
REDIS_HOST=redis
REDIS_PASSWORD=null
REDIS_PORT=6379

# Session Configuration
SESSION_DRIVER=redis
SESSION_LIFETIME=120

# Mail Configuration
MAIL_MAILER=smtp
MAIL_HOST=mailhog
MAIL_PORT=1025
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="noreply@your-domain.com"
MAIL_FROM_NAME="${APP_NAME}"

# API Configuration
API_SECRET=your-api-secret-key-here
API_RATE_LIMIT=60

# File Storage
FILESYSTEM_DISK=local
