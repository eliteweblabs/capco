{
  "id": "example-contact-form",
  "title": "Contact Us",
  "description": "We'd love to hear from you. Fill out the form below and we'll get back to you soon.",
  "action": "/api/contact/submit",
  "method": "POST",
  "progressBar": {
    "show": true,
    "showStepNumbers": true
  },
  "successRedirect": "/",
  "successMessage": {
    "title": "Message Sent!",
    "message": "Thank you for contacting us. We'll get back to you soon!",
    "duration": 5000
  },
  "enableEnterKey": true,
  "hideSidebarToggle": true,
  "containerClass": "w-full max-w-4xl mx-auto px-4 sm:px-6 lg:px-8",
  "defaultButtons": {
    "next": {
      "text": "Next",
      "variant": "secondary",
      "size": "xl",
      "icon": "arrow-right",
      "iconPosition": "right"
    },
    "prev": {
      "text": "Back",
      "variant": "anchor",
      "size": "xl",
      "icon": "arrow-left",
      "iconPosition": "left"
    },
    "submit": {
      "text": "Send Message",
      "variant": "primary",
      "size": "xl",
      "icon": "send",
      "iconPosition": "right"
    }
  },
  "steps": [
    {
      "step": 1,
      "title": "What's your name?",
      "layout": "grid-2",
      "fields": [
        {
          "name": "firstName",
          "type": "text",
          "placeholder": "John",
          "required": true,
          "autocomplete": "given-name",
          "errorMessage": "Please enter your first name",
          "autofocus": true
        },
        {
          "name": "lastName",
          "type": "text",
          "placeholder": "Doe",
          "required": true,
          "autocomplete": "family-name",
          "errorMessage": "Please enter your last name"
        }
      ]
    },
    {
      "step": 2,
      "title": "Your email?",
      "fields": [
        {
          "name": "email",
          "type": "email",
          "placeholder": "your.email@example.com",
          "required": true,
          "autocomplete": "email",
          "errorMessage": "Please enter a valid email address"
        }
      ]
    },
    {
      "step": 3,
      "title": "Your phone?",
      "subtitle": "Optional - for faster response",
      "fields": [
        {
          "name": "phone",
          "type": "tel",
          "placeholder": "(555) 123-4567",
          "required": false,
          "autocomplete": "tel"
        }
      ],
      "buttons": {
        "next": {
          "text": "Next / Skip"
        }
      }
    },
    {
      "step": 4,
      "title": "Your company?",
      "fields": [
        {
          "name": "company",
          "type": "text",
          "placeholder": "Acme Corporation",
          "required": true,
          "autocomplete": "organization",
          "errorMessage": "Please enter your company name"
        }
      ]
    },
    {
      "step": 5,
      "title": "Project address?",
      "subtitle": "Optional - helps us provide more accurate information",
      "fields": [
        {
          "name": "address",
          "type": "address-search",
          "placeholder": "Start typing your address...",
          "required": false,
          "componentProps": {
            "fetchApiEndpoint": "/api/google/places-autocomplete",
            "apiParams": {
              "types": "address",
              "components": "country:us",
              "locationBias": "circle:100@42.3601,-71.0589"
            },
            "valueField": "description",
            "labelField": "description",
            "noResultsText": "Type to search addresses..."
          }
        }
      ],
      "buttons": {
        "next": {
          "text": "Next / Skip"
        }
      }
    },
    {
      "step": 6,
      "title": "Your message?",
      "fields": [
        {
          "name": "message",
          "type": "textarea",
          "placeholder": "Tell us how we can help you...",
          "required": true,
          "rows": 6,
          "errorMessage": "Please enter your message"
        }
      ]
    }
  ]
}
