{
  "id": "example-registration-form",
  "title": "Create Your Account",
  "action": "/api/auth/register",
  "method": "POST",
  "progressBar": {
    "show": true,
    "showStepNumbers": true
  },
  "successRedirect": "/project/dashboard",
  "successMessage": {
    "title": "Account Created!",
    "message": "Welcome! Your account has been created successfully.",
    "duration": 3000
  },
  "enableEnterKey": true,
  "containerClass": "relative w-full flex px-4 py-8 max-w-lg",
  "defaultButtons": {
    "next": {
      "variant": "secondary",
      "size": "lg"
    },
    "prev": {
      "variant": "primary",
      "size": "xl"
    },
    "submit": {
      "text": "Create Account",
      "variant": "primary",
      "size": "lg"
    }
  },
  "steps": [
    {
      "step": 1,
      "title": "Your email?",
      "icon": "envelope",
      "fields": [
        {
          "name": "email",
          "type": "email",
          "placeholder": "your.email@example.com",
          "required": true,
          "autocomplete": "email",
          "errorMessage": "Please enter a valid email address",
          "autofocus": true
        }
      ],
      "buttons": {
        "prev": {
          "text": "Login",
          "href": "/auth/login",
          "icon": "arrow-left",
          "iconPosition": "left"
        }
      }
    },
    {
      "step": 2,
      "title": "Your name?",
      "icon": "user",
      "layout": "grid-2",
      "fields": [
        {
          "name": "firstName",
          "type": "text",
          "placeholder": "John",
          "required": true,
          "autocomplete": "given-name",
          "errorMessage": "Please enter your first name"
        },
        {
          "name": "lastName",
          "type": "text",
          "placeholder": "Doe",
          "required": true,
          "autocomplete": "family-name",
          "errorMessage": "Please enter your last name"
        }
      ]
    },
    {
      "step": 3,
      "title": "Your company?",
      "icon": "building-2",
      "fields": [
        {
          "name": "companyName",
          "type": "text",
          "placeholder": "Acme Corporation",
          "required": true,
          "autocomplete": "organization",
          "errorMessage": "Please enter your company name"
        }
      ]
    },
    {
      "step": 4,
      "title": "Create a password",
      "subtitle": "Choose a secure password to protect your account",
      "icon": "lock",
      "fields": [
        {
          "name": "password",
          "type": "password",
          "placeholder": "Enter your password",
          "required": true,
          "minLength": 6,
          "autocomplete": "new-password",
          "errorMessage": "Password must be at least 6 characters"
        }
      ]
    },
    {
      "step": 5,
      "title": "Your digits?",
      "subtitle": "Optional - for account recovery and updates",
      "icon": "phone",
      "fields": [
        {
          "name": "phone",
          "type": "phone-sms",
          "placeholder": "(555) 123-4567",
          "required": false,
          "componentProps": {
            "showSMS": true
          }
        }
      ]
    },
    {
      "step": 6,
      "title": "Review & Submit",
      "subtitle": "Review your information and create your account",
      "icon": "check-circle",
      "fields": [
        {
          "name": "role",
          "type": "hidden",
          "defaultValue": "Client"
        }
      ]
    }
  ]
}
