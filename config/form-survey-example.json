{
  "id": "advanced-survey-form",
  "title": "Project Requirements Survey",
  "description": "Help us understand your project needs",
  "action": "/api/surveys/submit",
  "method": "POST",
  "progressBar": {
    "show": true,
    "showStepNumbers": true
  },
  "successMessage": {
    "title": "Survey Submitted!",
    "message": "Thank you for your feedback. We'll review it shortly.",
    "duration": 5000
  },
  "enableEnterKey": true,
  "steps": [
    {
      "step": 1,
      "title": "What type of project?",
      "fields": [
        {
          "name": "projectType",
          "type": "button-choice",
          "required": true,
          "options": [
            { "value": "new", "label": "New Construction" },
            { "value": "renovation", "label": "Renovation" },
            { "value": "inspection", "label": "Inspection Only" }
          ],
          "dataAttributes": {
            "data-next": "2"
          }
        }
      ]
    },
    {
      "step": 2,
      "title": "Project details",
      "layout": "grid-2",
      "fields": [
        {
          "name": "buildingType",
          "type": "select",
          "label": "Building Type",
          "placeholder": "Select building type...",
          "required": true,
          "options": [
            { "value": "residential", "label": "Residential" },
            { "value": "commercial", "label": "Commercial" },
            { "value": "industrial", "label": "Industrial" },
            { "value": "mixed", "label": "Mixed Use" }
          ]
        },
        {
          "name": "squareFootage",
          "type": "number",
          "label": "Square Footage",
          "placeholder": "5000",
          "required": true,
          "min": 1,
          "errorMessage": "Please enter the square footage"
        },
        {
          "name": "floors",
          "type": "number",
          "label": "Number of Floors",
          "placeholder": "2",
          "required": true,
          "min": 1,
          "max": 100
        },
        {
          "name": "expectedCompletion",
          "type": "date",
          "label": "Expected Completion",
          "required": false
        }
      ]
    },
    {
      "step": 3,
      "title": "Project location?",
      "fields": [
        {
          "name": "projectAddress",
          "type": "address-search",
          "placeholder": "Start typing the project address...",
          "required": true,
          "errorMessage": "Please select a valid address",
          "componentProps": {
            "fetchApiEndpoint": "/api/google/places-autocomplete",
            "apiParams": {
              "types": "address",
              "components": "country:us"
            }
          }
        }
      ]
    },
    {
      "step": 4,
      "title": "Special requirements?",
      "subtitle": "Tell us about any special considerations for your project",
      "fields": [
        {
          "name": "specialRequirements",
          "type": "textarea",
          "placeholder": "Describe any special requirements, constraints, or considerations...",
          "required": false,
          "rows": 8
        }
      ],
      "buttons": {
        "next": {
          "text": "Next / Skip"
        }
      }
    },
    {
      "step": 5,
      "title": "Your contact information",
      "layout": "grid-2",
      "fields": [
        {
          "name": "fullName",
          "type": "text",
          "label": "Full Name",
          "placeholder": "John Doe",
          "required": true,
          "colSpan": 2
        },
        {
          "name": "email",
          "type": "email",
          "label": "Email",
          "placeholder": "your.email@example.com",
          "required": true,
          "autocomplete": "email"
        },
        {
          "name": "phone",
          "type": "tel",
          "label": "Phone",
          "placeholder": "(555) 123-4567",
          "required": true,
          "autocomplete": "tel"
        },
        {
          "name": "company",
          "type": "text",
          "label": "Company",
          "placeholder": "Acme Corporation",
          "required": false,
          "autocomplete": "organization",
          "colSpan": 2
        }
      ]
    },
    {
      "step": 6,
      "title": "Preferred contact method?",
      "fields": [
        {
          "name": "contactMethod",
          "type": "button-choice",
          "required": true,
          "defaultValue": "email",
          "options": [
            { "value": "email", "label": "Email" },
            { "value": "phone", "label": "Phone" },
            { "value": "either", "label": "Either" }
          ]
        }
      ]
    }
  ]
}
