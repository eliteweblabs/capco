{
  "plugins": ["prettier-plugin-astro", "prettier-plugin-css-order"],
  "overrides": [
    {
      "files": "*.astro",
      "options": {
        "parser": "astro"
      }
    }
  ],
  "cssOrder": ["custom-properties", "dollar-variables", "declarations", "at-rules", "rules"],
  "printWidth": 100,
  "semi": true,
  "singleQuote": false,
  "tabWidth": 2,
  "trailingComma": "es5",
  "bracketSpacing": true,
  "bracketSameLine": false,
  "arrowParens": "always",
  "endOfLine": "lf",
  "useTabs": false,
  "astroAllowShorthand": true,
  "htmlWhitespaceSensitivity": "css"
}
