{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "npm run build:railway"
  },
  "deploy": {
    "startCommand": "npm run start",
    "healthcheckPath": "/",
    "healthcheckTimeout": 100,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  },
  "environment": {
    "RAILWAY_PROJECT_NAME": {
      "description": "Company name (used throughout the site)",
      "required": true,
      "default": "Fire Protection Services"
    },
    "GLOBAL_COMPANY_SLOGAN": {
      "description": "Company tagline",
      "required": false,
      "default": "Professional Fire Protection Plan Review & Approval"
    },
    "GLOBAL_COMPANY_ADDRESS": {
      "description": "Company physical address",
      "required": false,
      "default": "123 Main Street, City, ST 12345"
    },
    "GLOBAL_COMPANY_PHONE": {
      "description": "Company phone number (with country code)",
      "required": true,
      "default": "+15551234567"
    },
    "GLOBAL_COMPANY_EMAIL": {
      "description": "Company contact email",
      "required": true,
      "default": "admin@example.com"
    },
    "GLOBAL_COLOR_PRIMARY": {
      "description": "Primary brand color (hex) - Auto-generates full palette",
      "required": true,
      "default": "#825BDD"
    },
    "GLOBAL_COLOR_SECONDARY": {
      "description": "Secondary brand color (hex)",
      "required": false,
      "default": "#0ea5e9"
    },
    "FONT_FAMILY": {
      "description": "Primary font family",
      "required": false,
      "default": "Outfit Variable"
    },
    "FONT_FAMILY_FALLBACK": {
      "description": "Fallback font family",
      "required": false,
      "default": "sans-serif"
    },
    "YEAR": {
      "description": "Copyright year",
      "required": false,
      "default": "2025"
    },
    "PUBLIC_SUPABASE_URL": {
      "description": "Supabase project URL",
      "required": true,
      "placeholder": "https://xxxxx.supabase.co"
    },
    "PUBLIC_SUPABASE_ANON_KEY": {
      "description": "Supabase anonymous (public) key",
      "required": true
    },
    "SUPABASE_SERVICE_ROLE_KEY": {
      "description": "Supabase service role key (keep secret!)",
      "required": true
    },
    "PUBLIC_VAPI_API_KEY": {
      "description": "VAPI API key for voice assistant (optional)",
      "required": false
    },
    "VAPI_PHONE_NUMBER": {
      "description": "VAPI phone number (optional)",
      "required": false
    },
    "PUBLIC_VAPI_ASSISTANT_ID_CAPCO": {
      "description": "VAPI assistant ID (optional)",
      "required": false
    },
    "PUBLIC_STRIPE_PUBLISHABLE_KEY": {
      "description": "Stripe publishable key (optional)",
      "required": false
    },
    "STRIPE_SECRET_KEY": {
      "description": "Stripe secret key (optional)",
      "required": false
    },
    "RESEND_API_KEY": {
      "description": "Resend API key for email delivery",
      "required": true
    },
    "EMAIL_FROM": {
      "description": "Email sender address",
      "required": true,
      "default": "noreply@example.com"
    },
    "EMAIL_FROM_NAME": {
      "description": "Email sender name",
      "required": true,
      "default": "Fire Protection System"
    },
    "ANTHROPIC_API_KEY": {
      "description": "Anthropic API key for AI features (optional)",
      "required": false
    },
    "NODE_ENV": {
      "description": "Node environment",
      "required": true,
      "default": "production"
    }
  },
  "metadata": {
    "name": "Fire Protection System",
    "description": "White-label fire protection plan review and approval system with client/admin portal",
    "tags": ["fire-protection", "astro", "supabase", "white-label"],
    "repo": "https://github.com/yourusername/astro-supabase-main",
    "categories": ["business", "SaaS"],
    "icon": "ðŸ”¥"
  }
}
