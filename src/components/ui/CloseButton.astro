---
import SimpleIcon from "../common/SimpleIcon.astro";

export interface Props {
  tooltipText?: string;
  position?: "top" | "bottom" | "left" | "right";
  class?: string;
  ariaLabel?: string;
  onclick?: string;
  id?: string;
  type?: "button" | "submit" | "reset";
  /** @deprecated Use title (native) via tooltipText. Kept for backwards compat, ignored. */
  tooltip?: boolean;
  /** When set, button natively closes a popover (adds popovertarget + popovertargetaction="hide"). */
  popoverCloseTarget?: string;
  [key: string]: any; // Allow any data attributes
}

const {
  tooltipText = "Close",
  class: className = "",
  ariaLabel,
  onclick,
  id,
  type = "button",
  popoverCloseTarget,
  ...restProps
} = Astro.props;

const finalAriaLabel = ariaLabel || tooltipText;

// Filter out data attributes to pass to button
const dataAttributes = Object.keys(restProps)
  .filter((key) => key.startsWith("data-"))
  .reduce((acc, key) => ({ ...acc, [key]: restProps[key] }), {});
---

<button
  {type}
  class={`close-button group inline-flex h-8 w-8 items-center justify-center rounded-full transition-colors ${className}`}
  aria-label={finalAriaLabel}
  title={tooltipText}
  {...(popoverCloseTarget
    ? { popovertarget: popoverCloseTarget, popovertargetaction: "hide" }
    : {})}
  {onclick}
  {id}
  {...dataAttributes}
>
  <SimpleIcon
    name="plus"
    class="close-button-icon h-5 w-5 rotate-45 transition-colors group-hover:text-red-600 dark:group-hover:text-red-500"
  />
</button>

<style>
  .close-button:focus-visible {
    outline: 2px solid var(--primary-500);
    outline-offset: 2px;
  }

  /* Smooth transitions */
  .close-button svg {
    transition:
      color 0.2s ease,
      transform 0.2s ease;
  }

  .close-button:active svg {
    transform: rotate(45deg) scale(0.9);
  }
</style>
