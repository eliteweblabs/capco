---
interface SocialLink {
  url: string;
  label?: string;
}

interface Props {
  globalCompanyName?: string;
  isBackend?: boolean;
  globalCompanyPhone?: string;
  primaryTextClasses?: string;
  secondaryTextClasses?: string;
  globalInputClasses?: string;
  isAuthPage?: boolean;
  globalIconButtonClasses?: string;
  isAuthPageResult?: boolean;
  isContactPageResult?: boolean;
  currentUser?: any;
  hideFooter?: boolean;
  // socialNetworks?: SocialLink[];
}

const {
  globalCompanyName,
  isBackend,
  globalCompanyPhone,
  primaryTextClasses,
  secondaryTextClasses,
  globalInputClasses,
  isAuthPage,
  // socialNetworks = []
  globalIconButtonClasses,
  isAuthPageResult,
  isContactPageResult,
  currentUser,
  hideFooter = false,
} = Astro.props;

import ThemeToggle from "./ThemeToggle.astro";
import Tooltip from "./TooltipFloating.astro";
import BannerAlertsLoader from "../../features/banner-alert/components/BannerAlertsLoader.astro";
// import Socials from "./Socials.astro";
import StickyActionButton from "../../components/project/StickyActions.astro";
---

<footer
  id="reveal-footer"
  class="color-background fixed bottom-0 left-0 right-0 flex h-16 items-center justify-center border-t border-gray-200 px-4 dark:border-gray-800"
  data-app-footer
>
  <span
    class="pointer-events-none absolute inset-0 flex items-center justify-center"
    aria-hidden="true"
  >
    <span class="overscroll-scale cms-logo-mask h-12 w-full shrink-0"></span>
  </span>
  <!-- above? 
 
  class="position fixed bottom-0 left-0 right-0 flex mx-auto w-full min-w-0 gap-2 px-4 items-center justify-between -z-1 min-h-12"

  style="padding-bottom: env(safe-area-inset-bottom);" -->

  <!-- Bottom Banner Alerts (above footer) -->
  <!-- <BannerAlertsLoader position="bottom" pathname={Astro.url.pathname} {hideFooter} /> -->

  <!-- Legal Links -->

  <StickyActionButton
    {isAuthPageResult}
    {isContactPageResult}
    {currentUser}
    {isBackend}
    {primaryTextClasses}
    {secondaryTextClasses}
    {globalInputClasses}
    {globalCompanyName}
    {globalCompanyPhone}
  />

  <!-- Social Networks -->
  <!-- {socialNetworks && socialNetworks.length > 0 && (
    <Socials 
      links={socialNetworks} 
      variant="footer" 
      size="md" 
      colorScheme="default"
      gap="sm"
    />
  )} -->

  <div class="align-center hidden w-full justify-center space-x-3">
    <div class="flex flex-wrap items-center justify-center gap-4 md:justify-end">
      <!-- Certificate images temporarily disabled to fix console errors -->
      <img
        src="/img/cert-afsa.png"
        alt="AFSA Certification"
        class="h-auto w-16 max-w-[20px] object-contain grayscale md:w-20"
      />
      <img
        src="/img/cert-hfsc.jpg"
        alt="HFSC Certification"
        class="h-auto w-16 max-w-[40px] object-contain grayscale md:w-20"
      />
      <img
        src="/img/NFPA_logo.svg"
        alt="NFPA Certification"
        class="h-auto w-16 max-w-[20px] object-contain grayscale hover:grayscale-0 md:w-20"
      />
      <img
        src="/img/cert-nfsa.png"
        alt="NFSA Certification"
        class="h-auto w-16 max-w-[20px] object-contain grayscale md:w-20"
      />
      <img
        src="/img/cert-nicet.png"
        alt="NICET Certification"
        class="h-auto w-16 max-w-[20px] object-contain grayscale md:w-20"
      />
      <img
        src="/img/cert-sfpe.png"
        alt="SFPE Certification"
        class="h-auto w-16 max-w-[20px] object-contain grayscale md:w-20"
      />
    </div>
  </div>
</footer>
