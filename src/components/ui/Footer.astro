---
interface SocialLink {
  url: string;
  label?: string;
}

interface Props {
  globalCompanyName?: string;
  isBackend?: boolean;
  globalCompanyPhone?: string;
  primaryTextClasses?: string;
  secondaryTextClasses?: string;
  globalInputClasses?: string;
  isAuthPage?: boolean;
  globalIconButtonClasses?: string;
  // socialNetworks?: SocialLink[];
}

const {
  globalCompanyName,
  isBackend,
  globalCompanyPhone,
  primaryTextClasses,
  secondaryTextClasses,
  globalInputClasses,
  isAuthPage,
  // socialNetworks = []
  globalIconButtonClasses,
} = Astro.props;

import ThemeToggle from "./ThemeToggle.astro";
import Tooltip from "../../components/common/TooltipFloating.astro";
import BannerAlertsLoader from "../../features/banner-alert/components/BannerAlertsLoader.astro";
// import Socials from "./Socials.astro";
---

<footer
  class="flex mx-auto w-full min-w-0 gap-2 px-4 items-center justify-between relative min-h-12"
  style="padding-bottom: env(safe-area-inset-bottom);"
  data-app-footer
>
  <!-- Bottom Banner Alerts (above footer) -->
  <BannerAlertsLoader position="bottom" pathname={Astro.url.pathname} />
  <div>
    <ul class="align-center flex justify-center text-gray-500 dark:text-gray-400">
      <li>
        <ThemeToggle {globalIconButtonClasses} />
      </li>
      <li>
        <Tooltip
          position="right"
          text={`${new Date().getFullYear().toString()} ${globalCompanyName}. 
          All rights reserved.`}
          ><span class="me-6 no-underline hover:underline">Â©</span>
        </Tooltip>
      </li>
      <li>
        <a href="/privacy" class="me-6 no-underline hover:underline"> privacy </a>
      </li>
      <li>
        <a href="/terms" class="me-6 no-underline hover:underline"> terms </a>
      </li>
      <li>
        <a href="/cookies" class="no-underline hover:underline"> cookie </a>
      </li>
    </ul>

    <!-- Legal Links -->
  </div>

  <!-- Social Networks -->
  <!-- {socialNetworks && socialNetworks.length > 0 && (
    <Socials 
      links={socialNetworks} 
      variant="footer" 
      size="md" 
      colorScheme="default"
      gap="sm"
    />
  )} -->

  <div class="align-center justify-center space-x-3 w-full hidden">
    <div class="flex flex-wrap items-center justify-center gap-4 md:justify-end">
      <!-- Certificate images temporarily disabled to fix console errors -->
      <img
        src="/img/cert-afsa.png"
        alt="AFSA Certification"
        class="h-auto w-16 max-w-[20px] object-contain grayscale md:w-20"
      />
      <img
        src="/img/cert-hfsc.jpg"
        alt="HFSC Certification"
        class="h-auto w-16 max-w-[40px] object-contain grayscale md:w-20"
      />
      <img
        src="/img/NFPA_logo.svg"
        alt="NFPA Certification"
        class="h-auto w-16 max-w-[20px] object-contain grayscale hover:grayscale-0 md:w-20"
      />
      <img
        src="/img/cert-nfsa.png"
        alt="NFSA Certification"
        class="h-auto w-16 max-w-[20px] object-contain grayscale md:w-20"
      />
      <img
        src="/img/cert-nicet.png"
        alt="NICET Certification"
        class="h-auto w-16 max-w-[20px] object-contain grayscale md:w-20"
      />
      <img
        src="/img/cert-sfpe.png"
        alt="SFPE Certification"
        class="h-auto w-16 max-w-[20px] object-contain grayscale md:w-20"
      />
    </div>
  </div>
</footer>
