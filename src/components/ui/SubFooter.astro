---
interface SocialLink {
  url: string;
  label?: string;
}

interface Props {
  globalCompanyName?: string;
  isBackend?: boolean;
  globalCompanyPhone?: string;
  primaryTextClasses?: string;
  secondaryTextClasses?: string;
  globalInputClasses?: string;
  isAuthPage?: boolean;
  globalIconButtonClasses?: string;
  isAuthPageResult?: boolean;
  isContactPageResult?: boolean;
  currentUser?: any;
  hideFooter?: boolean;
  customFooterHtml?: string;
  socialNetworks?: SocialLink[];
}

const {
  currentUser,
  customFooterHtml,
  socialNetworks,
  globalCompanyName,
  globalCompanyPhone,
  primaryTextClasses,
  secondaryTextClasses,
  globalInputClasses,
  isAuthPage,
  isAuthPageResult,
  isContactPageResult,
