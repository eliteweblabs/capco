---
/**
 * PDF Data Extractor - standalone component for /project/new.
 * Finds form[data-project-id] in the page and allows selecting text from a PDF to fill form fields.
 */
import Dropzone from "../common/Dropzone.astro";
---

<div id="project-form-pdf-wrapper" class="flex h-full min-h-[600px] flex-col">
  <div id="project-form-pdf-guided-interface" class="mb-4 hidden">
    <div class="mb-4">
      <div class="flex items-center gap-2">
        <input
          type="text"
          id="project-form-pdf-current-field-input"
          class="flex-1 rounded-lg border border-gray-300 bg-white px-3 py-2 text-gray-900 focus:border-primary-500 focus:ring-2 focus:ring-primary-500 dark:border-gray-600 dark:bg-gray-900 dark:text-white"
          placeholder="Select Address"
        />
        <button
          id="project-form-pdf-set-field-btn"
          type="button"
          class="hidden rounded-lg bg-primary-600 px-4 py-2 font-medium text-white transition-colors hover:bg-primary-700"
        >
          Set Address
        </button>
      </div>
      <p class="mt-1 text-xs text-gray-500 dark:text-gray-400">
        Click and drag on the PDF below to select text
      </p>
    </div>
  </div>

  <div id="project-form-pdf-dropzone-container" class="mb-4">
    <Dropzone
      id="project-form-pdf-dropzone"
      accept=".pdf,.doc,.docx,.jpg,.jpeg,.png,.gif"
      maxSize={50}
      label="Drop PDF here or click to browse"
      description="Supported: PDF, DOC, DOCX, JPG, PNG, GIF"
      required={false}
    />
  </div>

  <div id="project-form-pdf-viewer-section" class="relative hidden min-h-0 flex-1">
    <button
      id="project-form-pdf-close-btn"
      type="button"
      class="absolute right-2 top-2 z-10 flex h-8 w-8 items-center justify-center rounded-full bg-red-500 text-white shadow-lg transition-colors hover:bg-red-600"
      title="Remove PDF"
    >
      <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="M6 18L18 6M6 6l12 12"></path>
      </svg>
    </button>

    <div
      class="min-h-0 overflow-y-auto rounded-md border border-gray-300 bg-gray-50 p-2 dark:border-gray-600 dark:bg-gray-900"
    >
      <div id="project-form-pdf-viewer" class="h-full w-full">
        <div class="py-8 text-center text-gray-500 dark:text-gray-400">
          <p>PDF will appear here</p>
        </div>
      </div>
    </div>
    <div
      id="project-form-pdf-selection-hint"
      class="dark:bg-primary-900/20 mt-2 hidden rounded border border-primary-200 bg-primary-50 p-2 text-sm text-primary-800 dark:border-primary-800 dark:text-primary-300"
    >
      <strong>Selection Mode:</strong> Click and drag on the PDF to select text for the focused field.
    </div>
  </div>
</div>

<script is:inline src="/js/pdf.worker.min.js" defer></script>
<script is:inline src="/js/pdf.min.js" defer></script>
<script is:inline src="/scripts/pdf-extractor-init.js" defer></script>

<style>
  #project-form-pdf-viewer-section {
    transition:
      opacity 0.3s ease-in-out,
      transform 0.3s ease-in-out;
  }
  #project-form-pdf-viewer-section:not(.hidden) {
    display: flex;
    flex-direction: column;
    flex: 1;
    min-height: 0;
  }
  #project-form-pdf-viewer {
    width: 100%;
    height: 100%;
  }
  #project-form-pdf-viewer > div {
    width: 100%;
  }
  #project-form-pdf-viewer canvas {
    max-width: 100%;
    height: auto;
  }
  #project-form-pdf-viewer .relative {
    width: 100%;
    max-width: 100%;
  }
  @media (max-width: 1023px) {
    #project-form-pdf-viewer canvas {
      width: 100% !important;
    }
  }
</style>
