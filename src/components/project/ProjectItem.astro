              <input
                type="text"
                id={`due-date-${project.id}`}
                value={
                  project?.dueDate
                    ? new Date(project.dueDate).toLocaleDateString("en-US", {
                        month: "short",
                        day: "numeric",
                        hour: "numeric",
                        hour12: true,
                      })
                    : ""
