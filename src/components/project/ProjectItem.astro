              class="align-center flex px-3 py-2 text-sm hover:bg-gray-50 dark:hover:bg-gray-800 rounded-lg"
              data-action="increment"
              data-project-id={project.id}
              onclick={`event.stopPropagation(); adjustDueDate(${project.id}, 1)`}
