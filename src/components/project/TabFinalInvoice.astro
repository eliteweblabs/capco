---
import PaymentForm from "./PaymentForm.astro";

interface Props {
  project?: any;
  currentRole?: string;
  projectId: string;
  projectStatus?: number;
  projectStatusLabel?: string;
  currentUser?: any;
  invoiceData?: any;
  totalAmount?: number;
  authorProfile?: any;
}

const {
  project,
  currentRole,
  projectId,
  authorProfile,
  projectStatus = 0,
  projectStatusLabel = "Unknown Status",
  invoiceData = null,
  totalAmount = 2000,
} = Astro.props;

const invoiceId = project?.invoice_id ?? "0";

