---
import { getI18N } from "@/i18n";

//Para cambiar idioma de textos
const { currentLocale } = Astro;
const i18n = getI18N({ currentLocale });

const {
  message = "No projects to display.",
  subtitle = "Create a new project to get started.",
  // message = "Oops, no hay datos para mostrar.",
  // subtitle = "¡Pero no te preocupes, siempre hay algo interesante esperándote!",
  imageSrc = "src/assets/img/my-notion-face-transparent.png", // Imagen predeterminada (cámbiala según prefieras)
  imageAlt = "Sin datos disponibles",
} = Astro.props;
---

<div
  class="flex flex-col items-center justify-center gap-4 rounded-full border-[1px] border-border-light px-4 py-6 text-center transition-all duration-300 hover:bg-neutral-100 hover:drop-shadow-md dark:border-border-dark dark:bg-neutral-800 hover:dark:bg-neutral-700"
>
  <!-- Imagen -->
  <img src={imageSrc} alt={imageAlt} class="h-24 w-24 object-contain" />

  <!-- Mensaje Principal -->
  <p class="dark:text-light text-sm font-medium text-black">
    {i18n.NOT_DATA.message}
  </p>

  <!-- Subtítulo -->
  <p class="text-secondary dark:text-secondary-dark text-xs">
    {i18n.NOT_DATA.message2}
  </p>
</div>
