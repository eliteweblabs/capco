---
import ProjectForm from "./ProjectForm.astro";

interface Props {
  currentUser?: any;
  project: any;
  projectStatus?: number;
  projectStatusLabel?: string;
}

const { project, projectStatus = 0, projectStatusLabel, currentUser } = Astro.props;

// Debug logging
// console.log("üìù [TabProjectForm] Component initialized:", {
  hasProject: !!project,
  projectId: project?.id,
  projectStatus,
  hasCurrentUser: !!currentUser,
  currentRole: currentUser?.profile?.role,
});
---

<div id="content-project-form" class="tab-content">
  <ProjectForm
    project={project}
    isNewProject={false}
    currentUser={currentUser}
    projectStatus={projectStatus}
  />
</div>
