                  // Show upload errors if any
                  if (uploadErrors.length > 0) {
                    console.warn("‚ö†Ô∏è Upload errors:", uploadErrors);
                    if (window.showModal) {
                      window.showModal(
                        "warning",
                        "Upload Warnings",
                        `Some images failed to upload:\n${uploadErrors.join("\n")}`
                      );
                    }
                  }
