---
/**
 * Layout: Full Width
 * Full-width page for landing pages, marketing pages, etc.
 */
interface Props {
  children: any;
  title: string;
  description: string;
  lastUpdated?: string;
  currentUser?: any;
  session?: any;
  supabase?: any;
  mainClasses?: string;
  projects?: any;
  globalCompanyName?: string;
  globalCompanySlogan?: string;
  globalCompanyAddress?: string;
  globalCompanyPhone?: string;
  globalCompanyEmail?: string;
  globalCompanyWebsite?: string;
  globalCompanyLogo?: string;
  statusData?: any;
  primaryTextClasses?: string;
  secondaryTextClasses?: string;
  globalInputClasses?: string;
  globalIconButtonClasses?: string;
  year?: string;
}

const {
  children,
  title,
  description,
  lastUpdated,
  currentUser,
  session,
  supabase,
  mainClasses = "",
  projects,
  globalCompanyName,
  globalCompanySlogan,
  globalCompanyAddress,
  globalCompanyPhone,
  globalCompanyEmail,
  globalCompanyWebsite,
  globalCompanyLogo,
  statusData,
  primaryTextClasses,
  secondaryTextClasses,
  globalInputClasses,
  globalIconButtonClasses,
  year,
} = Astro.props;

// import DotGrid from "../ui/DotGrid.astro";
import App from "../ui/App.astro";
---

<App
  {title}
  {description}
  {currentUser}
  {session}
  {supabase}
  layout="fullwidth"
  {projects}
  {globalCompanyName}
  {globalCompanySlogan}
  {globalCompanyAddress}
  {globalCompanyPhone}
  {globalCompanyEmail}
  {globalCompanyWebsite}
  {globalCompanyLogo}
  {statusData}
  {primaryTextClasses}
  {secondaryTextClasses}
  {globalInputClasses}
  {globalIconButtonClasses}
  {year}
>
  <!-- <DotGrid
    id="dotGrid"
    class="absolute inset-0 -z-10 min-h-full w-full"
    spacing="1rem"
    baseOpacity={0.35}
    dotColor="primary-500"
  /> -->
  {
    lastUpdated === "auto" && (
      <div class="dark:bg-primary-900/20 container mx-auto mb-8 rounded-lg border border-primary-200 bg-primary-50 p-6 dark:border-primary-800">
        <p class="my-0 text-primary-800 dark:text-primary-200">
          <strong>Last Updated:</strong> {new Date().toLocaleDateString()}
        </p>
      </div>
    )
  }
  <div class="mx-auto w-full">
    <slot />
  </div>
</App>
