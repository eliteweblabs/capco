---
/**
 * Layout: Full Width
 * Full-width page for dashboards, project lists, etc.
 * App fetches global data internally. Pass only page-specific: projects, statusData.
 */
interface Props {
  title: string;
  description?: string;
  lastUpdated?: string;
  mainClasses?: string;
  /** When true, apply prose typography. Defaults to true for content pages, false for backend. */
  prose?: boolean;
  projects?: any;
  statusData?: any;
  currentUser?: any;
  session?: any;
  supabase?: any;
}

const {
  title,
  description = "",
  lastUpdated,
  mainClasses = "",
  prose: proseProp,
  projects,
  statusData,
} = Astro.props;

import App from "../ui/App.astro";
import { isBackendPage } from "@/pages/api/utils/backend-page-check";

const isBackend = isBackendPage(Astro.url.pathname);
const useProse = proseProp ?? !isBackend;
---

<App {title} {description} layout="fullwidth" {mainClasses} {projects} {statusData}>
  {
    lastUpdated === "auto" && (
      <div class="dark:bg-primary-900/20 container mx-auto mb-8 rounded-lg border border-primary-200 bg-primary-50 p-6 dark:border-primary-800">
        <p class="my-0 text-primary-800 dark:text-primary-200">
          <strong>Last Updated:</strong> {new Date().toLocaleDateString()}
        </p>
      </div>
    )
  }
  <div
    class={useProse ? "prose prose-lg max-w-none dark:prose-invert mx-auto w-full" : "mx-auto w-full"}
    data-dynamic-height="minHeight"
  >
    <slot />
  </div>
</App>
