---
/**
 * Layout: Fullscreen scroll
 * Page is always 100% height (100dvh). Main content scrolls; footer stays visible at bottom.
 * App fetches global data internally.
 */
interface Props {
  title: string;
  description?: string;
  mainClasses?: string;
}

const { title, description = "", mainClasses = "" } = Astro.props;

import App from "../ui/App.astro";
---

<App {title} {description} layout="fullscreen" {mainClasses}>
  <div class="flex min-h-0 flex-col">
    <slot />
  </div>
</App>
