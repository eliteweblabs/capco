---
/**
 * Layout: Fullscreen scroll
 * Page is always 100% height (100dvh). Main content scrolls; footer stays visible at bottom.
 * Use for long forms, dashboards, or any page where you want a fixed footer and scrollable body.
 */
interface Props {
  title: string;
  description: string;
  currentUser?: any;
  session?: any;
  supabase?: any;
  /** Extra classes on the main scroll area (e.g. padding) */
  mainClasses?: string;
}

const { title, description, currentUser, session, supabase, mainClasses = "" } = Astro.props;

import App from "../ui/App.astro";
---

<App {title} {description} {currentUser} {session} {supabase} layout="fullscreen" {mainClasses}>
  <slot />
</App>
