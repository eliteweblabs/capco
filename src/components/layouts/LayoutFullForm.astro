---
/**
 * Layout: Full Form
 * Full viewport height and width for forms (e.g. MultiStepForm).
 * Uses data-dynamic-height="height" for calc(100dvh - navbar).
 * No reveal-text or typewriter effect on this template (data-template="fullform" skips them).
 */
interface Props {
  title: string;
  description?: string;
  lastUpdated?: string;
  mainClasses?: string;
  currentUser?: any;
  session?: any;
  supabase?: any;
}

const { title, description = "", mainClasses = "" } = Astro.props;

import App from "../ui/App.astro";
import PixelGrid from "../ui/PixelGrid.astro";
---

<App {title} {description} layout="fullform" {mainClasses}>
  <PixelGrid
    id="pixelGrid"
    class="absolute inset-0 -z-10"
    cellSize="0.5rem"
    baseColor="primary-500"
    initialAnimation="plasma"
    circularMask={true}
  />
  <div class="mx-auto flex h-full w-full max-w-4xl flex-col p-4 md:p-8" role="main">
    <slot />
  </div>
</App>
