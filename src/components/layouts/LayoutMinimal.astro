---
/**
 * Layout: Minimal
 * Minimal layout with no app chrome (no header, footer, sidebar)
 */
interface Props {
  children: any; // eslint-disable-line @typescript-eslint/no-explicit-any
  title: string;
  description: string;
  lastUpdated?: string;
}

const { children, title, description, lastUpdated } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
    <meta name="description" content={description} />
  </head>
  <body class="bg-white text-gray-900 dark:bg-gray-900 dark:text-gray-100">
    <div class="container mx-auto max-w-4xl px-4 py-8">
      <div class="prose prose-lg dark:prose-invert max-w-none">
        {
          lastUpdated === "auto" && (
            <div class="mb-8 rounded-lg border border-gray-200 bg-gray-50 p-6 dark:border-gray-700 dark:bg-gray-800">
              <p class="my-0 text-gray-800 dark:text-gray-200">
                <strong>Last Updated:</strong> {new Date().toLocaleDateString()}
              </p>
            </div>
          )
        }

        <slot />
      </div>
    </div>
  </body>
</html>
