---
/**
 * Layout: Minimal
 * Minimal layout with no app chrome (no header, footer, sidebar)
 */
interface Props {
  children: any;  
  title: string;
  description: string;
  lastUpdated?: string;
  currentUser?: any;
  session?: any;
  supabase?: any;
}

const { title, description, lastUpdated, currentUser, session, supabase } = Astro.props;

import App from "../ui/App.astro";
import { getSiteConfig } from "../../lib/content";

const siteConfig = await getSiteConfig();
---

<App title={`${title} - ${siteConfig.site.name}`} {description} {currentUser} {session} {supabase}>

    <div class="container mx-auto max-w-4xl px-4 py-8">
      <div class="prose prose-lg dark:prose-invert max-w-none">
        {
          lastUpdated === "auto" && (
            <div class="mb-8 rounded-lg border border-gray-200 bg-gray-50 p-6 dark:border-gray-700 dark:bg-gray-800">
              <p class="my-0 text-gray-800 dark:text-gray-200">
                <strong>Last Updated:</strong> {new Date().toLocaleDateString()}
              </p>
            </div>
          )
        }

        <slot />
      </div>
    </div>
</App>
