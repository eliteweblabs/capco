---
/**
 * Layout: Minimal
 * Minimal layout with no app chrome (no header, footer, sidebar)
 */
interface Props {
  children: any;
  title: string;
  description: string;
  lastUpdated?: string;
  currentUser?: any;
  session?: any;
  supabase?: any;
}

const { title, description, lastUpdated, currentUser, session, supabase } = Astro.props;

import App from "../ui/App.astro";
import { globalClasses } from "../../pages/api/global/global-classes";

const { globalCardStyle } = globalClasses();
---

<App {title} {description} {currentUser} {session} {supabase}>
  <div class="container mx-auto max-w-4xl px-4 py-8">
    <div>
      {
        lastUpdated === "auto" && (
          <div class={`mb-8 ${globalCardStyle} p-6`}>
            <p class="my-0 text-gray-800 dark:text-gray-200">
              <strong>Last Updated:</strong> {new Date().toLocaleDateString()}
            </p>
          </div>
        )
      }

      <slot />
    </div>
  </div>
</App>
