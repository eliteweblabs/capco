---
/**
 * Layout: Two Column
 * Full viewport height (100dvh), two equal columns, content centered x/y in both panels.
 * Flowbite + Tailwind. Use named slots "left" and "right".
 */
interface Props {
  title?: string;
  description?: string;
  /** Optional: hide footer for a true split-screen (default true for this layout) */
}

const { title = "", description = "" } = Astro.props;

import App from "../ui/App.astro";
import DotGrid from "../ui/DotGrid.astro";
---

<div
  class="grid h-[calc(100dvh-8rem)] w-full grid-cols-1 grid-rows-[1fr_1fr] md:grid-cols-2 md:grid-rows-1"
  data-dynamic-height="true"
  role="presentation"
>
  <div
    class="relative hidden min-h-0 flex-1 flex-col items-center justify-center p-4 md:flex md:p-8"
    role="region"
    aria-label="Left panel"
  >
    <!-- <DotGrid
      id="dotGrid"
      class="absolute inset-0 -z-10 min-h-full w-full"
      spacing="1rem"
      baseOpacity={0.35}
      dotColor="primary-500"
    /> -->
    <slot name="left" />
  </div>
  <div
    class="flex flex-1 flex-col items-center justify-center"
    role="region"
    aria-label="Right panel"
  >
    <slot name="right" />
  </div>
</div>
