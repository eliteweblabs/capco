---
/**
 * Layout: Two Column
 * Full viewport height (100dvh), two equal columns, content centered x/y in both panels.
 * Flowbite + Tailwind. Use named slots "left" and "right".
 */
interface Props {
  title?: string;
  description?: string;
  currentUser?: any;
  session?: any;
  supabase?: any;
  /** Optional: hide footer for a true split-screen (default true for this layout) */
  noFooter?: boolean;
}

const {
  title = "",
  description = "",
  noFooter = true,
  currentUser,
  session,
  supabase,
} = Astro.props;

import App from "../ui/App.astro";
---

<App {title} {description} {currentUser} {session} {supabase} layout="fullwidth" {noFooter}>
  <div
    class="grid grid-cols-1 md:grid-cols-2 grid-rows-[1fr_1fr] md:grid-rows-auto min-h-[100dvh] h-[100dvh] w-full"
    role="presentation"
  >
    <div
      class="h-screen hidden md:flex flex-col items-center justify-center p-4 md:p-8 text-center"
      role="region"
      aria-label="Left panel"
    >
      <slot name="left" />
    </div>
    <div
      class="h-screen flex flex-col items-center justify-center p-4 md:p-8 text-center"
      role="region"
      aria-label="Right panel"
    >
      <slot name="right" />
    </div>
  </div>
</App>
