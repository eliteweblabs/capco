 * Centers content vertically and horizontally (auth forms, etc).
 * App fetches global data internally.
 */
interface Props {
  title: string;
  description?: string;
  lastUpdated?: string;
}

const { title, description = "", lastUpdated } = Astro.props;

import App from "../ui/App.astro";
