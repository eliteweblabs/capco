---
/**
 * Layout: Centered Content
 * Centers content vertically and horizontally on the page
 */
interface Props {
  title: string;
  description: string;
  lastUpdated?: string;
  currentUser?: any;
  session?: any;
  supabase?: any;
}

const { title, description, lastUpdated, currentUser, session, supabase } = Astro.props;

import App from "../ui/App.astro";
// import DotGrid from "../ui/DotGrid.astro";
---

<App {title} {description} {currentUser} {session} {supabase} mask="center" layout="centered">
