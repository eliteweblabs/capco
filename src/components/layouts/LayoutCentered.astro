---
/**
 * Layout: Centered Content
 * Centers content vertically and horizontally on the page
 */
interface Props {
  title: string;
  description: string;
  lastUpdated?: string;
  currentUser?: any;
  session?: any;
  supabase?: any;
}

const { title, description, lastUpdated, currentUser, session, supabase } = Astro.props;

import App from "../ui/App.astro";
---

<App {title} {description} {currentUser} {session} {supabase} layout="centered" mask="center">
  <div class="px-8 md:px-12 lg:px-16 xl:px-20">
    <slot />
  </div>
</App>
