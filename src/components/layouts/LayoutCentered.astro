---
/**
 * Layout: Centered Content
 * Centers content vertically and horizontally (auth forms, etc).
 * App fetches global data internally.
 */
interface Props {
  title: string;
  description?: string;
  lastUpdated?: string;
  currentUser?: any;
  session?: any;
  supabase?: any;
}

const { title, description = "", lastUpdated } = Astro.props;

import App from "../ui/App.astro";
---

<App {title} {description} mask="center" layout="centered">
  <div
    class="flex flex-col items-center justify-center px-4 sm:px-6 md:px-8 lg:px-10"
    role="presentation"
  >
    <slot />
  </div>
</App>
