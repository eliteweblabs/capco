---
/**
 * Layout: Centered Content
 * Centers content vertically and horizontally on the page
 */
interface Props {
  title: string;
  description: string;
  lastUpdated?: string;
  currentUser?: any;
  session?: any;
  supabase?: any;
}

const { title, description, lastUpdated, currentUser, session, supabase } = Astro.props;

import App from "../ui/App.astro";
import DotGrid from "../ui/DotGrid.astro";
---

<App {title} {description} {currentUser} {session} {supabase} mask="center">
  <DotGrid
    id="dotGrid"
    class="absolute inset-0 -z-10 min-h-full w-full"
    spacing="1rem"
    baseOpacity={0.35}
    dotColor="primary-500"
  />
  <div class="px-8 md:px-12 lg:px-16 xl:px-20">
    <slot />
  </div>
</App>
