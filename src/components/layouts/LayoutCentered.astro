---
/**
 * Layout: Centered Content
 * Centers content vertically and horizontally on the page
 */
interface Props {
  title: string;
  description: string;
  lastUpdated?: string;
  currentUser?: any;
  session?: any;
  supabase?: any;
}

const { title, description, lastUpdated, currentUser, session, supabase } = Astro.props;

import App from "../ui/App.astro";
---

<App {title} {description} {currentUser} {session} {supabase} centerContent={true} mask="center">
  <slot />
</App>
