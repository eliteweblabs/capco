---
/**
 * Layout: Default
 * Standard content page with container, prose styling, and full app chrome
 */
interface Props {
  title: string;
  description: string;
  lastUpdated?: string;
  currentUser?: any;
  session?: any;
  supabase?: any;
}

const { title, description, lastUpdated, currentUser, session, supabase } = Astro.props;

import App from "../ui/App.astro";
---

<App {title} {description} {currentUser} {session} {supabase}>
  <div class="w-full mx-auto max-w-7xl px-8 sm:px-16 py-16">
    <div class="prose prose-lg dark:prose-invert max-w-none">
      {
        lastUpdated === "auto" && (
          <div class="mb-8 rounded-lg border border-primary-200 bg-primary-50 p-6 dark:border-primary-800 dark:bg-primary-900/20">
            <p class="my-0 text-primary-800 dark:text-primary-200">
              <strong>Last Updated:</strong> {new Date().toLocaleDateString()}
            </p>
          </div>
        )
      }

      <slot />
    </div>
  </div>
</App>
