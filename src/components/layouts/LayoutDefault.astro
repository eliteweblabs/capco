---
/**
 * Layout: Default
 * Standard content page with container, prose styling, and full app chrome
 */
interface Props {
  title: string;
  description: string;
  lastUpdated?: string;
  currentUser?: any;
  session?: any;
  supabase?: any;
}

const { title, description, lastUpdated, currentUser, session, supabase } = Astro.props;

import App from "../ui/App.astro";
// import DotGrid from "../ui/DotGrid.astro";
---

<App {title} {description} {currentUser} {session} {supabase} layout="default">
  <!-- <DotGrid
    id="dotGrid"
    class="absolute inset-0 -z-10 min-h-full w-full"
    spacing="1rem"
    baseOpacity={0.35}
    dotColor="primary-500"
  /> -->
  <div class="mx-auto w-full max-w-7xl px-8 py-16 sm:px-16">
    <div class="prose prose-lg max-w-none dark:prose-invert">
      {
        lastUpdated === "auto" && (
          <div class="dark:bg-primary-900/20 mb-8 rounded-lg border border-primary-200 bg-primary-50 p-6 dark:border-primary-800">
            <p class="my-0 text-primary-800 dark:text-primary-200">
              <strong>Last Updated:</strong> {new Date().toLocaleDateString()}
            </p>
          </div>
        )
      }

      <slot />
    </div>
  </div>
</App>
