      </div>

      <div data-aos="fade-up" data-aos-delay="200">
        <PhoneAndSMS
          id="step-phone"
          name="phone"
          placeholder="(555) 123-4567"
          showSMS={true}
          class="text-xl py-5 text-center"
          {globalInputClasses}
        />
      </div>

      <div class="flex justify-between gap-3" data-aos="fade-up" data-aos-delay="300">
        <Button
          type="button"
          variant="outline"
          size="lg"
          class="prev-step px-12 text-lg"
          dataAttributes={{ "data-prev": "4" }}
          icon="arrow-left"
          iconPosition="left"
        />
        <Button
          type="button"
          variant="primary"
          size="lg"
          class="next-step"
          icon="arrow-right"
          iconPosition="right"
          dataAttributes={{ "data-next": "6" }}
        />
      </div>
    </div>
  </div>

  <!-- Step 6: Review & Submit -->
