---
// AuthForm component for login
import Button from "../common/Button.astro";
import ForgotPasswordModal from "./ForgetPasswordModal.astro";

const { globalInputClasses } = Astro.props;
---

<!-- Full Screen Login -->
<div class="w-full max-w-lg px-4 py-8">
  <div class="mt-6 flex w-full flex-col gap-2">
    <Button
      type="button"
      id="google-signin-button"
      variant="outline"
      fullWidth
      class="flex items-center justify-center gap-2"
    >
      <svg
        xmlns="http://www.w3.org/2000/svg"
        class="mr-2 inline-flex h-5 w-auto"
        preserveAspectRatio="xMidYMid"
        viewBox="0 0 256 262"
      >
        <path
          fill="#4285F4"
          d="M255.878 133.451c0-10.734-.871-18.567-2.756-26.69H130.55v48.448h71.947c-1.45 12.04-9.283 30.172-26.90 42.356l-.244 1.622 38.755 30.023 2.685.268c24.659-22.774 38.875-56.282 38.875-96.027"
        ></path>
        <path
          fill="#34A853"
          d="M130.55 261.1c35.248 0 64.839-11.605 86.453-31.622l-41.196-31.913c-11.024 7.688-25.82 13.055-45.257 13.055-34.523 0-63.824-22.773-74.269-54.25l-1.531.13-40.298 31.187-.527 1.465C35.393 231.798 79.49 261.1 130.55 261.1"
        ></path>
        <path
          fill="#FBBC05"
          d="M56.281 156.37c-2.756-8.123-4.351-16.827-4.351-25.82 0-8.994 1.595-17.697 4.206-25.82l-.073-1.73L15.26 71.312l-1.335.635C5.077 89.644 0 109.517 0 130.55s5.077 40.905 13.925 58.602l42.356-32.782"
        ></path>
        <path
          fill="#EB4335"
          d="M130.55 50.479c24.514 0 41.05 10.589 50.479 19.438l36.844-35.974C195.245 12.91 165.798 0 130.55 0 79.49 0 35.393 29.301 13.925 71.947l42.211 32.783c10.59-31.477 39.891-54.251 74.414-54.251"
        ></path>
      </svg>
      Sign in with Google
    </Button>
  </div>
  <!-- </div> -->

  <div>
    <hr class="mt-14 h-0 border-t border-zinc-300 dark:border-zinc-600" />
    <p class="-mt-2.5 text-center text-xs">
      <span class="px-4 color-background">Or</span>
    </p>
  </div>

  <!-- <div class="mx-auto my-4 w-full max-w-lg md:my-8 lg:my-12"> -->
  <form
    action="/api/auth/signin"
    method="post"
    class="grid w-full grid-cols-1 gap-3 mt-14 space-y-8"
  >
    <div>
      <label for="email" class="hidden mb-1 text-sm font-medium text-gray-700 dark:text-gray-300">
        Email
      </label>
      <input
        type="email"
        name="email"
        id="email"
        placeholder="Enter your email address"
        required
        autocomplete="email"
        autofocus
        class={`${globalInputClasses} py-5 text-center`}
      />
    </div>
    <div>
      <label
        for="password"
        class="hidden mb-1 text-sm font-medium text-gray-700 dark:text-gray-300"
      >
        Password
      </label>
      <input
        id="password"
        type="password"
        name="password"
        placeholder="Enter your password"
        required
        minlength="6"
        autocomplete="current-password"
        class={`${globalInputClasses} py-5 text-center`}
      />
    </div>

    <div class="flex justify-between gap-3">
      <Button
        href="/auth/register"
        variant="primary"
        size="lg"
        class="px-0"
        icon="user-plus"
        iconPosition="left"
        iconClasses="m-0 sm:mr-2"
      >
        new
      </Button>
      <Button
        type="submit"
        variant="secondary"
        size="lg"
        icon="arrow-right"
        iconPosition="right"
        >sign in
      </Button>
    </div>
  </form>
  <div>
    <ForgotPasswordModal message="Forgot Password?" {globalInputClasses} />
  </div>
</div>

<script>
  // Use singleton Supabase client to avoid multiple instances
  import { getSupabaseClient } from "../../lib/supabase-client";

  // Extract OAuth initiation logic into a reusable function
  async function triggerGoogleOAuth(e?: Event) {
    if (e) {
      e.preventDefault();
    }

    console.log("[GOOGLE-SIGNIN] Initiating client-side OAuth...");

    // CRITICAL: Clear any stale auth state before starting new OAuth flow
    // This prevents "Invalid Refresh Token" errors from interfering with code verifier storage
    const supabaseUrl = import.meta.env.PUBLIC_SUPABASE_URL || "";
    if (supabaseUrl) {
      const supabaseProjectRef = supabaseUrl.split("//")[1].split(".")[0];
      const staleKeys = Object.keys(localStorage).filter(
        (k) => k.includes(`sb-${supabaseProjectRef}`) && !k.includes("code-verifier")
      );
      if (staleKeys.length > 0) {
        console.log("[GOOGLE-SIGNIN] Clearing stale auth state before OAuth:", staleKeys);
        staleKeys.forEach((k) => localStorage.removeItem(k));
      }
    }

    // Get singleton Supabase client (prevents multiple GoTrueClient instances)
    const supabase = getSupabaseClient();

    if (!supabase) {
      console.error("[GOOGLE-SIGNIN] Supabase configuration missing");
      if (window.showModal) {
        window.showModal(
          "error",
          "Configuration Error",
          "Supabase is not configured. Please contact support."
        );
      }
      return;
    }

    // CRITICAL: Ensure Supabase client is fully initialized before initiating OAuth
    // This ensures the code verifier will be stored properly
    await new Promise((resolve) => setTimeout(resolve, 200));

    // Get the redirect URL based on current origin
    // IMPORTANT: For Supabase PKCE flow, we MUST use /auth/callback directly (client-side)
    // The /api/auth/callback route is only for Google People API OAuth (server-side)
    // PKCE requires localStorage access which is only available client-side
    //
    // CRITICAL: The redirect URL MUST exactly match one of the URLs in Supabase's Redirect URLs list
    // For production: https://capcofire.com/auth/callback
    // For development: http://localhost:4321/auth/callback
    // Both should be in the Supabase Redirect URLs list
    const redirectUrl = `${window.location.origin}/auth/callback`;
    console.log("[GOOGLE-SIGNIN] Redirect URL:", redirectUrl);
    console.log("[GOOGLE-SIGNIN] Current origin:", window.location.origin);
    console.log("[GOOGLE-SIGNIN] Make sure this URL is in Supabase Redirect URLs list!");

    // Initiate OAuth (this will store code verifier internally in Supabase)
    // Supabase stores the code verifier in localStorage with a specific key format
    // We need to ensure it's stored before redirecting
    console.log("[GOOGLE-SIGNIN] Initiating OAuth with Supabase...");
    const { data, error } = await supabase.auth.signInWithOAuth({
      provider: "google",
      options: {
        redirectTo: redirectUrl,
        queryParams: {
          access_type: "offline",
          prompt: "consent",
          scope: "openid email profile",
        },
      },
    });

    // CRITICAL: After signInWithOAuth is called, Supabase generates and stores the code verifier
    // We need to wait for this to complete before redirecting
    // Give Supabase time to store the code verifier in its internal storage
    await new Promise((resolve) => setTimeout(resolve, 300));

    if (error) {
      console.error("[GOOGLE-SIGNIN] OAuth error:", error);
      if (window.showModal) {
        window.showModal("error", "Authentication Error", error.message);
      }
      return;
    }

    if (data?.url) {
      const supabaseUrl = import.meta.env.PUBLIC_SUPABASE_URL || "";
      if (!supabaseUrl) {
        console.error("[GOOGLE-SIGNIN] PUBLIC_SUPABASE_URL not configured");
        if (window.showModal) {
          window.showModal("error", "Configuration Error", "Supabase URL not configured");
        }
        return;
      }

      // CRITICAL: Wait for code verifier to be stored before redirecting
      // This is essential for first-time auth - without it, the callback won't have the verifier
      const supabaseProjectRef = supabaseUrl.split("//")[1].split(".")[0];
      const codeVerifierKey = `sb-${supabaseProjectRef}-auth-token-code-verifier`;

      console.log("[GOOGLE-SIGNIN] Waiting for code verifier to be stored in localStorage...");

      // Wait for code verifier with retry logic (like MultiStepRegisterForm)
      let codeVerifier = localStorage.getItem(codeVerifierKey);
      let attempts = 0;
      const maxAttempts = 20; // Increased from 10 to give more time
      const retryDelay = 100; // Check every 100ms

      while (!codeVerifier && attempts < maxAttempts) {
        await new Promise((resolve) => setTimeout(resolve, retryDelay));
        codeVerifier = localStorage.getItem(codeVerifierKey);
        attempts++;

        if (attempts % 5 === 0) {
          console.log(
            `[GOOGLE-SIGNIN] Still waiting for code verifier... (attempt ${attempts}/${maxAttempts})`
          );
        }
      }

      if (codeVerifier) {
        console.log("[GOOGLE-SIGNIN] âœ… Code verifier confirmed in localStorage, redirecting...");
        console.log(`[GOOGLE-SIGNIN] Code verifier length: ${codeVerifier.length} characters`);
      } else {
        console.error("[GOOGLE-SIGNIN] âŒ Code verifier NOT found after waiting!");
        console.error("[GOOGLE-SIGNIN] This will cause authentication to fail on callback");
        console.error(
          "[GOOGLE-SIGNIN] Available localStorage keys:",
          Object.keys(localStorage).filter(
            (k) => k.includes("supabase") || k.includes("sb-") || k.includes("auth")
          )
        );

        // Don't proceed if code verifier is missing - this will cause the callback to fail
        if (window.showModal) {
          window.showModal(
            "error",
            "Authentication Error",
            "Failed to initialize authentication. Please try again."
          );
        }
        return;
      }

      console.log("[GOOGLE-SIGNIN] Redirecting to OAuth provider...");
      console.log("[GOOGLE-SIGNIN] OAuth URL:", data.url);
      // Redirect to Google OAuth
      window.location.href = data.url;
    }
  }

  // Handle client-side OAuth for PKCE (code verifier must be stored in browser)
  function initGoogleSignIn() {
    // Check if OAuth should be auto-triggered from URL params
    const urlParams = new URLSearchParams(window.location.search);
    const provider = urlParams.get("provider");
    const oauth = urlParams.get("oauth");

    // Auto-trigger OAuth if provider and oauth params are present
    if (provider === "google" && oauth === "true") {
      console.log("[GOOGLE-SIGNIN] Auto-triggering OAuth from URL params...");
      // Remove params from URL to prevent re-triggering
      window.history.replaceState({}, document.title, window.location.pathname);
      // Trigger OAuth immediately
      triggerGoogleOAuth();
      return;
    }

    const googleSignInButton = document.getElementById("google-signin-button");
    console.log("[GOOGLE-SIGNIN] Looking for button:", googleSignInButton);

    if (googleSignInButton) {
      console.log("[GOOGLE-SIGNIN] Button found, attaching event listener");
      googleSignInButton.addEventListener("click", async (e) => {
        e.preventDefault();
        e.stopPropagation();
        console.log("[GOOGLE-SIGNIN] Button clicked!");
        await triggerGoogleOAuth(e);
      });
    } else {
      console.error("[GOOGLE-SIGNIN] Button not found! ID: google-signin-button");
      // Retry after a short delay in case DOM isn't ready
      setTimeout(() => {
        const retryButton = document.getElementById("google-signin-button");
        if (retryButton) {
          console.log("[GOOGLE-SIGNIN] Button found on retry, attaching event listener");
          retryButton.addEventListener("click", async (e) => {
            e.preventDefault();
            e.stopPropagation();
            console.log("[GOOGLE-SIGNIN] Button clicked!");
            await triggerGoogleOAuth(e);
          });
        } else {
          console.error("[GOOGLE-SIGNIN] Button still not found after retry");
        }
      }, 100);
    }
  }

  // Initialize when DOM is ready
  if (document.readyState === "loading") {
    document.addEventListener("DOMContentLoaded", () => {
      initGoogleSignIn();
      initEmailPasswordForm();
    });
  } else {
    // DOM is already ready
    initGoogleSignIn();
    initEmailPasswordForm();
  }

  // Handle email/password form submission
  function initEmailPasswordForm() {
    const loginForm = document.querySelector('form[action="/api/auth/signin"]') as HTMLFormElement;
    if (loginForm) {
      loginForm.addEventListener("submit", async (e) => {
        e.preventDefault(); // Always prevent default to handle with JavaScript
        
        const email = (loginForm.querySelector("#email") as HTMLInputElement)?.value;
        const password = (loginForm.querySelector("#password") as HTMLInputElement)?.value;

        // Basic client-side validation
        if (!email || !password) {
          if (window.showModal) {
            window.showModal("error", "Validation Error", "Please fill in all required fields.");
          } else {
            console.error("ðŸ”” [Validation Error] Please fill in all required fields.");
          }
          return;
        }

        // Show loading notification
        if (window.showModal) {
          window.showModal(
            "info",
            "Signing In...",
            "Please wait while we authenticate your account.",
            3000
          );
        } else {
          console.log("ðŸ”” [Signing In...] Please wait while we authenticate your account.");
        }

        try {
          // Submit form data via fetch
          const formData = new FormData(loginForm);
          const response = await fetch("/api/auth/signin", {
            method: "POST",
            body: formData,
          });

          if (response.redirected) {
            // Check if redirect is to login page with error
            const redirectUrl = new URL(response.url);
            if (redirectUrl.pathname === "/auth/login" && redirectUrl.searchParams.has("error")) {
              const errorType = redirectUrl.searchParams.get("error");
              let errorMessage = "Login failed. Please try again.";
              
              if (errorType === "invalid_credentials") {
                errorMessage = "Invalid email or password. Please check your credentials and try again.";
              }

              if (window.showModal) {
                window.showModal("error", "Authentication Error", errorMessage);
              } else {
                console.error("ðŸ”” [Authentication Error]", errorMessage);
              }
              return;
            }
            
            // Success - redirect to dashboard or wherever the API redirects
            window.location.href = response.url;
          } else if (!response.ok) {
            // Handle non-redirect errors
            const errorText = await response.text();
            if (window.showModal) {
              window.showModal("error", "Authentication Error", errorText || "An error occurred during sign in.");
            } else {
              console.error("ðŸ”” [Authentication Error]", errorText);
            }
          }
        } catch (error) {
          console.error("[AUTH] Error during sign in:", error);
          if (window.showModal) {
            window.showModal("error", "Connection Error", "Unable to connect to the server. Please check your internet connection and try again.");
          } else {
            console.error("ðŸ”” [Connection Error] Unable to connect to the server.");
          }
        }
      });
    }
  }
</script>
