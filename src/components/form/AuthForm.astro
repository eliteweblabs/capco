<script>
  // Use singleton Supabase client to avoid multiple instances
  import { getSupabaseClient } from "../../lib/supabase-client";

  // Handle client-side OAuth for PKCE (code verifier must be stored in browser)
  document.addEventListener("DOMContentLoaded", async () => {
    const googleSignInButton = document.getElementById("google-signin-button");

    if (googleSignInButton) {
      googleSignInButton.addEventListener("click", async (e) => {
        e.preventDefault();

        console.log("[GOOGLE-SIGNIN] Initiating client-side OAuth...");

        // Get singleton Supabase client (prevents multiple GoTrueClient instances)
        const supabase = getSupabaseClient();

        if (!supabase) {
          console.error("[GOOGLE-SIGNIN] Supabase configuration missing");
          if (window.showModal) {
            window.showModal(
              "error",
              "Configuration Error",
              "Supabase is not configured. Please contact support."
            );
          }
          return;
        }

        // Get the redirect URL based on current origin
        const redirectUrl = `${window.location.origin}/auth/callback`;
        console.log("[GOOGLE-SIGNIN] Redirect URL:", redirectUrl);

        // Initiate OAuth (this will store code verifier in localStorage)
        const { data, error } = await supabase.auth.signInWithOAuth({
          provider: "google",
          options: {
            redirectTo: redirectUrl,
            queryParams: {
              access_type: "offline",
              prompt: "consent",
              scope: "openid email profile",
            },
          },
        });

        if (error) {
          console.error("[GOOGLE-SIGNIN] OAuth error:", error);
          if (window.showModal) {
            window.showModal("error", "Authentication Error", error.message);
          }
          return;
        }

        if (data?.url) {
          // Verify code verifier is stored in localStorage before redirecting
          // This prevents race conditions where the callback page loads before storage is ready
          const supabaseUrl = import.meta.env.PUBLIC_SUPABASE_URL || "";
          if (supabaseUrl) {
            const supabaseProjectRef = supabaseUrl.split("//")[1].split(".")[0];
            const codeVerifierKey = `sb-${supabaseProjectRef}-auth-token-code-verifier`;

            // Wait for code verifier to be stored (with retry)
            let codeVerifier = localStorage.getItem(codeVerifierKey);
            let attempts = 0;
            const maxAttempts = 10;

            while (!codeVerifier && attempts < maxAttempts) {
              await new Promise((resolve) => setTimeout(resolve, 50));
              codeVerifier = localStorage.getItem(codeVerifierKey);
              attempts++;
            }

            if (codeVerifier) {
              console.log(
                "[GOOGLE-SIGNIN] Code verifier confirmed in localStorage, redirecting..."
              );
            } else {
              console.warn(
                "[GOOGLE-SIGNIN] Code verifier not found after waiting, but proceeding with redirect..."
              );
            }
          }

          console.log("[GOOGLE-SIGNIN] Redirecting to OAuth provider...");
          // Redirect to Google OAuth
          window.location.href = data.url;
        }
      });
    }

    // Handle email/password form submission
    const loginForm = document.querySelector('form[action="/api/auth/signin"]');
    if (loginForm) {
      loginForm.addEventListener("submit", (e) => {
        const email = (loginForm.querySelector("#email") as HTMLInputElement)?.value;
        const password = (loginForm.querySelector("#password") as HTMLInputElement)?.value;

        // Only validate if this is the email/password login form
        if (email !== undefined && password !== undefined) {
          // Basic client-side validation
          if (!email || !password) {
            e.preventDefault();
            if (window.showModal) {
              window.showModal("error", "Validation Error", "Please fill in all required fields.");
            } else {
              console.error("ðŸ”” [Validation Error] Please fill in all required fields.");
            }
            return;
          }
        }

        // Show loading notification for regular login
        if (window.showModal) {
          window.showModal(
            "info",
            "Signing In...",
            "Please wait while we authenticate your account.",
            3000
          );
        } else {
          console.log("ðŸ”” [Signing In...] Please wait while we authenticate your account.");
        }
      });
    }
  });
</script>
