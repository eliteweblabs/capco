<form action="/api/auth/signin" method="post" class="grid w-full grid-cols-1 gap-3 mt-14 space-y-8">
  <div data-aos="fade-up" data-aos-delay="300">
    <label for="email" class="hidden mb-1 text-sm font-medium text-gray-700 dark:text-gray-300">
      Email
    </label>
    <input
      type="email"
      name="email"
      id="email"
      placeholder="Enter your email address"
      required
      autocomplete="email"
      autofocus
      class={`${globalInputClasses} py-5 text-center`}
    />
  </div>
  <div data-aos="fade-up" data-aos-delay="450">
    <label for="password" class="hidden mb-1 text-sm font-medium text-gray-700 dark:text-gray-300">
      Password
    </label>
    <input
      id="password"
      type="password"
      name="password"
      placeholder="Enter your password"
      required
      minlength="6"
      autocomplete="current-password"
      class={`${globalInputClasses} py-5 text-center`}
    />
  </div>

  <div class="flex justify-between gap-3 aos-init" data-aos="fade-up" data-aos-delay="600">
    <Button
      href="/auth/register"
      variant="outline"
      size="lg"
      class="px-0"
      icon="user-plus"
      iconClasses="m-0 md:mr-2"
    >
      create account
    </Button>
    <Button
      type="button"
      variant="primary"
      size="lg"
      class="next-step"
      icon="arrow-right"
      iconPosition="right"
      dataAttributes={{ "data-next": "2" }}
      >sign in
    </Button>
  </div>

