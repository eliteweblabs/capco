---
interface Props {
  project: {
    id: number;
    address: string;
    description: string;
    sq_ft: number;
    new_construction: boolean;
    status: string;
    created: string;
  };
}

const { project } = Astro.props;
---

<div
  class="rounded-lg border border-gray-200 bg-white p-6 shadow-sm dark:border-gray-700 dark:bg-gray-800"
>
  <div class="flex items-start justify-between">
    <div class="flex-1">
      <h3 class="text-lg font-semibold text-gray-900 dark:text-white">
        {project.address}
      </h3>
      <p class="mt-2 text-sm text-gray-600 dark:text-gray-300">
        {project.description}
      </p>
      <div
        class="mt-4 flex items-center gap-4 text-sm text-gray-500 dark:text-gray-400"
      >
        <span class="flex items-center gap-1">
          <i class="bx bx-area bx-sm"></i>
          {project.sq_ft.toLocaleString()} sq ft
        </span>
        <span class="flex items-center gap-1">
          <i class="bx bx-building bx-sm"></i>
          {project.new_construction ? "New Construction" : "Renovation"}
        </span>
      </div>
    </div>
    <div class="ml-4">
      <span
        class={`inline-flex items-center rounded-full px-2.5 py-0.5 text-xs font-medium ${
          project.status === "Completed"
            ? "bg-green-100 text-green-800 dark:bg-green-900 dark:text-green-200"
            : project.status === "In Progress"
              ? "bg-blue-100 text-blue-800 dark:bg-blue-900 dark:text-blue-200"
              : "bg-yellow-100 text-yellow-800 dark:bg-yellow-900 dark:text-yellow-200"
        }`}
      >
        {project.status}
      </span>
    </div>
  </div>
  <div
    class="mt-4 flex items-center justify-between text-xs text-gray-500 dark:text-gray-400"
  >
    <span>Created: {new Date(project.created).toLocaleDateString()}</span>
    <button
      class="text-sky-600 hover:text-sky-500 dark:text-sky-400 dark:hover:text-sky-300"
    >
      View Details
    </button>
  </div>
</div>

