---
import Button from "../common/Button.astro";
import DeleteConfirmButton from "../ui/DeleteConfirmButton.astro";

interface Props {
  page: { id: number; slug: string };
}

const { page } = Astro.props;
---

<div class="flex items-center gap-2">
  <Button
    variant="ghost"
    size="sm"
    iconOnly
    icon="edit"
    class="edit-page-btn"
    dataAttributes={{ "data-slug": page.slug }}
    title="Edit page"
    iconClasses="mr-0"
  />
  <DeleteConfirmButton
    id={"delete-cms-page-" + page.id}
    itemType="cms-page"
    apiEndpoint="/api/cms/pages"
    deleteMethod="DELETE"
    deleteQueryParam="slug"
    onDeleteCallback="handleCmsPageDeleted"
    tooltipText={"Delete " + page.slug}
    size="sm"
    variant="icon"
    dataAttributes={{ "data-slug": page.slug }}
  />
</div>
