---
/**
 * Row actions for contact form leads table: delete only.
 */
import DeleteConfirmButton from "../ui/DeleteConfirmButton.astro";

interface Props {
  submission: { id: string | number };
}

const { submission } = Astro.props;
const id = String(submission.id);
---

<div class="flex items-center justify-end gap-1">
  <DeleteConfirmButton
    id={`delete-contact-${id}`}
    itemType="contact form lead"
    apiEndpoint="/api/contact-form-leads"
    deleteMethod="DELETE"
    deleteQueryParam="id"
    onDeleteCallback="handleContactDeleted"
    tooltipText="Delete lead"
    size="sm"
    variant="icon"
    dataAttributes={{ id }}
  />
</div>
