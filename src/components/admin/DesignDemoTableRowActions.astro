---
/**
 * Demo-only row actions for AccordionDataTable on design/style pages.
 * Renders edit + delete icons (no real delete).
 */
import SimpleIcon from "../common/SimpleIcon.astro";
import { globalClasses } from "../../pages/api/global/global-classes";

interface Props {
  item: { id: string; slug: string };
}

const { item } = Astro.props;
const { globalIconButtonClasses } = globalClasses();
---

<div class="flex items-center justify-center gap-2">
  <button
    type="button"
    class={`${globalIconButtonClasses} text-amber-500 hover:bg-amber-500/10 dark:text-amber-400`}
    title="Edit (demo)"
    aria-label="Edit"
  >
    <SimpleIcon name="edit" class="h-5 w-5" />
  </button>
  <button
    type="button"
    class={`${globalIconButtonClasses} text-red-500 hover:bg-red-500/10 dark:text-red-400`}
    title="Delete (demo)"
    aria-label="Delete"
  >
    <SimpleIcon name="trash" class="h-5 w-5" />
  </button>
</div>
