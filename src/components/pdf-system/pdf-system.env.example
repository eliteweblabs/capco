# PDF System Plugin Configuration
# Copy this file to your project root as `.env` and customize values
# Or set these as environment variables in your deployment platform

# ==========================================
# HTML Template Saving
# ==========================================
# Save HTML versions of generated PDFs for preview purposes
SAVE_HTML_TEMPLATES=true

# Directory where HTML templates are saved (relative to project root)
PDF_TEMPLATES_DIR=src/components/pdf-system/templates

# ==========================================
# Supabase Configuration
# ==========================================
# Storage bucket name for PDF files
PDF_STORAGE_BUCKET=project-media

# Database table names
PDF_TEMPLATES_TABLE=pdfTemplates
PDF_JOBS_TABLE=pdfGenerationJobs

# ==========================================
# PDF Generation Defaults
# ==========================================
# Default page size: "8.5x11", "A4", "A3", "11x17"
PDF_DEFAULT_PAGE_SIZE=8.5x11

# Default orientation: "portrait" or "landscape"
PDF_DEFAULT_ORIENTATION=portrait

# Default margins (in inches or millimeters)
PDF_MARGIN_TOP=1in
PDF_MARGIN_RIGHT=1in
PDF_MARGIN_BOTTOM=1in
PDF_MARGIN_LEFT=1in

# ==========================================
# Feature Flags
# ==========================================
# Enable PDF encryption
PDF_ENABLE_ENCRYPTION=true

# Enable HTML preview generation
PDF_ENABLE_HTML_PREVIEW=true

# Enable Google Contacts integration
PDF_ENABLE_GOOGLE_CONTACTS=true

# Enable OCR (Optical Character Recognition) for file uploads
PDF_ENABLE_OCR=true

