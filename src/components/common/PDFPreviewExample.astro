---
// Example usage of the PDFPreview component
import PDFPreview from "./PDFPreview.astro";

// Sample HTML content for demonstration
const sampleHTML = `
<!DOCTYPE html>
<html>
<head>
    <title>Sample PDF</title>
    <style>
        body { font-family: Arial, sans-serif; margin: 20px; }
        .header { background: #f0f0f0; padding: 20px; text-align: center; }
        .content { margin: 20px 0; }
    </style>
</head>
<body>
    <div class="header">
        <h1>Sample Document</h1>
        <p>This is a sample PDF preview</p>
    </div>
    <div class="content">
        <h2>Content Section</h2>
        <p>This demonstrates how the PDFPreview component works.</p>
        <p>You can use this component anywhere in your application to display PDF content.</p>
    </div>
</body>
</html>
`;
---

<div class="mx-auto max-w-4xl p-6">
  <h1 class="mb-6 text-2xl font-bold">PDF Preview Component Example</h1>

  <!-- Basic usage with zoom controls -->
  <div class="mb-8">
    <h2 class="mb-4 text-lg font-semibold">With Zoom Controls</h2>
    <PDFPreview
      htmlContent={sampleHTML}
      documentName="Sample Document"
      showZoomControls={true}
      height="500px"
    />
  </div>

  <!-- Simple preview without zoom controls -->
  <div class="mb-8">
    <h2 class="mb-4 text-lg font-semibold">Simple Preview (No Zoom Controls)</h2>
    <PDFPreview
      htmlContent={sampleHTML}
      documentName="Simple Preview"
      showZoomControls={false}
      height="400px"
    />
  </div>

  <!-- Custom styling -->
  <div class="mb-8">
    <h2 class="mb-4 text-lg font-semibold">Custom Styling</h2>
    <PDFPreview
      htmlContent={sampleHTML}
      documentName="Custom Styled Preview"
      showZoomControls={true}
      containerClass="border-2 border-blue-300 rounded-xl shadow-lg"
      iframeClass="border-0 rounded-lg"
      height="450px"
    />
  </div>
</div>

<script>
  // Example of how to interact with the PDFPreview component programmatically
  document.addEventListener("DOMContentLoaded", () => {
    // Wait for the component to be ready
    setTimeout(() => {
      if (window.PDFPreview) {
        console.log("PDFPreview component is ready");

        // Example: Set custom zoom
        // window.PDFPreview.setZoom(150);

        // Example: Fit to width
        // window.PDFPreview.fitToWidth();
      }
    }, 1000);
  });
</script>
