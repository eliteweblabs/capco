---
import SimpleIcon from "./SimpleIcon.astro";
import Button from "./Button.astro";

// Default demo content
const defaultTitle = "Professional";
const defaultDescription = "Perfect for growing businesses";
const defaultPrice = "$99/mo";
const defaultFeatures = ["10 active projects", "Priority support", "Advanced analytics", "Team collaboration"];
const defaultButtonText = "Get Started";
const defaultButtonHref = "/signup";

const { 
  title = defaultTitle, 
  description = defaultDescription, 
  price = defaultPrice, 
  features = defaultFeatures, 
  buttonText = defaultButtonText, 
  buttonHref = defaultButtonHref, 
  buttonClass 
} = Astro.props;
