  <!-- List -->
  <ul role="list" class="mb-8 space-y-4 text-left">
    {
      features.map((feature: string) => (
        <li class="flex items-center space-x-3">
          <BoxIcon name="check" class="h-5 w-5 flex-shrink-0 text-green-500 dark:text-green-400" />
          <span>{feature}</span>
