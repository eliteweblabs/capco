<div
  class="text-text dark:text-text-dark border-border-light dark:border-border-dark mx-auto flex max-w-lg flex-col rounded-lg border p-6 text-center shadow color-background xl:p-8"
>
  <h3 class="mb-4 text-2xl font-semibold text-black dark:text-white">{title}</h3>
  <p class="text-text-secondary dark:text-text-secondary-dark font-light sm:text-lg">
    {description}
  </p>
  <div class="my-8 flex items-baseline justify-center">
    <span class="mr-2 text-5xl font-extrabold text-black dark:text-white">{price}</span>
  </div>

  <!-- List -->
  <ul role="list" class="mb-8 space-y-4 text-left">
    {
      features.map((feature: string) => (
        <li class="flex items-center space-x-3">
          <SimpleIcon
            name="check"
            class="h-5 w-5 flex-shrink-0 text-green-500 dark:text-green-400"
          />
          <span>{feature}</span>
        </li>
      ))
    }
  </ul>
  <Button
    href={buttonHref}
    class="rounded-full bg-primary-600 px-5 py-2.5 text-center text-sm font-medium text-white hover:bg-primary-700 focus:ring-4 focus:ring-primary-200 dark:text-white dark:focus:ring-primary-900"
  >
    {buttonText}
  </Button>
</div>
