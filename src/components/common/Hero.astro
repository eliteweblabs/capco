---
import SectionContainer from "./SectionContainer.astro";

interface Props {
  title: string;
  description: string;
  authorProfile?: any;
  currentRole?: string;
}

const { title, description, authorProfile, currentRole } = Astro.props;
---

<SectionContainer>
  <div class="relative mx-auto">
    <div class="flex-none">
      <h1
        class="text-2xl font-medium text-hub-title dark:text-hub-title-dark"
        id="page-title"
        data-refresh
      >
        {title}
      </h1>
      <h2
        id="page-subtitle"
        class="text-hub-subtitle dark:text-hub-subtitle-dark"
        set:html={description}
      />
      {
        authorProfile?.email && (
          <p class="text-sm text-gray-500 dark:text-gray-400 mt-2">{authorProfile.email}</p>
        )
      }
      {
        authorProfile?.name && (
          <p class="text-sm text-gray-600 dark:text-gray-300 mt-1">{authorProfile.name}</p>
        )
      }
      {
        currentRole && (
          <p class="text-xs text-gray-400 dark:text-gray-500 mt-1">Role: {currentRole}</p>
        )
      }
    </div>
  </div>
</SectionContainer>
