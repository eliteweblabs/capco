---
// Hero section component

interface Props {
  title: string;
  description: string;
  primaryTextClasses?: string;
  secondaryTextClasses?: string;
  globalInputClasses?: string;
}

const { title, description, primaryTextClasses, secondaryTextClasses, globalInputClasses } =
  Astro.props;
---

<div class="col-span-12 rounded-md py-8 md:py-12 w-max-w-7xl mx-auto">
  <!-- <div class="align-center col-span-full justify-between md:flex"></div> -->
  <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
    <div class="text-center">
      <!-- Main Headline -->
      <h1 class={`${primaryTextClasses || ""} md:text-6xl sm:text-3xl text-2xl font-bold`}>
        {title}
      </h1>
      {
        description && (
          <h2
            id="page-subtitle"
            class="text-xl text-black dark:text-white mt-6"
            set:html={description}
          />

          // <h2
          //   id="page-subtitle"
          //   class={`${secondaryTextClasses || ""} mb-6 mt-6 text-xl sm:text-2xl md:text-3xl`}
          //   set:html={description}
          // />
        )
      }
    </div>
  </div>
</div>
