---
import BoxIcon from "./BoxIcon.astro";
import Button from "./Button.astro";
import SectionContainer from "./SectionContainer.astro";
// Hero section component
---

<SectionContainer>
  <!-- <section class="bg-gradient-to-br from-blue-50 to-indigo-100 py-20 pt-16"> -->
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center">
      <!-- Main Headline -->
      <h1 class="text-4xl md:text-6xl font-bold text-text-primary dark:text-text-primary-dark mb-6">
        Build, manage, and track fire protection designs effortlessly.
      </h1>

      <!-- Subheadline -->
      <p
        class="text-xl md:text-2xl text-text-secondary dark:text-text-secondary-dark mb-8 max-w-4xl mx-auto"
      >
        CAPCo powers the world's most reliable fire protection designs. We make compliance easy.
      </p>

      <!-- CTA Buttons -->
      <div class="flex flex-col sm:flex-row gap-4 justify-center items-center mb-12">
        <Button href="/contact" variant="primary" size="lg"> Get Started Free </Button>
        <Button href="/demo" variant="secondary" size="lg"> Book a Demo </Button>
      </div>

      <!-- Trust Indicators -->
      <div class="text-sm text-text-muted dark:text-text-muted mb-8">
        <p>Trusted by 500+ fire protection companies</p>
      </div>

      <!-- Hero Image/Diagram Placeholder -->
      <div
        class="bg-background-card dark:bg-background-card-dark rounded-lg shadow-xl p-8 max-w-5xl mx-auto"
      >
        <div class="text-center">
          <h3 class="text-2xl font-semibold text-text-primary dark:text-text-primary-dark mb-4">
            Fire Protection Designs Workflow
          </h3>
          <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
            <!-- Step 1 -->
            <div class="flex flex-col items-center">
              <div
                class="w-16 h-16 bg-primary-100 rounded-full flex items-center justify-center mb-4"
              >
                <BoxIcon name="file-blank" size="lg" color="#825bdd" />
              </div>
              <h4 class="font-semibold text-text-primary dark:text-text-primary-dark mb-2">
                Submit Plans
              </h4>
              <p class="text-text-secondary dark:text-text-secondary-dark text-sm">
                Clients upload fire protection system designs and documentation
              </p>
            </div>

            <!-- Step 2 -->
            <div class="flex flex-col items-center">
              <div
                class="w-16 h-16 bg-success-100 rounded-full flex items-center justify-center mb-4"
              >
                <BoxIcon name="check-square" size="lg" color="#22c55e" />
              </div>
              <h4 class="font-semibold text-text-primary dark:text-text-primary-dark mb-2">
                Review & Approve
              </h4>
              <p class="text-text-secondary dark:text-text-secondary-dark text-sm">
                Engineers generate designs for compliance and safety standards
              </p>
            </div>

            <!-- Step 3 -->
            <div class="flex flex-col items-center">
              <div
                class="w-16 h-16 bg-secondary-100 rounded-full flex items-center justify-center mb-4"
              >
                <BoxIcon name="download" size="lg" color="#0ea5e9" />
              </div>
              <h4 class="font-semibold text-text-primary dark:text-text-primary-dark mb-2">
                Deploy & Monitor
              </h4>
              <p class="text-text-secondary dark:text-text-secondary-dark text-sm">
                Track installation progress and maintain compliance records
              </p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <!-- </section> -->
</SectionContainer>
