---
// Hero section component

interface Props {
  title: string;
  description: string;
  globalPrimaryTextClasses?: string;
  globalSecondaryTextClasses?: string;
  globalInputClasses?: string;
}

const {
  title,
  description,
  globalPrimaryTextClasses,
  globalSecondaryTextClasses,
  globalInputClasses,
} = Astro.props;
---

<!-- <SectionContainer> --><!-- <section class="bg-gradient-to-br from-blue-50 to-indigo-100 py-20 pt-16"> -->
<div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
  <div class="text-center">
    <!-- Main Headline -->
    <h1 class="mb-6 text-4xl font-bold text-black dark:text-white md:text-6xl">
      {title}
    </h1>
    <h2 id="page-subtitle" class="{`${globalInputClasses}`} mb-8" set:html={description} />
  </div>
</div>
