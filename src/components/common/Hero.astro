---
// Hero section component

interface Props {
  title: string;
  description: string;
  globalPrimaryTextClasses?: string;
  globalSecondaryTextClasses?: string;
  globalInputClasses?: string;
}

const {
  title,
  description,
  globalPrimaryTextClasses,
  globalSecondaryTextClasses,
  globalInputClasses,
} = Astro.props;
---

<!-- <SectionContainer> --><!-- <section class="bg-gradient-to-br from-blue-50 to-indigo-100 py-20 pt-16"> -->
<div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
  <div class="text-center">
    <!-- Main Headline -->
    <h1 class={`${globalPrimaryTextClasses || ""} md:text-4xl mb-6 sm:text-3xl text-2xl font-bold`}>
      {title}
    </h1>
    <h2
      id="page-subtitle"
      class={`${globalSecondaryTextClasses || ""} md:text-3xl mb-6 sm:text-2xl text-xl font-bold`}
      set:html={description}
    />
  </div>
</div>
