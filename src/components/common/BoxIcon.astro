---
interface Props {
  name: string;
  class?: string;
  color?: string;
  variant?: "regular" | "solid" | "logo";
  id?: string;
  style?: string;
}

const {
  name,
  class: className = "block bx-sm",
  color = "currentColor",
  variant = "regular",
  id,
  style,
  ...rest
} = Astro.props;

const prefix = variant === "solid" ? "bxs" : variant === "logo" ? "bxl" : "bx";
const iconClass = `${prefix} ${prefix}-${name}`;
const iconStyle = style || `color: ${color};`;
---

<i class={iconClass} style={iconStyle} class:list={[className]} id={id} {...rest}></i>
