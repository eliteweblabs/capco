---
// Example of how to use the FeedbackWidget component
// This shows how to integrate it into any page

import FeedbackWidget from "./FeedbackWidget.astro";

// Example props - these would come from your page's data
const currentUser = {
  id: "user-123",
  email: "user@example.com",
};

const currentRole = "Client"; // or 'Admin'
---

<!-- Your page content here -->
<div class="min-h-screen bg-gray-50 p-8">
  <div class="mx-auto max-w-4xl">
    <h1 class="mb-8 text-3xl font-bold text-gray-900">Your App Page</h1>

    <div class="rounded-lg bg-white p-6 shadow">
      <h2 class="mb-4 text-xl font-semibold">Page Content</h2>
      <p class="text-gray-600">
        This is an example page showing how to integrate the FeedbackWidget. The feedback button
        will appear in the bottom-right corner for authenticated users.
      </p>

      <div class="mt-6 rounded-lg bg-blue-50 p-4">
        <h3 class="mb-2 font-medium text-blue-900">How to Use:</h3>
        <ol class="list-inside list-decimal space-y-1 text-blue-800">
          <li>Import the FeedbackWidget component</li>
          <li>Pass currentUser and currentRole props</li>
          <li>Place it anywhere in your page (usually at the end)</li>
          <li>The widget will only show for authenticated users</li>
        </ol>
      </div>
    </div>
  </div>
</div>

<!-- Include the FeedbackWidget -->
<FeedbackWidget currentUser={currentUser} currentRole={currentRole} />
