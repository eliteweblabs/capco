---
// Button component examples and documentation
import Button from "./Button.astro";
---

<div class="max-w-4xl mx-auto p-8 space-y-8">
  <h1 class="text-3xl font-bold text-gray-900 dark:text-white mb-8">Button Component Examples</h1>

  <!-- Basic Variants -->
  <section>
    <h2 class="text-xl font-semibold text-gray-900 dark:text-white mb-4">Basic Variants</h2>
    <div class="flex flex-wrap gap-4">
      <Button variant="primary">Primary</Button>
      <Button variant="secondary">Secondary</Button>
      <Button variant="success">Success</Button>
      <Button variant="warning">Warning</Button>
      <Button variant="danger">Danger</Button>
      <Button variant="outline">Outline</Button>
      <Button variant="ghost">Ghost</Button>
      <Button variant="link">Link</Button>
    </div>
  </section>

  <!-- Sizes -->
  <section>
    <h2 class="text-xl font-semibold text-gray-900 dark:text-white mb-4">Sizes</h2>
    <div class="flex flex-wrap items-center gap-4">
      <Button size="xs">Extra Small</Button>
      <Button size="sm">Small</Button>
      <Button size="md">Medium</Button>
      <Button size="lg">Large</Button>
      <Button size="xl">Extra Large</Button>
    </div>
  </section>

  <!-- With Icons -->
  <section>
    <h2 class="text-xl font-semibold text-gray-900 dark:text-white mb-4">With Icons</h2>
    <div class="flex flex-wrap gap-4">
      <Button icon="bx-plus" iconPosition="left">Add Item</Button>
      <Button icon="bx-edit" iconPosition="right">Edit</Button>
      <Button icon="bx-download" variant="outline">Download</Button>
      <Button icon="bx-trash" variant="danger">Delete</Button>
    </div>
  </section>

  <!-- States -->
  <section>
    <h2 class="text-xl font-semibold text-gray-900 dark:text-white mb-4">States</h2>
    <div class="flex flex-wrap gap-4">
      <Button>Normal</Button>
      <Button disabled>Disabled</Button>
      <Button loading>Loading</Button>
      <Button loading icon="bx-save">Saving...</Button>
    </div>
  </section>

  <!-- Full Width -->
  <section>
    <h2 class="text-xl font-semibold text-gray-900 dark:text-white mb-4">Full Width</h2>
    <div class="space-y-4">
      <Button fullWidth>Full Width Button</Button>
      <Button fullWidth variant="outline">Full Width Outline</Button>
    </div>
  </section>

  <!-- Links -->
  <section>
    <h2 class="text-xl font-semibold text-gray-900 dark:text-white mb-4">As Links</h2>
    <div class="flex flex-wrap gap-4">
      <Button href="/dashboard" variant="primary">Go to Dashboard</Button>
      <Button href="https://example.com" target="_blank" variant="outline">External Link</Button>
      <Button href="/pricing" icon="bx-dollar">View Pricing</Button>
    </div>
  </section>

  <!-- Form Buttons -->
  <section>
    <h2 class="text-xl font-semibold text-gray-900 dark:text-white mb-4">Form Buttons</h2>
    <form class="space-y-4">
      <div>
        <input
          type="text"
          placeholder="Enter your name"
          class="w-full rounded-md border border-gray-300 px-3 py-2 text-sm focus:border-blue-500 focus:outline-none focus:ring-1 focus:ring-blue-500 dark:border-gray-600 dark:bg-gray-700 dark:text-white dark:focus:border-blue-400"
        />
      </div>
      <div class="flex gap-4">
        <Button type="submit" variant="primary" icon="bx-save">Save</Button>
        <Button type="reset" variant="outline">Reset</Button>
        <Button type="button" variant="ghost">Cancel</Button>
      </div>
    </form>
  </section>

  <!-- Custom Classes -->
  <section>
    <h2 class="text-xl font-semibold text-gray-900 dark:text-white mb-4">Custom Classes</h2>
    <div class="flex flex-wrap gap-4">
      <Button class="bg-purple-600 hover:bg-purple-700 focus:ring-purple-500">Custom Purple</Button>
      <Button class="rounded-lg px-8">Rounded Corners</Button>
      <Button class="shadow-lg hover:shadow-xl">With Shadow</Button>
    </div>
  </section>

  <!-- Data Attributes -->
  <section>
    <h2 class="text-xl font-semibold text-gray-900 dark:text-white mb-4">With Data Attributes</h2>
    <div class="flex flex-wrap gap-4">
      <Button data-action="delete" data-id="123" variant="danger">Delete Item</Button>
      <Button data-modal="confirm" data-target="#modal">Open Modal</Button>
      <Button data-tooltip="This is a tooltip" variant="ghost">Hover for Tooltip</Button>
    </div>
  </section>

  <!-- Usage Examples -->
  <section class="bg-gray-50 dark:bg-gray-800 p-6 rounded-lg">
    <h2 class="text-xl font-semibold text-gray-900 dark:text-white mb-4">Usage Examples</h2>
    <div class="space-y-4 text-sm">
      <div>
        <h3 class="font-medium text-gray-900 dark:text-white mb-2">Basic Button:</h3>
        <code class="bg-gray-100 dark:bg-gray-700 p-2 rounded block"
          >&lt;Button&gt;Click me&lt;/Button&gt;</code
        >
      </div>
      <div>
        <h3 class="font-medium text-gray-900 dark:text-white mb-2">With Icon:</h3>
        <code class="bg-gray-100 dark:bg-gray-700 p-2 rounded block"
          >&lt;Button icon="bx-plus" iconPosition="left"&gt;Add Item&lt;/Button&gt;</code
        >
      </div>
      <div>
        <h3 class="font-medium text-gray-900 dark:text-white mb-2">As Link:</h3>
        <code class="bg-gray-100 dark:bg-gray-700 p-2 rounded block"
          >&lt;Button href="/dashboard" variant="primary"&gt;Go to Dashboard&lt;/Button&gt;</code
        >
      </div>
      <div>
        <h3 class="font-medium text-gray-900 dark:text-white mb-2">Loading State:</h3>
        <code class="bg-gray-100 dark:bg-gray-700 p-2 rounded block"
          >&lt;Button loading&gt;Saving...&lt;/Button&gt;</code
        >
      </div>
      <div>
        <h3 class="font-medium text-gray-900 dark:text-white mb-2">Full Width:</h3>
        <code class="bg-gray-100 dark:bg-gray-700 p-2 rounded block"
          >&lt;Button fullWidth variant="primary"&gt;Submit Form&lt;/Button&gt;</code
        >
      </div>
      <div>
        <h3 class="font-medium text-gray-900 dark:text-white mb-2">Default Rounded Full:</h3>
        <code class="bg-gray-100 dark:bg-gray-700 p-2 rounded block"
          >&lt;Button variant="primary"&gt;All buttons are rounded-full by default&lt;/Button&gt;</code
        >
      </div>
    </div>
  </section>
</div>
