---
const { class: className } = Astro.props;
---

<button
  class=`${className} aria-label="button-hero" text-muted hover:text-primary rounded-full border-[1px] size-9 flex items-center justify-center 
  border-border-light 
  dark:border-border-dark 
  hover:drop-shadow-md 
  hover:bg-neutral-100 hover:dark:bg-neutral-700 dark:text-muted
  dark:hover:text-primary-dark`
  {...Astro.props}
>
  <slot />
</button>

