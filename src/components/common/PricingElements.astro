---
// Pricing elements component
import SimpleIcon from "./SimpleIcon.astro";
import Button from "./Button.astro";
import { globalClasses } from "../../pages/api/global/global-classes";

const { globalCardStyle } = globalClasses();
---

<div class="pricing-elements">
  <!-- Pricing cards will go here -->
  <div class="grid grid-cols-1 gap-8 md:grid-cols-3">
    <!-- Basic Plan -->
    <div
      class={`pricing-card ${globalCardStyle} p-6`}
    >
      <div class="text-center">
        <h3 class="mb-2 text-xl font-semibold text-gray-900 dark:text-white">Basic</h3>
        <div class="mb-4 text-3xl font-bold text-gray-900 dark:text-white">
          $99<span class="text-lg text-gray-500">/month</span>
        </div>
        <p class="mb-6 text-gray-600 dark:text-gray-400">Perfect for small projects</p>
      </div>

      <ul class="mb-8 space-y-3">
        <li class="flex items-center text-gray-600 dark:text-gray-400">
          <SimpleIcon name="check" class="mr-3 h-5 w-5 text-green-500" />
          Up to 5 projects
        </li>
        <li class="flex items-center text-gray-600 dark:text-gray-400">
          <SimpleIcon name="check" class="mr-3 h-5 w-5 text-green-500" />
          Basic support
        </li>
        <li class="flex items-center text-gray-600 dark:text-gray-400">
          <SimpleIcon name="check" class="mr-3 h-5 w-5 text-green-500" />
          Standard templates
        </li>
      </ul>

      <Button variant="outline" class="w-full"> Get Started </Button>
    </div>

    <!-- Pro Plan -->
    <div
      class="pricing-card color-background relative rounded-lg border-2 border-red-500 bg-gray-100 p-6"
    >
      <div class="absolute -top-3 left-1/2 -translate-x-1/2 transform">
        <span class="rounded-full bg-red-500 px-3 py-1 text-sm font-medium text-white">
          Most Popular
        </span>
      </div>

      <div class="text-center">
        <h3 class="mb-2 text-xl font-semibold text-gray-900 dark:text-white">Pro</h3>
        <div class="mb-4 text-3xl font-bold text-gray-900 dark:text-white">
          $199<span class="text-lg text-gray-500">/month</span>
        </div>
        <p class="mb-6 text-gray-600 dark:text-gray-400">Best for growing businesses</p>
      </div>

      <ul class="mb-8 space-y-3">
        <li class="flex items-center text-gray-600 dark:text-gray-400">
          <SimpleIcon name="check" class="mr-3 h-5 w-5 text-green-500" />
          Up to 25 projects
        </li>
        <li class="flex items-center text-gray-600 dark:text-gray-400">
          <SimpleIcon name="check" class="mr-3 h-5 w-5 text-green-500" />
          Priority support
        </li>
        <li class="flex items-center text-gray-600 dark:text-gray-400">
          <SimpleIcon name="check" class="mr-3 h-5 w-5 text-green-500" />
          Advanced templates
        </li>
        <li class="flex items-center text-gray-600 dark:text-gray-400">
          <SimpleIcon name="check" class="mr-3 h-5 w-5 text-green-500" />
          Custom branding
        </li>
      </ul>

      <Button variant="primary" class="w-full"> Get Started </Button>
    </div>

    <!-- Enterprise Plan -->
    <div
      class={`pricing-card ${globalCardStyle} p-6`}
    >
      <div class="text-center">
        <h3 class="mb-2 text-xl font-semibold text-gray-900 dark:text-white">Enterprise</h3>
        <div class="mb-4 text-3xl font-bold text-gray-900 dark:text-white">
          $499<span class="text-lg text-gray-500">/month</span>
        </div>
        <p class="mb-6 text-gray-600 dark:text-gray-400">For large organizations</p>
      </div>

      <ul class="mb-8 space-y-3">
        <li class="flex items-center text-gray-600 dark:text-gray-400">
          <SimpleIcon name="check" class="mr-3 h-5 w-5 text-green-500" />
          Unlimited projects
        </li>
        <li class="flex items-center text-gray-600 dark:text-gray-400">
          <SimpleIcon name="check" class="mr-3 h-5 w-5 text-green-500" />
          24/7 support
        </li>
        <li class="flex items-center text-gray-600 dark:text-gray-400">
          <SimpleIcon name="check" class="mr-3 h-5 w-5 text-green-500" />
          Custom integrations
        </li>
        <li class="flex items-center text-gray-600 dark:text-gray-400">
          <SimpleIcon name="check" class="mr-3 h-5 w-5 text-green-500" />
          Dedicated account manager
        </li>
      </ul>

      <Button variant="outline" class="w-full"> Contact Sales </Button>
    </div>
  </div>
</div>
