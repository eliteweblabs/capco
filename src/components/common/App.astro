          }
          return;
        }

        // Show confirmation modal with action buttons
        if ((window as any).showModal) {
          (window as any).showModal(
            "error",
            "Delete Project",
            "Are you sure you want to delete this project? This action cannot be undone.",
            6000000, // 6000 seconds timeout
            [
