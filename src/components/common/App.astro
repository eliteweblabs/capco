      // Global utility function to convert camelCase to Proper Case
      (window as any).camelToProper = (str: string): string => {
        if (!str) return "";

        // Handle special cases first
        const specialCases: { [key: string]: string } = {
          id: "ID",
          url: "URL",
          api: "API",
          sms: "SMS",
          email: "Email",
          phone: "Phone",
          status: "Status",
          project: "Project",
