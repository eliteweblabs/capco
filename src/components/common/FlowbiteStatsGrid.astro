---
// Flowbite Stats Grid Component
// Grid layout for multiple stats cards

import FlowbiteStatsCard from "./FlowbiteStatsCard.astro";

interface Props {
  stats: Array<{
    title: string;
    value: string | number;
    change?: {
      value: string;
      type: "increase" | "decrease";
    };
    icon?: string;
    color?: "blue" | "green" | "yellow" | "red" | "purple" | "indigo";
  }>;
  columns?: 1 | 2 | 3 | 4;
}

const { stats = [], columns = 4 } = Astro.props;

const gridClasses = {
  1: "grid-cols-1",
  2: "grid-cols-1 md:grid-cols-2",
  3: "grid-cols-1 md:grid-cols-2 lg:grid-cols-3",
  4: "grid-cols-1 md:grid-cols-2 lg:grid-cols-4",
};
---

<div class={`grid gap-6 ${gridClasses[columns]}`}>
  {
    stats.map((stat, index) => (
      <FlowbiteStatsCard
        title={stat.title}
        value={stat.value}
        change={stat.change}
        icon={stat.icon}
        color={stat.color}
      />
    ))
  }
</div>
