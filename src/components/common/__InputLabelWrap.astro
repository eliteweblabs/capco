---
/**
 * Label wrapper for form inputs. Use with globalInputClasses.
 * Props: id, label, show (boolean), required (optional)
 */
import { globalClasses } from "../../pages/api/global/global-classes";

const { globalFormLabel } = globalClasses();

interface Props {
  id: string;
  label: string;
  show?: boolean;
  required?: boolean;
}

const { id, label, show = true, required = false } = Astro.props;
---

{show && (
  <div class="mb-4">
    <label for={id} class={globalFormLabel}>
      {label}
      {required && <span class="text-red-500"> *</span>}
    </label>
    <slot />
  </div>
)}
