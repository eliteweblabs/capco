---
// Cal.com Booking Component
// This component integrates with Cal.com for real appointment booking

interface Props {
  currentUser?: any;
}

const { currentUser } = Astro.props;

// Create slug from company name
function slugify(text: string): string {
  return text
    .toString()
    .toLowerCase()
    .trim()
    .replace(/\s+/g, "-") // Replace spaces with -
    .replace(/[^\w\-]+/g, "") // Remove all non-word chars
    .replace(/\-\-+/g, "-") // Replace multiple - with single -
    .replace(/^-+/, "") // Trim - from start of text
    .replace(/-+$/, ""); // Trim - from end of text
}

// Get calLink from company name or default to 'capco'
const companySlug = currentUser?.profile?.companyName
  ? slugify(currentUser.profile.companyName)
  : "capco";
---

<!-- Cal.com Booking Section -->
<div class="border-border-light dark:border-border-dark rounded-lg border p-6 dark:bg-gray-800">
  <div class="flex items-center space-x-3 mb-6">
    <div
      class="w-10 h-10 bg-green-100 dark:bg-green-900 rounded-full flex items-center justify-center"
    >
      <svg
        class="w-5 h-5 text-green-600 dark:text-green-400"
        fill="none"
        stroke="currentColor"
        viewBox="0 0 24 24"
      >
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"
        ></path>
      </svg>
    </div>
    <div>
      <h3 class="text-lg font-semibold text-gray-900 dark:text-white">Schedule Your Demo</h3>
      <p class="text-sm text-gray-600 dark:text-gray-400">
        Choose a convenient time for your personalized demo
      </p>
    </div>
  </div>

  <p class="text-sm text-gray-600 dark:text-gray-400 mb-6">
    Select your preferred time slot from available appointments. We'll send you a calendar invite
    and meeting details.
  </p>

  <!-- Cal.com Embed Container -->
  <div id="cal-com-embed" class="min-h-[600px]" data-cal-link={`${companySlug}/30min`}>
    <div class="flex items-center justify-center h-64 bg-gray-50 dark:bg-gray-700 rounded-lg">
      <div class="animate-spin rounded-full h-8 w-8 border-b-2 border-green-600 mx-auto mb-4"></div>
      <p class="text-gray-600 dark:text-gray-400 ml-3">Loading calendar...</p>
    </div>
  </div>
</div>

<!-- Alternative Contact Methods -->
<div class="mt-6 grid grid-cols-1 gap-4 sm:grid-cols-2">
  <div class="border-border-light dark:border-border-dark rounded-lg border p-4 dark:bg-gray-800">
    <div class="flex items-center space-x-3">
      <div
        class="w-8 h-8 bg-blue-100 dark:bg-blue-900 rounded-full flex items-center justify-center"
      >
        <svg
          class="w-4 h-4 text-blue-600 dark:text-blue-400"
          fill="none"
          stroke="currentColor"
          viewBox="0 0 24 24"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"
          ></path>
        </svg>
      </div>
      <div>
        <h4 class="text-sm font-medium text-gray-900 dark:text-white">Call Us</h4>
        <p class="text-xs text-gray-600 dark:text-gray-400">Speak with our AI assistant</p>
      </div>
    </div>
    <p class="text-sm text-gray-600 dark:text-gray-400 mt-2">
      Call <strong>+1 (555) 123-4567</strong> to book with our voice assistant
    </p>
  </div>

  <div class="border-border-light dark:border-border-dark rounded-lg border p-4 dark:bg-gray-800">
    <div class="flex items-center space-x-3">
      <div
        class="w-8 h-8 bg-purple-100 dark:bg-purple-900 rounded-full flex items-center justify-center"
      >
        <svg
          class="w-4 h-4 text-purple-600 dark:text-purple-400"
          fill="none"
          stroke="currentColor"
          viewBox="0 0 24 24"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"
          ></path>
        </svg>
      </div>
      <div>
        <h4 class="text-sm font-medium text-gray-900 dark:text-white">Email Us</h4>
        <p class="text-xs text-gray-600 dark:text-gray-400">Send us a message</p>
      </div>
    </div>
    <p class="text-sm text-gray-600 dark:text-gray-400 mt-2">
      Email <strong>support@capcofire.com</strong> for assistance
    </p>
  </div>
</div>

<script>
  document.addEventListener("DOMContentLoaded", function () {
    const calEmbedContainer = document.getElementById("cal-com-embed");

    if (!calEmbedContainer) {
      console.error("Cal.com embed container not found");
      return;
    }

    // Get calLink from data attribute
    const calLink = calEmbedContainer.getAttribute("data-cal-link") || "capco/30min";

    // Cal.com configuration
    const calConfig = {
      calLink: calLink,
      layout: "month_view",
      theme: "light", // or "dark" based on user preference
      branding: {
        brandColor: "#825BDD", // Your brand color
        hideEventTypeDetails: false,
        hideLandingPageDetails: false,
      },
      // Self-hosted Cal.com instance
      baseUrl: "https://calcom-web-app-production-0b16.up.railway.app",
      // Optional: Pre-fill form data if user is logged in
      prefill: {
        name:
          (window as any).currentUser?.profile?.firstName +
            " " +
            (window as any).currentUser?.profile?.lastName || "",
        email: (window as any).currentUser?.email || "",
        company: (window as any).currentUser?.profile?.companyName || "",
      },
    };

    // Load Cal.com embed - using direct iframe approach for self-hosted instances
    function loadCalComEmbed() {
      console.log("üîß Loading Cal.com embed via iframe method");
      initializeCalEmbed();
    }

    function initializeCalEmbed() {
      try {
        // Clear loading state
        if (calEmbedContainer) {
          calEmbedContainer.innerHTML = "";
        }

        // Use direct iframe approach for self-hosted Cal.com instances
        console.log("üîß Creating Cal.com iframe embed");

        const iframe = document.createElement("iframe");
        iframe.src = `${calConfig.baseUrl}/${calConfig.calLink}?embed=true&layout=${calConfig.layout}&theme=${calConfig.theme}`;
        iframe.style.width = "100%";
        iframe.style.height = "600px";
        iframe.style.border = "none";
        iframe.style.borderRadius = "8px";
        iframe.allow = "camera; microphone; geolocation";
        iframe.sandbox =
          "allow-same-origin allow-scripts allow-forms allow-popups allow-popups-to-escape-sandbox";

        // Add loading state
        iframe.onload = () => {
          console.log("‚úÖ Cal.com iframe loaded successfully");
        };

        iframe.onerror = () => {
          console.error("‚ùå Failed to load Cal.com iframe");
          showFallbackBooking();
        };

        calEmbedContainer?.appendChild(iframe);
        console.log("‚úÖ Cal.com iframe embed initialized");
      } catch (error) {
        console.error("‚ùå Error initializing Cal.com embed:", error);
        showFallbackBooking();
      }
    }

    function showFallbackBooking() {
      if (calEmbedContainer) {
        calEmbedContainer.innerHTML = `
        <div class="text-center py-12">
          <div class="w-16 h-16 bg-red-100 dark:bg-red-900 rounded-full flex items-center justify-center mx-auto mb-4">
            <svg class="w-8 h-8 text-red-600 dark:text-red-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-2.5L13.732 4c-.77-.833-1.732-.833-2.5 0L4.268 19.5c-.77.833.192 2.5 1.732 2.5z"></path>
            </svg>
          </div>
          <h3 class="text-lg font-medium text-gray-900 dark:text-white mb-2">Calendar Unavailable</h3>
          <p class="text-gray-600 dark:text-gray-400 mb-4">We're having trouble loading our booking calendar.</p>
          <div class="space-y-2">
            <p class="text-sm text-gray-600 dark:text-gray-400">
              Please contact us directly to schedule your demo:
            </p>
            <div class="flex flex-col sm:flex-row gap-2 justify-center">
              <a href="mailto:support@capcofire.com" 
                 class="inline-flex items-center px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition-colors">
                üìß Email Us
              </a>
              <a href="tel:+1-555-0123" 
                 class="inline-flex items-center px-4 py-2 bg-green-600 text-white rounded-lg hover:bg-green-700 transition-colors">
                üìû Call Us
              </a>
            </div>
          </div>
        </div>
      `;
      }
    }

    // Start loading Cal.com embed
    loadCalComEmbed();
  });
</script>
