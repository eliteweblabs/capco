---
// Simple preloader component
---

<div id="preloader" class="fixed inset-0 z-50 flex items-center justify-center bg-white dark:bg-gray-900">
  <div class="flex flex-col items-center space-y-4">
    <!-- Spinning loader -->
    <div class="relative">
      <div class="w-12 h-12 border-4 border-gray-200 border-t-red-600 rounded-full animate-spin"></div>
    </div>
    
    <!-- Loading text -->
    <p class="text-sm text-gray-600 dark:text-gray-400">Loading...</p>
  </div>
</div>

<script>
  // Hide preloader when page is loaded
  window.addEventListener('load', function() {
    const preloader = document.getElementById('preloader');
    if (preloader) {
      preloader.style.opacity = '0';
      setTimeout(() => {
        preloader.style.display = 'none';
      }, 300);
    }
  });
</script>

<style>
  #preloader {
    transition: opacity 0.3s ease-out;
  }
</style>
