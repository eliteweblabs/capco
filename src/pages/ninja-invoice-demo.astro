---
// Ninja Invoice Integration Demo Page
import { checkAuth } from "../lib/auth";
import App from "../components/common/App.astro";
import NinjaInvoiceIntegration from "../components/project/NinjaInvoiceIntegration.astro";

const { currentUser, isAuth } = await checkAuth(Astro.cookies);

if (!currentUser || !isAuth) {
  return Astro.redirect("/auth/login");
}

// Mock project data for demo
const projectData = {
  id: "123",
  title: "Fire Protection System Installation",
  address: "123 Main St, Anytown, USA",
  description:
    "Complete fire protection system installation including sprinklers, alarms, and suppression systems",
  authorProfile: {
    companyName: "ABC Construction Co.",
    email: "contact@abcconstruction.com",
    phone: "(555) 123-4567",
  },
};
---

<App title="Ninja Invoice Integration Demo">
  <div class="min-h-screen bg-gray-50 dark:bg-gray-900 py-8">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <!-- Header -->
      <div class="mb-8">
        <h1 class="text-3xl font-bold text-gray-900 dark:text-white">Ninja Invoice Integration</h1>
        <p class="mt-2 text-gray-600 dark:text-gray-400">
          Automatic invoice creation and management with Ninja Invoice
        </p>
      </div>

      <!-- Integration Status -->
      <div class="mb-8 bg-white dark:bg-gray-800 rounded-lg shadow p-6">
        <h2 class="text-xl font-semibold text-gray-900 dark:text-white mb-4">Integration Status</h2>
        <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
          <div class="flex items-center space-x-3">
            <div class="w-3 h-3 bg-green-500 rounded-full"></div>
            <span class="text-sm text-gray-600 dark:text-gray-400">Database Tables</span>
          </div>
          <div class="flex items-center space-x-3">
            <div class="w-3 h-3 bg-green-500 rounded-full"></div>
            <span class="text-sm text-gray-600 dark:text-gray-400">API Endpoints</span>
          </div>
          <div class="flex items-center space-x-3">
            <div class="w-3 h-3 bg-yellow-500 rounded-full"></div>
            <span class="text-sm text-gray-600 dark:text-gray-400">Ninja Invoice API</span>
          </div>
        </div>
      </div>

      <!-- Features -->
      <div class="mb-8 bg-white dark:bg-gray-800 rounded-lg shadow p-6">
        <h2 class="text-xl font-semibold text-gray-900 dark:text-white mb-4">Features</h2>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          <div>
            <h3 class="text-lg font-medium text-gray-900 dark:text-white mb-2">
              ✅ Automatic Invoice Creation
            </h3>
            <p class="text-gray-600 dark:text-gray-400 text-sm">
              Automatically creates invoices in Ninja Invoice from project data with pre-configured
              line items for fire protection systems.
            </p>
          </div>
          <div>
            <h3 class="text-lg font-medium text-gray-900 dark:text-white mb-2">
              ✅ Iframe Integration
            </h3>
            <p class="text-gray-600 dark:text-gray-400 text-sm">
              Seamless iframe integration with Ninja Invoice for full invoice management
              capabilities.
            </p>
          </div>
          <div>
            <h3 class="text-lg font-medium text-gray-900 dark:text-white mb-2">✅ Database Sync</h3>
            <p class="text-gray-600 dark:text-gray-400 text-sm">
              Keeps track of invoice references and status in your local database for reporting and
              analytics.
            </p>
          </div>
          <div>
            <h3 class="text-lg font-medium text-gray-900 dark:text-white mb-2">✅ Admin Access</h3>
            <p class="text-gray-600 dark:text-gray-400 text-sm">
              Direct access to Ninja Invoice admin panel from the sidebar navigation.
            </p>
          </div>
        </div>
      </div>

      <!-- Demo Integration -->
      <div class="bg-white dark:bg-gray-800 rounded-lg shadow">
        <div class="p-6 border-b border-gray-200 dark:border-gray-700">
          <h2 class="text-xl font-semibold text-gray-900 dark:text-white mb-2">
            Live Integration Demo
          </h2>
          <p class="text-gray-600 dark:text-gray-400">
            This demonstrates the Ninja Invoice integration with a sample project.
          </p>
        </div>

        <div class="p-6">
          <NinjaInvoiceIntegration projectId={projectData.id} {projectData} {currentUser} />
        </div>
      </div>

      <!-- Setup Instructions -->
      <div class="mt-8 bg-blue-50 dark:bg-blue-900/20 rounded-lg p-6">
        <h2 class="text-xl font-semibold text-blue-900 dark:text-blue-100 mb-4">
          Setup Instructions
        </h2>
        <div class="space-y-4 text-sm text-blue-800 dark:text-blue-200">
          <div>
            <strong>1. Database Setup:</strong> Run the SQL script to create the necessary tables:
            <code class="block mt-1 p-2 bg-blue-100 dark:bg-blue-800 rounded text-xs">
              sql-queriers/create_ninja_invoice_tables.sql
            </code>
          </div>
          <div>
            <strong>2. Environment Variables:</strong> Add these to your .env file:
            <code class="block mt-1 p-2 bg-blue-100 dark:bg-blue-800 rounded text-xs">
              NINJA_INVOICE_URL=https://your-ninja-invoice-instance.com<br />
              NINJA_INVOICE_API_URL=https://your-ninja-invoice-instance.com/api<br />
              NINJA_INVOICE_API_KEY=your_api_key_here
            </code>
          </div>
          <div>
            <strong>3. Ninja Invoice Admin:</strong> Access the admin panel via the sidebar link or directly
            at:
            <code class="block mt-1 p-2 bg-blue-100 dark:bg-blue-800 rounded text-xs">
              https://your-ninja-invoice-instance.com/admin
            </code>
          </div>
        </div>
      </div>
    </div>
  </div>
</App>
