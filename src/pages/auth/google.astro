---
/**
 * Blank test page for Google sign-in. Nothing but the button.
 * If this works, the flow is correct. No App, no forms, no other scripts.
 */
import "../../styles/global.css";
import GoogleSignInButton from "../../components/auth/GoogleSignInButton.astro";

const redirectTo = Astro.url.searchParams.get("redirect") || "/project/dashboard";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Sign in with Google</title>
    <link rel="icon" type="image/svg+xml" href="/api/favicon.svg" />
  </head>
  <body class="flex min-h-dvh items-center justify-center bg-gray-50 dark:bg-gray-900">
    <GoogleSignInButton redirect={redirectTo} />
  </body>
</html>
