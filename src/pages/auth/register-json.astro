---
// Test page for JSON-based multi-step registration form
import LayoutDefault from "../../components/layouts/LayoutDefault.astro";
import MultiStepForm from "../../components/form/MultiStepForm.astro";
import { registerFormConfig } from "../../lib/forms/register-form-config";
import App from "@/components/ui/App.astro";
---

<App
  centerContent={true}
  mask="center"
  title="Register (JSON Config)"
  description="New registration form using JSON configuration"
>
  <div class="min-h-screen flex items-center justify-center py-12 px-4">
    <div class="w-full max-w-lg">
      <MultiStepForm config={registerFormConfig} />
    </div>
  </div>
</App>
