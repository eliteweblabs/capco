---

<App
  title="Analytics Dashboard - CAPCo Fire Protection"
  description="Real-time website analytics and insights for capcofire.com"
  {currentUser}
  {session}
  {supabase}
  isBackend={true}
>
  <!-- Main Content -->
  <div class="max-w-7xl mx-auto py-6 sm:px-6 lg:px-8">
    <!-- Header -->
    <div class="mb-8">
      <h2 class="text-2xl font-bold text-gray-900 dark:text-white">
        CAPCo Fire Protection Analytics
      </h2>
      <p class="mt-2 text-gray-600 dark:text-gray-400">Real-time website analytics and insights</p>
    </div>

    <!-- Browser Compatibility Notice -->
    <div
      class="mb-6 bg-yellow-50 dark:bg-yellow-900/20 border border-yellow-200 dark:border-yellow-800 rounded-lg p-4"
    >
      <div class="flex">
        <div class="flex-shrink-0">
          <svg class="h-5 w-5 text-yellow-400" fill="currentColor" viewBox="0 0 20 20">
            <path
              fill-rule="evenodd"
              d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z"
              clip-rule="evenodd"></path>
          </svg>
        </div>
        <div class="ml-3">
          <h3 class="text-sm font-medium text-yellow-800 dark:text-yellow-200">
            Browser Compatibility Notice
          </h3>
          <div class="mt-2 text-sm text-yellow-700 dark:text-yellow-300">
            <p>
              If you're using Firefox or have strict security settings, the analytics dashboard may
              be blocked.
              <a
                href="https://plausible-analytics-ce-production-6fd8.up.railway.app/capcofire.com"
                target="_blank"
                rel="noopener noreferrer"
                class="font-medium underline hover:text-yellow-600 dark:hover:text-yellow-400"
              >
                Click here to open analytics in a new tab
              </a>.
            </p>
          </div>
        </div>
      </div>
    </div>

    <!-- Dashboard Container -->
    <div class="bg-white dark:bg-gray-800 rounded-lg shadow-sm border dark:border-gray-700">
      <div class="p-6">
        <div class="mb-4">
          <h3 class="text-lg font-medium text-gray-900 dark:text-white">Plausible Analytics</h3>
          <p class="text-sm text-gray-500 dark:text-gray-400">
            Live analytics data for capcofire.com
          </p>
        </div>

        <!-- Plausible iframe with fallback -->
        <div class="relative">
          <iframe
            src="https://plausible-analytics-ce-production-6fd8.up.railway.app/capcofire.com"
            class="w-full h-[800px] border-0 rounded-lg"
            title="Plausible Analytics Dashboard"
            loading="lazy"
            onerror="showFallback()"
            sandbox="allow-same-origin allow-scripts allow-forms allow-popups"
          >
          </iframe>
          
          <!-- Fallback content for browsers that block iframes -->
          <div id="analytics-fallback" class="flex flex-col items-center justify-center h-[800px] bg-gray-50 dark:bg-gray-700 rounded-lg p-8" style="display: none;">
            <div class="text-center">
              <svg class="mx-auto h-12 w-12 text-gray-400 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path>
              </svg>
              <h3 class="text-lg font-medium text-gray-900 dark:text-white mb-2">Analytics Dashboard</h3>
              <p class="text-gray-600 dark:text-gray-400 mb-4">
                Your browser is blocking the embedded analytics dashboard for security reasons.
              </p>
              <a
                href="https://plausible-analytics-ce-production-6fd8.up.railway.app/capcofire.com"
                target="_blank" 
                rel="noopener noreferrer" 
                class="inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500"
              >
                <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"></path>
                </svg>
                Open Analytics Dashboard
              </a>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Quick Stats Cards -->
    <div class="mt-8 grid grid-cols-1 md:grid-cols-3 gap-6">
      <div class="bg-white dark:bg-gray-800 rounded-lg shadow-sm border dark:border-gray-700 p-6">
        <div class="flex items-center">
          <div class="flex-shrink-0">
            <div
              class="w-8 h-8 bg-blue-100 dark:bg-blue-900 rounded-md flex items-center justify-center"
            >
              <svg
                class="w-5 h-5 text-blue-600 dark:text-blue-400"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"
                ></path>
              </svg>
            </div>
          </div>
          <div class="ml-4">
            <p class="text-sm font-medium text-gray-500 dark:text-gray-400">Page Views</p>
            <p class="text-2xl font-semibold text-gray-900 dark:text-white">Live Data</p>
          </div>
        </div>
      </div>

      <div class="bg-white dark:bg-gray-800 rounded-lg shadow-sm border dark:border-gray-700 p-6">
        <div class="flex items-center">
          <div class="flex-shrink-0">
            <div
              class="w-8 h-8 bg-green-100 dark:bg-green-900 rounded-md flex items-center justify-center"
            >
              <svg
                class="w-5 h-5 text-green-600 dark:text-green-400"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"
                ></path>
              </svg>
            </div>
          </div>
          <div class="ml-4">
            <p class="text-sm font-medium text-gray-500 dark:text-gray-400">Unique Visitors</p>
            <p class="text-2xl font-semibold text-gray-900 dark:text-white">Live Data</p>
          </div>
        </div>
      </div>

      <div class="bg-white dark:bg-gray-800 rounded-lg shadow-sm border dark:border-gray-700 p-6">
        <div class="flex items-center">
          <div class="flex-shrink-0">
            <div
              class="w-8 h-8 bg-purple-100 dark:bg-purple-900 rounded-md flex items-center justify-center"
            >
              <svg
                class="w-5 h-5 text-purple-600 dark:text-purple-400"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"
                ></path>
              </svg>
            </div>
          </div>
          <div class="ml-4">
            <p class="text-sm font-medium text-gray-500 dark:text-gray-400">Bounce Rate</p>
            <p class="text-2xl font-semibold text-gray-900 dark:text-white">Live Data</p>
          </div>
        </div>
      </div>
    </div>

    <!-- Additional Info -->
    <div
      class="mt-8 bg-blue-50 dark:bg-blue-900/20 border border-blue-200 dark:border-blue-800 rounded-lg p-6"
    >
      <div class="flex">
        <div class="flex-shrink-0">
          <svg class="h-5 w-5 text-blue-400" fill="currentColor" viewBox="0 0 20 20">
            <path
              fill-rule="evenodd"
              d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z"
              clip-rule="evenodd"></path>
          </svg>
        </div>
        <div class="ml-3">
          <h3 class="text-sm font-medium text-blue-800 dark:text-blue-200">
            Analytics Information
          </h3>
          <div class="mt-2 text-sm text-blue-700 dark:text-blue-300">
            <p>
              This dashboard shows real-time analytics for capcofire.com using Plausible Analytics.
            </p>
            <p class="mt-1">
              The iframe above displays live data including page views, unique visitors, top pages,
              and more.
            </p>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Plausible Analytics Script -->
  <script
    defer
    data-domain="capcofire.com"
    src="https://plausible-analytics-ce-production-6fd8.up.railway.app/js/script.file-downloads.hash.outbound-links.pageview-props.revenue.tagged-events.js"
  ></script>
  <script>
    // @ts-ignore
    (window as any).plausible =
      (window as any).plausible ||
      function () {
      // @ts-ignore
      ((window as any).plausible.q = (window as any).plausible.q || []).push(arguments);
      };

    // Handle iframe blocking
    function showFallback() {
      console.log("Analytics iframe blocked by browser security");
      const iframe = document.querySelector('iframe[src*="plausible-analytics"]') as HTMLIFrameElement;
      if (iframe) {
        iframe.style.display = 'none';
        const fallback = document.getElementById('analytics-fallback');
        if (fallback) {
          (fallback as HTMLElement).style.display = 'block';
        }
      }
    }

    // Check if iframe loads successfully
    document.addEventListener("DOMContentLoaded", function () {
      const iframe = document.querySelector('iframe[src*="plausible-analytics"]');
      if (iframe) {
        iframe.addEventListener("load", function () {
          console.log("Analytics iframe loaded successfully");
        });

        iframe.addEventListener("error", function () {
          console.log("Analytics iframe failed to load - browser blocking detected");
          showFallback();
        });

        // Check if iframe is blocked after a delay
        setTimeout(() => {
          try {
            const iframeElement = iframe as HTMLIFrameElement;
            const iframeDoc = iframeElement.contentDocument || iframeElement.contentWindow?.document;
            if (!iframeDoc || iframeDoc.body.innerHTML.includes('blocked') || iframeDoc.body.innerHTML.includes('X-Frame-Options')) {
              console.log('Analytics iframe appears to be blocked by X-Frame-Options');
              showFallback();
            }
          } catch (e) {
            // Cross-origin or other issues, show fallback
            console.log('Cannot access iframe content, showing fallback');
            showFallback();
          }
        }, 3000);
      }
    });
  </script>
</App>
