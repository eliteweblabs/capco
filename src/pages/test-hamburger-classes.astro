---
import Button from "../components/common/Button.astro";
import HamburgerIcon from "../components/common/Hamburger.astro";
---

<html>
  <head>
    <title>Hamburger Classes Test</title>
    <script src="https://cdn.tailwindcss.com"></script>
  </head>
  <body class="p-8">
    <h1>Testing Button Classes</h1>

    <div class="space-y-4">
      <h2>Direct Button with classes:</h2>
      <Button
        type="button"
        variant="ghost"
        size="sm"
        class="hamburger-icon block bg-red-500 md:hidden"
      >
        Test Button
      </Button>

      <h2>Hamburger Component:</h2>
      <HamburgerIcon />

      <h2>Button with data attributes:</h2>
      <Button
        type="button"
        variant="ghost"
        size="sm"
        class="test-class"
        data-drawer-target="test-drawer"
      >
        Button with Data Attrs
      </Button>
    </div>

    <script>
      // Debug: Check what classes are actually applied
      setTimeout(() => {
        const buttons = document.querySelectorAll("button");
        buttons.forEach((btn, index) => {
          console.log(`Button ${index + 1} classes:`, btn.className);
        });
      }, 100);
    </script>
  </body>
</html>
