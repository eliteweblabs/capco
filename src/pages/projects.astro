import App from "../components/common/App.astro";
import SectionContainer from "../components/common/SectionContainer.astro";
import BoxIcon from "../components/common/BoxIcon.astro";
import Button from "../components/common/Button.astro";
import { supabase } from "../lib/supabase";
import { supabaseAdmin } from "../lib/supabase-admin";

// Para cambiar idioma de textos
import { getI18N } from "../i18n";
const { currentLocale } = Astro;
const i18n = getI18N({ currentLocale });

// Fetch featured projects directly from database to avoid DNS issues
interface Project {
  id: number;
  title: string;
  address: string;
  description?: string;
  squareFootage: number | null;
  isNewConstruction: boolean | null;
  completedAt: string;
  featured: boolean;
  featured_image_url: string;
}

let featuredProjects: Project[] = [];
let error: string | null = null;

try {
  // console.log("üèóÔ∏è [PROJECTS] Fetching featured projects directly from database");

  if (supabase) {
    // Fetch projects for display (completed projects with status 220)
    const { data: projects, error: dbError } = supabaseAdmin
      ? await supabaseAdmin
          .from("projects")
          .select(
            `
          id,
          address,
          title,
          description,
          sq_ft,
          new_construction,
          status,
          created_at,
          updated_at,
          featured,
          featured_image_url
        `
          )
          // .eq("status", 220) // Only completed projects
          .not("address", "is", null) // Has address
          .eq("featured", true) // Has featured
          .neq("id", 0) // Exclude system log project
          .order("updated_at", { ascending: false })
          .limit(6)
      : await supabase
          .from("projects")
          .select(
            `
          id,
          address,
          title,
          description,
          sq_ft,
          new_construction,
          status,
          created_at,
          updated_at,
          featured,
          featured_image_url
        `
          )
          .eq("status", 220) // Only completed projects
          .not("address", "is", null) // Has address
          .eq("featured", "yes") // Has featured
          .neq("id", 0) // Exclude system log project
          .order("updated_at", { ascending: false })
          .limit(6);

    if (dbError) {
      error = "Failed to load projects from database";
      console.error("üèóÔ∏è [PROJECTS] Database error:", dbError);
    } else {
      // Transform data to match expected format
      featuredProjects = (projects || []).map((project: any) => ({
        id: project.id,
        title: project.title,
        address: project.address,
        description: project.description,
        squareFootage: project.sq_ft,
        isNewConstruction: project.new_construction,
        completedAt: project.updated_at,
        featured: project.featured,
        featured_image_url: project.featured_image_url,
      }));

      // console.log(`üèóÔ∏è [PROJECTS] Loaded ${featuredProjects.length} featured projects`);
    }
  } else {
    error = "Database connection not available";
    console.error("üèóÔ∏è [PROJECTS] Supabase client not available");
  }
} catch (fetchError) {
  error = "Failed to connect to database";
  console.error("üèóÔ∏è [PROJECTS] Fetch error:", fetchError);
}

// Helper function to format square footage
function formatSquareFootage(sqFt: number | null | undefined): string {
  if (!sqFt) return "N/A";
  return new Intl.NumberFormat().format(sqFt) + " sq ft";
}

// Helper function to format date
function formatDate(dateString: string | null | undefined): string {
  if (!dateString) return "N/A";
  return new Date(dateString).toLocaleDateString("en-US", {
    year: "numeric",
    month: "long",
    day: "numeric",
  });
}
---

<App
  title="Featured Projects - CAPCo Fire Protection"
  description="Explore our completed fire protection system projects showcasing innovative safety solutions and regulatory compliance."
>
  <!-- Header Section -->
  <SectionContainer
    class="py-16 px-6 bg-gradient-to-r from-red-50 to-orange-50 dark:from-red-900/20 dark:to-orange-900/20 mt-0"
  >
    <div class="max-w-6xl mx-auto text-center">
      <h1 class="text-4xl md:text-5xl font-bold text-gray-900 dark:text-white mb-6">
        Featured <span class="text-red-600 dark:text-red-400">Projects</span>
      </h1>
      <p class="text-xl text-secondary dark:text-secondary-dark max-w-3xl mx-auto mb-8">
        Discover our completed fire protection system installations. Each project represents our
        commitment to safety, innovation, and regulatory compliance.
      </p>

      <!-- Navigation -->
      <div class="flex justify-center gap-4">
        <Button href="/" variant="secondary" icon="home" iconPosition="left"> Home </Button>
        <Button
          href="/dashboard"
          variant="primary"
          icon="grid"
          iconPosition="left"
          class="bg-red-600 hover:bg-red-700 focus:ring-red-500"
        >
          Dashboard
        </Button>
      </div>
    </div>
  </SectionContainer>

  <!-- Projects Grid -->
  <SectionContainer class="py-16 px-6">
    <div class="max-w-7xl mx-auto">
      {
        error ? (
          <div class="text-center py-16">
            <div class="w-16 h-16 bg-red-100 dark:bg-red-900/30 rounded-full flex items-center justify-center mx-auto mb-6">
              <BoxIcon name="error-circle" class="bx-md text-red-600 dark:text-red-400" />
            </div>
            <h2 class="text-2xl font-bold text-gray-900 dark:text-white mb-4">No Projects Found</h2>
            <p class="text-secondary dark:text-secondary-dark mb-6">{error}</p>
            <Button
              onclick="window.location.reload()"
              variant="danger"
              icon="refresh"
              iconPosition="left"
            >
              Try Again
            </Button>
          </div>
        ) : featuredProjects.length === 0 ? (
          <div class="text-center py-16">
            <div class="w-16 h-16 bg-blue-100 dark:bg-blue-900/30 rounded-full flex items-center justify-center mx-auto mb-6">
              <BoxIcon name="building" class="bx-md w-8 h-8 text-blue-600 dark:text-blue-400" />
            </div>
            <h2 class="text-2xl font-bold text-gray-900 dark:text-white mb-4">
              No Featured Projects Yet
            </h2>
            <p class="text-gray-600 dark:text-gray-300 mb-6">
              We're working on exciting fire protection projects. Check back soon to see our latest
              completed work!
            </p>
            <Button href="/" variant="primary" icon="home" iconPosition="left">
              Back to Home
            </Button>
          </div>
        ) : (
          <div class="projects-container">
            <div class="text-center mb-12">
              <h2 class="text-3xl font-bold text-gray-900 dark:text-white mb-4">
                Completed Projects
              </h2>
              <p class="text-gray-600 dark:text-gray-300">
                {featuredProjects.length} featured project{featuredProjects.length !== 1 ? "s" : ""}{" "}
                showcasing our expertise
              </p>
            </div>

            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
              {featuredProjects.map((project) => (
                <div class="bg-background-card dark:bg-background-card-dark rounded-xl shadow-lg hover:shadow-xl transition-all duration-300 overflow-hidden group">
                  <div class="p-6 border-b border-border-light dark:border-border-dark">
                    <div class="flex items-start justify-between mb-4">
                      <div class="flex-1">
                        <h3 class="text-xl font-bold text-gray-900 dark:text-white mb-2 group-hover:text-red-600 dark:group-hover:text-red-400 transition-colors">
                          {project.address}
                        </h3>
                      </div>
                      <div class="w-12 h-12 bg-red-100 dark:bg-red-900/30 rounded-full flex items-center justify-center flex-shrink-0 ml-4 text-black dark:text-white">
                        <BoxIcon name="building" class="bx-md" />
                      </div>
                    </div>

                    {project.featured_image_url ? (
                      <div class="mb-3 rounded-lg overflow-hidden relative">
                        <img
                          src={project.featured_image_url}
                          alt={`Featured image for ${project.address}`}
                          class="w-full h-32 object-cover hover:scale-105 transition-transform duration-200"
                          loading="lazy"
                          referrerpolicy="strict-origin-when-cross-origin"
                          crossorigin="anonymous"
                          onerror="console.warn('Featured image failed to load:', this.src); this.style.display='none'; this.nextElementSibling.style.display='flex';"
                        />
                        <div class="w-full h-32 bg-neutral-100 dark:bg-neutral-700 flex items-center justify-center hidden">
                          <div class="text-center text-gray-400 dark:text-gray-500">
                            <BoxIcon name="image" class="h-8 w-8 mx-auto mb-2" />
                            <p class="text-xs">Image unavailable</p>
                          </div>
                        </div>
                        <div class="absolute top-2 right-2 bg-yellow-500 text-white px-2 py-1 rounded-full text-xs font-medium flex items-center gap-1">
                          <BoxIcon name="star" class="h-3 w-3" />
                          Featured
                        </div>
                      </div>
                    ) : (
                      <div class="mb-3 rounded-lg bg-neutral-100 dark:bg-neutral-700 h-32 flex items-center justify-center">
                        <div class="text-center text-gray-400 dark:text-gray-500">
                          <BoxIcon name="image" class="h-8 w-8 mx-auto mb-2" />
                          <p class="text-xs">No featured image</p>
                        </div>
                      </div>
                    )}

                    {project.description && (
                      <p class="text-sm text-gray-600 dark:text-gray-400 line-clamp-3">
                        {project.description}
                      </p>
                    )}
                  </div>

                  <div class="p-6 space-y-4">
                    <div class="grid grid-cols-2 gap-4">
                      <div class="flex items-center space-x-2">
                        <BoxIcon name="expand" class="w-4 h-4 text-gray-400" />
                        <div>
                          <p class="text-xs text-gray-500 dark:text-gray-400">Size</p>
                          <p class="text-sm font-medium text-gray-900 dark:text-white">
                            {formatSquareFootage(project.squareFootage)}
                          </p>
                        </div>
                      </div>
                      <div class="flex items-center space-x-2">
                        <BoxIcon
                          name={project.isNewConstruction ? "plus-circle" : "edit"}
                          class="w-4 h-4 text-gray-400"
                        />
                        <div>
                          <p class="text-xs text-gray-500 dark:text-gray-400">Type</p>
                          <p class="text-sm font-medium text-gray-900 dark:text-white">
                            {project.isNewConstruction ? "New Construction" : "Renovation"}
                          </p>
                        </div>
                      </div>
                    </div>

                    <div class="flex items-center space-x-2 pt-2 border-t border-border-light dark:border-border-dark">
                      <BoxIcon name="calendar-check" class="w-4 h-4 text-green-500" />
                      <div>
                        <p class="text-xs text-gray-500 dark:text-gray-400">Completed</p>
                        <p class="text-sm font-medium text-gray-900 dark:text-white">
                          {formatDate(project.completedAt)}
                        </p>
                      </div>
                    </div>
                  </div>

                  <div class="px-6 py-4 bg-neutral-50 dark:bg-neutral-900/50">
                    <div class="flex items-center justify-between">
                      <div class="flex items-center space-x-2">
                        <div class="w-2 h-2 bg-green-500 rounded-full" />
                        <span class="text-sm font-medium text-green-600 dark:text-green-400">
                          Project Complete
                        </span>
                      </div>
                      <BoxIcon name="shield-check" class="w-5 h-5 text-green-500" />
                    </div>
                  </div>
                </div>
              ))}
            </div>
          </div>
        )
      }
    </div>
  </SectionContainer>

  <!-- Call to Action -->
  <SectionContainer class="py-16 px-6 bg-neutral-50 dark:bg-neutral-900">
    <div class="max-w-4xl mx-auto text-center">
      <h2 class="text-3xl font-bold text-gray-900 dark:text-white mb-6">
        Ready to Start Your Fire Protection Project?
      </h2>
      <p class="text-xl text-gray-600 dark:text-gray-300 mb-8">
        Join our satisfied clients and ensure your building meets all safety requirements with our
        expert fire protection services.
      </p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <Button
          href="/login"
          variant="primary"
          size="lg"
          icon="plus-circle"
          iconPosition="left"
          class="bg-red-600 hover:bg-red-700 focus:ring-red-500 shadow-lg hover:shadow-xl"
        >
          Start New Project
        </Button>
        <Button
          href="/login?tab=register"
          variant="secondary"
          size="lg"
          icon="user-plus"
          iconPosition="left"
        >
          Create Account
        </Button>
      </div>
    </div>
  </SectionContainer>
</App>

<style>
  .line-clamp-3 {
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>
