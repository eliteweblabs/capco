---
import App from "../components/common/App.astro";
import BookingDemo from "../components/common/BookingDemo.astro";
import Footer from "../components/common/Footer.astro";
import Hero from "../components/common/Hero.astro";

// Get auth data for conditional rendering
import { checkAuth } from "../lib/auth";
const { isAuth, currentUser, currentRole, session } = await checkAuth(Astro.cookies);
---

<App
  title="Book a Demo - CAPCo Fire Protection Systems"
  description="Schedule a personalized demo of our fire protection system management platform. See how we can streamline your workflow."
  requireAuth={false}
  isAuth={isAuth}
  currentUser={currentUser}
  currentRole={currentRole || "Client"}
  session={session}
>
  <Hero
    title="Book a Demo"
    description="Schedule a personalized demo of our fire protection system management platform. See how we can streamline your workflow."
  />
  <!-- Hero Section -->

  <!-- Booking Demo Section -->
  <BookingDemo />

  <!-- Footer -->
  <Footer />
</App>
