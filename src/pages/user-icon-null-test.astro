---
import UserIcon from "../components/common/UserIcon.astro";

// Test data with null/undefined users
const testUsers = [
  {
    id: "1",
    firstName: "Alice",
    lastName: "Johnson",
    email: "alice@example.com",
  },
  null, // This should be filtered out
  {
    id: "2",
    firstName: "Bob",
    lastName: "Wilson",
    email: "bob@example.com",
  },
  undefined, // This should be filtered out
  {
    id: "3",
    firstName: "Carol",
    lastName: "Davis",
    email: "carol@example.com",
  },
];

const emptyUsers = [null, undefined, null];
---

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>UserIcon Null Handling Test</title>
    <script src="https://cdn.tailwindcss.com"></script>
  </head>
  <body class="bg-gray-100 p-8">
    <div class="max-w-4xl mx-auto">
      <h1 class="text-3xl font-bold mb-8">UserIcon Null Handling Test</h1>

      <div class="bg-white p-6 rounded-lg shadow mb-8">
        <h2 class="text-xl font-semibold mb-4">Users with null/undefined values</h2>
        <p class="text-gray-600 mb-4">
          This should show only the valid users (Alice, Bob, Carol) and filter out null/undefined:
        </p>
        <UserIcon users={testUsers as any} size="md" maxDisplay={5} />
      </div>

      <div class="bg-white p-6 rounded-lg shadow mb-8">
        <h2 class="text-xl font-semibold mb-4">All null/undefined users</h2>
        <p class="text-gray-600 mb-4">This should show a fallback "?" icon:</p>
        <UserIcon users={emptyUsers as any} size="md" />
      </div>

      <div class="bg-white p-6 rounded-lg shadow">
        <h2 class="text-xl font-semibold mb-4">Empty array</h2>
        <p class="text-gray-600 mb-4">This should show a fallback "?" icon:</p>
        <UserIcon users={[]} size="md" />
      </div>
    </div>
  </body>
</html>
