---
import SimpleIcon from "../../components/common/SimpleIcon.astro";

// Get icon name and class from headers
const iconName = Astro.request.headers.get("x-icon-name") || "info";
const className = Astro.request.headers.get("x-icon-class") || "";

// Get any additional props from headers
const size = Astro.request.headers.get("x-icon-size");
const color = Astro.request.headers.get("x-icon-color");
---

<SimpleIcon name={iconName} class={className} size={size} color={color} />
