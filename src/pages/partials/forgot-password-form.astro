---
export const partial = true;
import Button from "../../components/common/Button.astro";
---

<form id="forgot-password-form" class="space-y-4">
  <div>
    <!-- Email -->
    <div>
      <label
        for="reset-email"
        class="mb-1 block text-sm font-medium text-gray-700 dark:text-gray-300"
      >
        Email <span class="text-red-500">*</span>
      </label>
      <input
        type="email"
        name="email"
        id="reset-email"
        placeholder="Enter your email address"
        required
        class="w-full rounded-md border border-gray-300 px-3 py-2 text-sm focus:border-blue-500 focus:outline-none focus:ring-1 focus:ring-blue-500 dark:border-gray-600 dark:bg-gray-700 dark:text-white dark:focus:border-blue-400"
      />
    </div>

    <div class="flex gap-3">
      <Button type="button" id="cancel-forgot" variant="outline" size="sm" class="flex-1">
        Cancel
      </Button>
      <Button type="submit" id="send-reset-link" variant="primary" size="sm" class="flex-1">
        Send Reset Link
      </Button>
    </div>
  </div>
</form>
