import FlowbiteStatsGrid from "../components/common/FlowbiteStatsGrid.astro";

const stats = [
  { title: "Total Projects", value: "1,234", change: "+12%", icon: "ðŸ“Š", color: "blue" },
  { title: "Active Users", value: "567", change: "+8%", icon: "ðŸ‘¥", color: "green" },
