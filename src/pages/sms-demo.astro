---
import App from "../components/common/App.astro";
import BoxIcon from "../components/common/BoxIcon.astro";
import SectionContainer from "../components/common/SectionContainer.astro";
import SMSForm from "../components/form/SMSForm.astro";
---

<App>
  <SectionContainer class="mx-6 flex flex-col gap-y-6">
    <div class="flex items-center justify-between">
      <h1 class="text-2xl font-bold text-gray-900 dark:text-white">SMS Notification Demo</h1>
      <a
        href="/"
        class="inline-flex items-center rounded-full bg-gray-500 px-3 py-2 text-sm font-medium text-white transition-colors hover:bg-gray-600"
      >
        <BoxIcon name="arrow-back" class="mr-2" />
        Back to Home
      </a>
    </div>

    <div class="grid grid-cols-1 gap-6 lg:grid-cols-2">
      <!-- SMS Form -->
      <div
        class="rounded-lg border border-gray-200 bg-white p-6 dark:border-gray-700 dark:bg-gray-800"
      >
        <SMSForm />
      </div>

      <!-- Information Panel -->
      <div class="space-y-6">
        <!-- How it Works -->
        <div
          class="rounded-lg border border-blue-200 bg-blue-50 p-6 dark:border-blue-700 dark:bg-blue-900/20"
        >
          <h2 class="mb-4 text-lg font-semibold text-blue-900 dark:text-blue-100">
            üì± How Email-to-SMS Works
          </h2>
          <div class="space-y-3 text-sm text-blue-800 dark:text-blue-200">
            <div class="flex items-start">
              <span class="mr-2 font-medium">1.</span>
              <span>Enter the 10-digit phone number (no spaces or dashes)</span>
            </div>
            <div class="flex items-start">
              <span class="mr-2 font-medium">2.</span>
              <span>Select the recipient's mobile carrier from the dropdown</span>
            </div>
            <div class="flex items-start">
              <span class="mr-2 font-medium">3.</span>
              <span>Type your message (keep it under 160 characters for best results)</span>
            </div>
            <div class="flex items-start">
              <span class="mr-2 font-medium">4.</span>
              <span>Our system sends an email to the carrier's SMS gateway</span>
            </div>
            <div class="flex items-start">
              <span class="mr-2 font-medium">5.</span>
              <span>The carrier converts the email to an SMS message</span>
            </div>
          </div>
        </div>

        <!-- Supported Carriers -->
        <div
          class="rounded-lg border border-gray-200 bg-gray-50 p-6 dark:border-gray-700 dark:bg-gray-800"
        >
          <h2 class="mb-4 text-lg font-semibold text-gray-900 dark:text-white">
            üè¢ Supported Carriers
          </h2>
          <div class="grid grid-cols-2 gap-2 text-sm text-gray-700 dark:text-gray-300">
            <div>‚Ä¢ AT&T</div>
            <div>‚Ä¢ Verizon</div>
            <div>‚Ä¢ T-Mobile</div>
            <div>‚Ä¢ Sprint</div>
            <div>‚Ä¢ Boost Mobile</div>
            <div>‚Ä¢ Cricket</div>
            <div>‚Ä¢ Republic Wireless</div>
            <div>‚Ä¢ US Cellular</div>
            <div>‚Ä¢ Virgin Mobile</div>
            <div>‚Ä¢ TracFone</div>
            <div>‚Ä¢ Metro PCS</div>
            <div>‚Ä¢ Fido (Canada)</div>
          </div>
          <p class="mt-4 text-xs text-gray-500 dark:text-gray-400">
            And many more! If you don't see your carrier, contact support.
          </p>
        </div>

        <!-- Use Cases -->
        <div
          class="rounded-lg border border-green-200 bg-green-50 p-6 dark:border-green-700 dark:bg-green-900/20"
        >
          <h2 class="mb-4 text-lg font-semibold text-green-900 dark:text-green-100">
            üéØ Use Cases for CAPCo
          </h2>
          <div class="space-y-2 text-sm text-green-800 dark:text-green-200">
            <div>‚Ä¢ Project status updates</div>
            <div>‚Ä¢ Inspection reminders</div>
            <div>‚Ä¢ Document submission alerts</div>
            <div>‚Ä¢ Emergency notifications</div>
            <div>‚Ä¢ Appointment confirmations</div>
            <div>‚Ä¢ Construction milestone alerts</div>
          </div>
        </div>

        <!-- Limitations -->
        <div
          class="rounded-lg border border-orange-200 bg-orange-50 p-6 dark:border-orange-700 dark:bg-orange-900/20"
        >
          <h2 class="mb-4 text-lg font-semibold text-orange-900 dark:text-orange-100">
            ‚ö†Ô∏è Limitations & Notes
          </h2>
          <div class="space-y-2 text-sm text-orange-800 dark:text-orange-200">
            <div>‚Ä¢ Delivery is not guaranteed (depends on carrier)</div>
            <div>‚Ä¢ May take several minutes to arrive</div>
            <div>‚Ä¢ Some carriers may block these messages</div>
            <div>‚Ä¢ No delivery confirmation available</div>
            <div>‚Ä¢ Messages may be truncated if too long</div>
            <div>‚Ä¢ Free but less reliable than dedicated SMS services</div>
          </div>
        </div>
      </div>
    </div>

    <!-- Example Messages -->
    <div
      class="rounded-lg border border-gray-200 bg-white p-6 dark:border-gray-700 dark:bg-gray-800"
    >
      <h2 class="mb-4 text-lg font-semibold text-gray-900 dark:text-white">üí¨ Example Messages</h2>
      <div class="grid grid-cols-1 gap-4 md:grid-cols-2 lg:grid-cols-3">
        <!-- Project Update -->
        <div
          class="rounded border border-gray-200 bg-gray-50 p-4 dark:border-gray-600 dark:bg-gray-700"
        >
          <h3 class="mb-2 font-medium text-gray-900 dark:text-white">Project Update</h3>
          <p class="text-sm text-gray-600 dark:text-gray-400">
            "CAPCo: Your fire protection system design for 123 Main St has been approved. Next:
            Installation scheduling. Project #FP-2024-001"
          </p>
        </div>

        <!-- Inspection Reminder -->
        <div
          class="rounded border border-gray-200 bg-gray-50 p-4 dark:border-gray-600 dark:bg-gray-700"
        >
          <h3 class="mb-2 font-medium text-gray-900 dark:text-white">Inspection Reminder</h3>
          <p class="text-sm text-gray-600 dark:text-gray-400">
            "CAPCo Reminder: Fire system inspection scheduled tomorrow at 2 PM. Please ensure
            building access. Call 555-0123 if issues."
          </p>
        </div>

        <!-- Emergency Alert -->
        <div
          class="rounded border border-gray-200 bg-gray-50 p-4 dark:border-gray-600 dark:bg-gray-700"
        >
          <h3 class="mb-2 font-medium text-gray-900 dark:text-white">Emergency Alert</h3>
          <p class="text-sm text-gray-600 dark:text-gray-400">
            "CAPCo URGENT: Fire system maintenance required immediately at your facility. Contact
            emergency service: 555-FIRE (3473)"
          </p>
        </div>
      </div>
    </div>
  </SectionContainer>
</App>
