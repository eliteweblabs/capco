---
import Button from "../components/common/Button.astro";
---

<html>
  <head>
    <title>Debug Hamburger</title>
    <script src="https://cdn.tailwindcss.com"></script>
  </head>
  <body class="p-8">
    <h1>Debug Hamburger Classes</h1>

    <div class="space-y-4">
      <h2>Button with hamburger-icon class:</h2>
      <Button type="button" variant="ghost" size="sm" class="hamburger-icon">
        Hamburger Test
      </Button>

      <h2>Button with custom class:</h2>
      <Button type="button" variant="ghost" size="sm" class="my-custom-class">
        Custom Class Test
      </Button>
    </div>

    <style>
      .hamburger-icon {
        @apply block rounded-md p-2 transition-colors hover:bg-gray-100 dark:hover:bg-gray-800 md:hidden;
        background-color: red !important;
      }

      .my-custom-class {
        background-color: blue !important;
      }
    </style>

    <script>
      // Debug: Check what classes are actually applied
      setTimeout(() => {
        const buttons = document.querySelectorAll("button");
        buttons.forEach((btn, index) => {
          console.log(`Button ${index + 1}:`, {
            className: btn.className,
            hasHamburgerClass: btn.classList.contains("hamburger-icon"),
            hasCustomClass: btn.classList.contains("my-custom-class"),
          });
        });
      }, 100);
    </script>
  </body>
</html>
