---
// Standalone magic link test page - no App.astro wrapper
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Magic Link Test</title>
    <style>
      /* Basic styling without external CDN */
      body {
        font-family:
          system-ui,
          -apple-system,
          sans-serif;
      }
      .bg-gray-100 {
        background-color: #f3f4f6;
      }
      .bg-white {
        background-color: white;
      }
      .p-8 {
        padding: 2rem;
      }
      .rounded-lg {
        border-radius: 0.5rem;
      }
      .shadow-md {
        box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
      }
      .w-full {
        width: 100%;
      }
      .max-w-md {
        max-width: 28rem;
      }
      .text-2xl {
        font-size: 1.5rem;
      }
      .font-bold {
        font-weight: 700;
      }
      .mb-6 {
        margin-bottom: 1.5rem;
      }
      .text-center {
        text-align: center;
      }
      .space-y-4 > * + * {
        margin-top: 1rem;
      }
      .block {
        display: block;
      }
      .text-sm {
        font-size: 0.875rem;
      }
      .font-medium {
        font-weight: 500;
      }
      .text-gray-700 {
        color: #374151;
      }
      .mb-1 {
        margin-bottom: 0.25rem;
      }
      .px-3 {
        padding-left: 0.75rem;
        padding-right: 0.75rem;
      }
      .py-2 {
        padding-top: 0.5rem;
        padding-bottom: 0.5rem;
      }
      .border {
        border-width: 1px;
      }
      .border-gray-300 {
        border-color: #d1d5db;
      }
      .rounded-md {
        border-radius: 0.375rem;
      }
      .focus\:outline-none:focus {
        outline: none;
      }
      .focus\:ring-2:focus {
        box-shadow: 0 0 0 2px rgba(59, 130, 246, 0.5);
      }
      .focus\:ring-blue-500:focus {
        box-shadow: 0 0 0 2px rgba(59, 130, 246, 0.5);
      }
      .bg-blue-600 {
        background-color: #2563eb;
      }
      .text-white {
        color: white;
      }
      .hover\:bg-blue-700:hover {
        background-color: #1d4ed8;
      }
      .mt-6 {
        margin-top: 1.5rem;
      }
      .hidden {
        display: none;
      }
      .p-4 {
        padding: 1rem;
      }
      .bg-green-100 {
        background-color: #dcfce7;
      }
      .border-green-400 {
        border-color: #4ade80;
      }
      .text-green-700 {
        color: #15803d;
      }
      .bg-red-100 {
        background-color: #fee2e2;
      }
      .border-red-400 {
        border-color: #f87171;
      }
      .text-red-700 {
        color: #b91c1c;
      }
      .text-xs {
        font-size: 0.75rem;
      }
      .break-all {
        word-break: break-all;
      }
      .bg-gray-100 {
        background-color: #f3f4f6;
      }
      .rounded {
        border-radius: 0.25rem;
      }
      .overflow-auto {
        overflow: auto;
      }
    </style>
  </head>
  <body class="bg-gray-100 min-h-screen flex items-center justify-center">
    <div class="bg-white p-8 rounded-lg shadow-md w-full max-w-md">
      <h1 class="text-2xl font-bold mb-6 text-center">Magic Link Test</h1>

      <form id="magicLinkForm" class="space-y-4">
        <div>
          <label for="email" class="block text-sm font-medium text-gray-700 mb-1">
            Email Address
          </label>
          <input
            type="email"
            id="email"
            name="email"
            required
            class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500"
            placeholder="user@example.com"
          />
        </div>

        <div>
          <label for="redirect" class="block text-sm font-medium text-gray-700 mb-1">
            Redirect Path
          </label>
          <input
            type="text"
            id="redirect"
            name="redirect"
            value="/dashboard"
            class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500"
            placeholder="/dashboard"
          />
        </div>

        <div>
          <label for="emailType" class="block text-sm font-medium text-gray-700 mb-1">
            Email Type
          </label>
          <select
            id="emailType"
            name="emailType"
            class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500"
          >
            <option value="magicLink">Magic Link</option>
            <option value="notification">Regular Notification</option>
          </select>
        </div>

        <div>
          <label for="subject" class="block text-sm font-medium text-gray-700 mb-1">
            Email Subject
          </label>
          <input
            type="text"
            id="subject"
            name="subject"
            value="Test Magic Link"
            class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500"
          />
        </div>

        <div>
          <label for="content" class="block text-sm font-medium text-gray-700 mb-1">
            Email Content
          </label>
          <textarea
            id="content"
            name="content"
            rows="3"
            class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500"
            >This is a test magic link email. Click the button below to test the magic link
            functionality.</textarea
          >
        </div>

        <button
          type="submit"
          class="w-full bg-blue-600 text-white py-2 px-4 rounded-md hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500"
        >
          Send Magic Link
        </button>
      </form>

      <div id="result" class="mt-6 hidden">
        <div class="p-4 rounded-md">
          <h3 class="font-medium mb-2">Result:</h3>
          <div id="resultContent" class="text-sm"></div>
        </div>
      </div>
    </div>

    <script>
      document.getElementById("magicLinkForm").addEventListener("submit", async (e) => {
        e.preventDefault();

        const formData = new FormData(e.target);
        const data = Object.fromEntries(formData.entries());

        // Show loading state
        const button = e.target.querySelector('button[type="submit"]');
        const originalText = button.textContent;
        button.textContent = "Sending...";
        button.disabled = true;

        try {
          const response = await fetch("/api/email-delivery", {
            method: "POST",
            headers: {
              "Content-Type": "application/json",
            },
            body: JSON.stringify({
              usersToNotify: [data.email],
              emailType: data.emailType,
              emailSubject: data.subject,
              emailContent: data.content,
              buttonLink: data.redirect,
              buttonText: "Access Project",
              project: {},
              currentUser: { email: "test@example.com" },
            }),
          });

          const result = await response.json();

          // Show result
          const resultDiv = document.getElementById("result");
          const resultContent = document.getElementById("resultContent");

          if (result.success) {
            resultDiv.className =
              "mt-6 p-4 bg-green-100 border border-green-400 text-green-700 rounded-md";
            resultContent.innerHTML = `
                        <p><strong>Success!</strong> Magic link email sent.</p>
                        <p class="mt-2"><strong>Email sent to:</strong> ${data.email}</p>
                        <p><strong>Redirect to:</strong> ${data.redirect}</p>
                        <p><strong>Email type:</strong> ${data.emailType}</p>
                        ${result.magicLinkUrl ? `<p class="mt-2"><strong>Magic Link URL:</strong></p><p class="text-xs break-all bg-gray-100 p-2 rounded">${result.magicLinkUrl}</p>` : ""}
                    `;
          } else {
            resultDiv.className =
              "mt-6 p-4 bg-red-100 border border-red-400 text-red-700 rounded-md";
            resultContent.innerHTML = `
                        <p><strong>Error:</strong> ${result.error || "Failed to send magic link"}</p>
                        <pre class="mt-2 text-xs bg-gray-100 p-2 rounded overflow-auto">${JSON.stringify(result, null, 2)}</pre>
                    `;
          }

          resultDiv.classList.remove("hidden");
        } catch (error) {
          const resultDiv = document.getElementById("result");
          const resultContent = document.getElementById("resultContent");

          resultDiv.className = "mt-6 p-4 bg-red-100 border border-red-400 text-red-700 rounded-md";
          resultContent.innerHTML = `
                    <p><strong>Network Error:</strong> ${error.message}</p>
                `;
          resultDiv.classList.remove("hidden");
        } finally {
          // Reset button
          button.textContent = originalText;
          button.disabled = false;
        }
      });
    </script>
  </body>
</html>
