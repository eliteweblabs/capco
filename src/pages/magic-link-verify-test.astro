---
// Standalone magic link verification test page
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Magic Link Verification Test</title>
    <style>
      /* Basic styling without external CDN */
      body {
        font-family:
          system-ui,
          -apple-system,
          sans-serif;
      }
      .bg-gray-100 {
        background-color: #f3f4f6;
      }
      .bg-white {
        background-color: white;
      }
      .p-8 {
        padding: 2rem;
      }
      .rounded-lg {
        border-radius: 0.5rem;
      }
      .shadow-md {
        box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
      }
      .w-full {
        width: 100%;
      }
      .max-w-2xl {
        max-width: 42rem;
      }
      .text-2xl {
        font-size: 1.5rem;
      }
      .font-bold {
        font-weight: 700;
      }
      .mb-6 {
        margin-bottom: 1.5rem;
      }
      .text-center {
        text-align: center;
      }
      .space-y-6 > * + * {
        margin-top: 1.5rem;
      }
      .block {
        display: block;
      }
      .text-sm {
        font-size: 0.875rem;
      }
      .font-medium {
        font-weight: 500;
      }
      .text-gray-700 {
        color: #374151;
      }
      .mb-2 {
        margin-bottom: 0.5rem;
      }
      .px-3 {
        padding-left: 0.75rem;
        padding-right: 0.75rem;
      }
      .py-2 {
        padding-top: 0.5rem;
        padding-bottom: 0.5rem;
      }
      .border {
        border-width: 1px;
      }
      .border-gray-300 {
        border-color: #d1d5db;
      }
      .rounded-md {
        border-radius: 0.375rem;
      }
      .focus\:outline-none:focus {
        outline: none;
      }
      .focus\:ring-2:focus {
        box-shadow: 0 0 0 2px rgba(59, 130, 246, 0.5);
      }
      .focus\:ring-blue-500:focus {
        box-shadow: 0 0 0 2px rgba(59, 130, 246, 0.5);
      }
      .bg-blue-600 {
        background-color: #2563eb;
      }
      .bg-green-600 {
        background-color: #16a34a;
      }
      .text-white {
        color: white;
      }
      .hover\:bg-blue-700:hover {
        background-color: #1d4ed8;
      }
      .hover\:bg-green-700:hover {
        background-color: #15803d;
      }
      .focus\:ring-green-500:focus {
        box-shadow: 0 0 0 2px rgba(34, 197, 94, 0.5);
      }
      .mt-6 {
        margin-top: 1.5rem;
      }
      .hidden {
        display: none;
      }
      .p-4 {
        padding: 1rem;
      }
      .bg-green-100 {
        background-color: #dcfce7;
      }
      .border-green-400 {
        border-color: #4ade80;
      }
      .text-green-700 {
        color: #15803d;
      }
      .bg-red-100 {
        background-color: #fee2e2;
      }
      .border-red-400 {
        border-color: #f87171;
      }
      .text-red-700 {
        color: #b91c1c;
      }
      .text-xs {
        font-size: 0.75rem;
      }
      .break-all {
        word-break: break-all;
      }
      .bg-gray-100 {
        background-color: #f3f4f6;
      }
      .rounded {
        border-radius: 0.25rem;
      }
      .overflow-auto {
        overflow: auto;
      }
      .bg-blue-50 {
        background-color: #eff6ff;
      }
      .border-blue-200 {
        border-color: #bfdbfe;
      }
      .text-blue-800 {
        color: #1e40af;
      }
      .text-blue-700 {
        color: #1d4ed8;
      }
      .underline {
        text-decoration: underline;
      }
      .flex {
        display: flex;
      }
      .space-x-4 > * + * {
        margin-left: 1rem;
      }
      .flex-1 {
        flex: 1 1 0%;
      }
      .min-h-screen {
        min-height: 100vh;
      }
      .flex.items-center {
        align-items: center;
      }
      .justify-center {
        justify-content: center;
      }
      .rows-3 {
        height: 7.5rem;
      }
    </style>
  </head>
  <body class="bg-gray-100 min-h-screen flex items-center justify-center">
    <div class="bg-white p-8 rounded-lg shadow-md w-full max-w-2xl">
      <h1 class="text-2xl font-bold mb-6 text-center">Magic Link Verification Test</h1>

      <div class="space-y-6">
        <!-- URL Input -->
        <div>
          <label for="magicLinkUrl" class="block text-sm font-medium text-gray-700 mb-2">
            Magic Link URL (paste the full URL from email)
          </label>
          <textarea
            id="magicLinkUrl"
            name="magicLinkUrl"
            rows="3"
            class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500"
            placeholder="https://qudlxlryegnainztkrtk.supabase.co/auth/v1/verify?token=..."
          ></textarea>
        </div>

        <!-- Test Buttons -->
        <div class="flex space-x-4">
          <button
            id="testDirectLink"
            class="flex-1 bg-blue-600 text-white py-2 px-4 rounded-md hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500"
          >
            Test Direct Link
          </button>
          <button
            id="testVerifyEndpoint"
            class="flex-1 bg-green-600 text-white py-2 px-4 rounded-md hover:bg-green-700 focus:outline-none focus:ring-2 focus:ring-green-500"
          >
            Test Verify Endpoint
          </button>
        </div>

        <!-- Results -->
        <div id="result" class="hidden">
          <div class="p-4 rounded-md">
            <h3 class="font-medium mb-2">Result:</h3>
            <div id="resultContent" class="text-sm"></div>
          </div>
        </div>

        <!-- Instructions -->
        <div class="bg-blue-50 border border-blue-200 rounded-md p-4">
          <h3 class="font-medium text-blue-800 mb-2">How to Test:</h3>
          <ol class="text-sm text-blue-700 space-y-1">
            <li>
              1. Go to <a href="/magic-link-test" class="underline">Magic Link Test</a> and send yourself
              a magic link
            </li>
            <li>2. Check your email and copy the full magic link URL</li>
            <li>3. Paste it above and click "Test Direct Link" to see what happens</li>
            <li>4. Or click "Test Verify Endpoint" to test our verify endpoint directly</li>
          </ol>
        </div>
      </div>
    </div>

    <script>
      document.getElementById("testDirectLink").addEventListener("click", async () => {
        const url = document.getElementById("magicLinkUrl").value.trim();
        if (!url) {
          alert("Please enter a magic link URL");
          return;
        }

        const button = document.getElementById("testDirectLink");
        const originalText = button.textContent;
        button.textContent = "Testing...";
        button.disabled = true;

        try {
          // Test the magic link directly
          const response = await fetch(url, { method: "GET" });
          const result = await response.text();

          showResult(true, {
            status: response.status,
            statusText: response.statusText,
            url: url,
            response: result.substring(0, 500) + (result.length > 500 ? "..." : ""),
          });
        } catch (error) {
          showResult(false, {
            error: error.message,
            url: url,
          });
        } finally {
          button.textContent = originalText;
          button.disabled = false;
        }
      });

      document.getElementById("testVerifyEndpoint").addEventListener("click", async () => {
        const url = document.getElementById("magicLinkUrl").value.trim();
        if (!url) {
          alert("Please enter a magic link URL");
          return;
        }

        // Extract parameters from the magic link
        const urlObj = new URL(url);
        const token = urlObj.searchParams.get("token");
        const type = urlObj.searchParams.get("type");
        const redirectTo = urlObj.searchParams.get("redirect_to");

        if (!token || !type) {
          alert("Invalid magic link URL - missing token or type");
          return;
        }

        const button = document.getElementById("testVerifyEndpoint");
        const originalText = button.textContent;
        button.textContent = "Testing...";
        button.disabled = true;

        try {
          // Test our verify endpoint
          const verifyUrl = `/api/auth/verify?token=${token}&type=${type}&redirect=${redirectTo || "/dashboard"}`;
          const response = await fetch(verifyUrl, { method: "GET" });
          const result = await response.text();

          showResult(true, {
            status: response.status,
            statusText: response.statusText,
            verifyUrl: verifyUrl,
            response: result.substring(0, 500) + (result.length > 500 ? "..." : ""),
          });
        } catch (error) {
          showResult(false, {
            error: error.message,
            verifyUrl: `/api/auth/verify?token=${token}&type=${type}`,
          });
        } finally {
          button.textContent = originalText;
          button.disabled = false;
        }
      });

      function showResult(success, data) {
        const resultDiv = document.getElementById("result");
        const resultContent = document.getElementById("resultContent");

        if (success) {
          resultDiv.className =
            "mt-6 p-4 bg-green-100 border border-green-400 text-green-700 rounded-md";
          resultContent.innerHTML = `
            <p><strong>Success!</strong> Request completed.</p>
            <p class="mt-2"><strong>Status:</strong> ${data.status} ${data.statusText}</p>
            ${data.url ? `<p><strong>URL:</strong> ${data.url}</p>` : ""}
            ${data.verifyUrl ? `<p><strong>Verify URL:</strong> ${data.verifyUrl}</p>` : ""}
            <p class="mt-2"><strong>Response:</strong></p>
            <pre class="text-xs bg-gray-100 p-2 rounded overflow-auto">${data.response}</pre>
          `;
        } else {
          resultDiv.className = "mt-6 p-4 bg-red-100 border border-red-400 text-red-700 rounded-md";
          resultContent.innerHTML = `
            <p><strong>Error:</strong> ${data.error}</p>
            ${data.url ? `<p><strong>URL:</strong> ${data.url}</p>` : ""}
            ${data.verifyUrl ? `<p><strong>Verify URL:</strong> ${data.verifyUrl}</p>` : ""}
          `;
        }

        resultDiv.classList.remove("hidden");
      }
    </script>
  </body>
</html>
