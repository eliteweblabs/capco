import App from "../components/common/App.astro";
import BoxIcon from "../components/common/BoxIcon.astro";
import SectionContainer from "../components/common/SectionContainer.astro";

// Para cambiar idioma de textos
import { getI18N } from "../i18n";
import { checkAuth } from "../lib/auth";
const { currentLocale } = Astro;
const i18n = getI18N({ currentLocale });

// Get auth data for conditional rendering
const { isAuth } = await checkAuth(Astro.cookies);
---

<App title={i18n.SEO_TITLE} description={i18n.SEO_DESCRIPTION}>
  <!-- Hero Section -->
  <SectionContainer id="hero" class="relative px-6 py-16 overflow-hidden">
    <!-- Background Video -->
    <div class="absolute inset-0 z-0">
      <video
        autoplay
        muted
        loop
        playsinline
        class="h-full w-full object-cover"
        poster="/img/hero-video-poster.jpg"
      >
        <source src="../public/videos/uhd_30fps.mp4" type="video/mp4" />
        <!-- <source src="/videos/hero-background.webm" type="video/webm" /> -->
        <!-- Fallback image if video doesn't load -->
        <img
          src="/img/hero-fallback.jpg"
          alt="Fire protection background"
          class="h-full w-full object-cover"
        />
      </video>
      <!-- Dark overlay for text readability -->
      <div class="absolute inset-0 bg-black/40 dark:bg-black/60"></div>
    </div>

    <!-- Content with relative positioning -->
    <div class="relative z-10 mx-auto max-w-6xl">
      <div class="grid grid-cols-1 items-center gap-12 lg:grid-cols-2">
        <!-- Hero Content -->
        <div class="space-y-8">
          <div class="space-y-4">
            <h1 class="text-4xl font-bold leading-tight md:text-5xl lg:text-6xl">
              <span class="text-white">Fire Protection</span>
              <span class="block text-red-400">Plans Made Simple</span>
            </h1>
            <p class="text-xl leading-relaxed text-gray-200">
              Streamline your fire protection projects with CAPCo's comprehensive platform. Our
              state of the art workflow accepts &amp; aggregates your PDF allowing for the fastest
              turnaround at the lowest cost.
            </p>
          </div>

          <!-- Key Benefits -->
          <div class="grid grid-cols-1 gap-4 sm:grid-cols-2">
            <div class="flex items-center space-x-3">
              <div
                class="flex h-8 w-8 items-center justify-center rounded-lg bg-red-500/20 backdrop-blur-sm"
              >
                <BoxIcon name="shield" class="h-5 w-5 text-red-300" />
              </div>
              <span class="font-medium text-white">Secure & Compliant</span>
            </div>
            <div class="flex items-center space-x-3">
              <div
                class="flex h-8 w-8 items-center justify-center rounded-lg bg-blue-500/20 backdrop-blur-sm"
              >
                <BoxIcon name="time" class="h-5 w-5 text-blue-300" />
              </div>
              <span class="font-medium text-white">Fast Processing</span>
            </div>
            <div class="flex items-center space-x-3">
              <div
                class="flex h-8 w-8 items-center justify-center rounded-lg bg-green-500/20 backdrop-blur-sm"
              >
                <BoxIcon name="check-circle" class="h-5 w-5 text-green-300" />
              </div>
              <span class="font-medium text-white">Easy Approval</span>
            </div>
            <div class="flex items-center space-x-3">
              <div
                class="flex h-8 w-8 items-center justify-center rounded-lg bg-purple-500/20 backdrop-blur-sm"
              >
                <BoxIcon name="user" class="h-5 w-5 text-purple-300" />
              </div>
              <span class="font-medium text-white">Single Point of Contact</span>
            </div>
          </div>

          <!-- CTA Buttons -->
          <div class="flex flex-col gap-4 sm:flex-row">
            <a
              href="/login"
              class="inline-flex items-center justify-center rounded-lg bg-red-600 px-8 py-4 font-semibold text-white shadow-lg transition-colors hover:bg-red-700 hover:shadow-xl"
            >
              <BoxIcon name="log-in" class="mr-2 h-5 w-5" />
              Get Started
            </a>
            <a
              href="/projects"
              class="inline-flex items-center justify-center rounded-lg border-2 border-red-600 px-8 py-4 font-semibold text-red-600 transition-colors hover:bg-red-50 dark:text-red-400 dark:hover:bg-red-900/20"
            >
              <BoxIcon name="building" class="mr-2 h-5 w-5" />
              View Projects
            </a>
            {
              !isAuth && (
                <a
                  href="/login?tab=register"
                  class="inline-flex items-center justify-center rounded-lg border-2 border-gray-300 px-8 py-4 font-semibold text-gray-700 transition-colors hover:bg-gray-50 dark:border-gray-600 dark:text-gray-300 dark:hover:bg-gray-800"
                >
                  <BoxIcon name="user-plus" class="mr-2 h-5 w-5" />
                  Create Account
                </a>
              )
            }
          </div>
        </div>

        <!-- Hero Image/Visual -->
        <div class="relative">
          <div
            class="relative rounded-2xl bg-white/90 backdrop-blur-sm p-8 shadow-2xl dark:bg-black/50 dark:text-white"
          >
            <div class="grid grid-cols-2 gap-4">
              <div class="space-y-4">
                <div class="rounded-lg bg-white p-4 shadow-sm dark:bg-gray-800">
                  <div class="mb-2 flex items-center space-x-2">
                    <BoxIcon name="file-pdf" class="h-5 w-5 text-red-600" />
                    <span class="text-sm font-medium">Project Submittal</span>
                  </div>
                  <div class="h-2 w-full rounded-full bg-gray-200 dark:bg-gray-700">
                    <div class="h-2 w-3/4 rounded-full bg-green-500"></div>
                  </div>
                </div>
                <div class="rounded-lg bg-white p-4 shadow-sm dark:bg-gray-800">
                  <div class="mb-2 flex items-center space-x-2">
                    <BoxIcon name="check-shield" class="h-5 w-5 text-green-600" />
                    <span class="text-sm font-medium">Safety Review</span>
                  </div>
                  <div class="h-2 w-full rounded-full bg-gray-200 dark:bg-gray-700">
                    <div class="h-2 w-1/2 rounded-full bg-blue-500"></div>
                  </div>
                </div>
              </div>
              <div class="space-y-4">
                <div class="rounded-lg bg-white p-4 shadow-sm dark:bg-gray-800">
                  <div class="mb-2 flex items-center space-x-2">
                    <BoxIcon name="user-check" class="h-5 w-5 text-blue-600" />
                    <span class="text-sm font-medium">Client Approval</span>
                  </div>
                  <div class="flex items-center justify-center py-4">
                    <BoxIcon name="check-circle" class="h-8 w-8 text-green-500" />
                  </div>
                </div>
                <div class="rounded-lg bg-white p-4 shadow-sm dark:bg-gray-800">
                  <div class="mb-2 flex items-center space-x-2">
                    <BoxIcon name="download" class="h-5 w-5 text-purple-600" />
                    <span class="text-sm font-medium">Final Delivery</span>
                  </div>
                  <div class="flex items-center justify-center py-4">
                    <BoxIcon name="package" class="h-8 w-8 text-purple-500" />
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </SectionContainer>

  <!-- Features Section -->
  <SectionContainer class="px-6 py-16 bg-hub-background-dark">
    <div class="mx-auto max-w-6xl">
      <div class="mb-16 text-center">
        <h2 class="mb-4 text-3xl font-bold text-gray-900 dark:text-white md:text-4xl">
          Everything You Need for Fire Protection Projects
        </h2>
        <p class="mx-auto max-w-3xl text-xl text-gray-600 dark:text-gray-300">
          Our platform streamlines the entire workflow from initial submission to final approval,
          making fire protection system management efficient and reliable.
        </p>
      </div>

      <div class="grid grid-cols-1 gap-8 md:grid-cols-2 lg:grid-cols-3">
        <!-- Feature 1 -->
        <div
          class="rounded-xl bg-white p-8 shadow-lg transition-shadow hover:shadow-xl dark:bg-gray-800"
        >
          <div
            class="mb-6 flex h-12 w-12 items-center justify-center rounded-lg bg-red-100 dark:bg-red-900/30"
          >
            <BoxIcon name="cloud-upload" class="bx-md text-red-600 dark:text-red-400" />
          </div>
          <h3 class="mb-4 text-xl font-semibold text-gray-900 dark:text-white">
            Document Submission
          </h3>
          <p class="text-gray-600 dark:text-gray-300">
            Easily upload and submit your fire protection system plans and documents. Secure cloud
            storage with instant access for all stakeholders.
          </p>
        </div>

        <!-- Feature 2 -->
        <div
          class="rounded-xl bg-white p-8 shadow-lg transition-shadow hover:shadow-xl dark:bg-gray-800"
        >
          <div
            class="mb-6 flex h-12 w-12 items-center justify-center rounded-lg bg-blue-100 dark:bg-blue-900/30"
          >
            <BoxIcon name="search-alt" class="bx-md text-blue-600 dark:text-blue-400" />
          </div>
          <h3 class="mb-4 text-xl font-semibold text-gray-900 dark:text-white">Review Process</h3>
          <p class="text-gray-600 dark:text-gray-300">
            Streamlined review workflow with automated notifications and status tracking. Keep
            everyone informed throughout the approval process.
          </p>
        </div>

        <!-- Feature 3 -->
        <div
          class="rounded-xl bg-white p-8 shadow-lg transition-shadow hover:shadow-xl dark:bg-gray-800"
        >
          <div
            class="mb-6 flex h-12 w-12 items-center justify-center rounded-lg bg-green-100 dark:bg-green-900/30"
          >
            <BoxIcon name="list-check" class="bx-md text-green-600 dark:text-green-400" />
          </div>
          <h3 class="mb-4 text-xl font-semibold text-gray-900 dark:text-white">
            Compliance Tracking
          </h3>
          <p class="text-gray-600 dark:text-gray-300">
            Ensure all projects meet safety standards and regulatory requirements. Built-in
            compliance checks and audit trails.
          </p>
        </div>

        <!-- Feature 4 -->
        <div
          class="rounded-xl bg-white p-8 shadow-lg transition-shadow hover:shadow-xl dark:bg-gray-800"
        >
          <div
            class="mb-6 flex h-12 w-12 items-center justify-center rounded-lg bg-purple-100 dark:bg-purple-900/30"
          >
            <BoxIcon name="user-group" class="bx-md text-purple-600 dark:text-purple-400" />
          </div>
          <h3 class="mb-4 text-xl font-semibold text-gray-900 dark:text-white">
            Team Collaboration
          </h3>
          <p class="text-gray-600 dark:text-gray-300">
            Work together seamlessly with role-based access and real-time updates. Admin and client
            portals for different user types.
          </p>
        </div>

        <!-- Feature 5 -->
        <div
          class="rounded-xl bg-white p-8 shadow-lg transition-shadow hover:shadow-xl dark:bg-gray-800"
        >
          <div
            class="mb-6 flex h-12 w-12 items-center justify-center rounded-lg bg-orange-100 dark:bg-orange-900/30"
          >
            <BoxIcon name="bell" class="bx-md text-orange-600 dark:text-orange-400" />
          </div>
          <h3 class="mb-4 text-xl font-semibold text-gray-900 dark:text-white">
            Smart Notifications
          </h3>
          <p class="text-gray-600 dark:text-gray-300">
            Stay informed with intelligent alerts and email notifications. Never miss important
            updates or deadlines.
          </p>
        </div>

        <!-- Feature 6 -->
        <div
          class="rounded-xl bg-white p-8 shadow-lg transition-shadow hover:shadow-xl dark:bg-gray-800"
        >
          <div
            class="mb-6 flex h-12 w-12 items-center justify-center rounded-lg bg-teal-100 dark:bg-teal-900/30"
          >
            <BoxIcon name="download" class="bx-md text-teal-600 dark:text-teal-400" />
          </div>
          <h3 class="mb-4 text-xl font-semibold text-gray-900 dark:text-white">Easy Downloads</h3>
          <p class="text-gray-600 dark:text-gray-300">
            Quick access to approved documents and final deliverables. Organized file management
            with version control.
          </p>
        </div>
      </div>
    </div>
  </SectionContainer>

  <!-- Projects Showcase Section -->
  <SectionContainer class="px-6 py-16">
    <div class="mx-auto max-w-6xl text-center">
      <h2 class="mb-6 text-3xl font-bold text-gray-900 dark:text-white md:text-4xl">
        Our <span class="text-red-600 dark:text-red-400">Completed Projects</span>
      </h2>
      <p class="mx-auto mb-12 max-w-3xl text-xl text-gray-600 dark:text-gray-300">
        Explore our portfolio of successfully completed fire protection installations. Each project
        showcases our commitment to safety, compliance, and excellence.
      </p>

      <div class="mb-12 grid grid-cols-1 gap-8 md:grid-cols-3">
        <div class="rounded-xl bg-white p-8 shadow-lg dark:bg-gray-800">
          <div
            class="mx-auto mb-6 flex h-16 w-16 items-center justify-center rounded-lg bg-red-100 dark:bg-red-900/30"
          >
            <BoxIcon name="building" class="bx-md text-red-600 dark:text-red-400" />
          </div>
          <h3 class="mb-4 text-xl font-semibold text-gray-900 dark:text-white">
            Commercial Buildings
          </h3>
          <p class="text-gray-600 dark:text-gray-300">
            Comprehensive fire protection systems for office buildings, retail spaces, and
            commercial complexes.
          </p>
        </div>

        <div class="rounded-xl bg-white p-8 shadow-lg dark:bg-gray-800">
          <div
            class="mx-auto mb-6 flex h-16 w-16 items-center justify-center rounded-lg bg-blue-100 dark:bg-blue-900/30"
          >
            <BoxIcon name="home" class="bx-md text-blue-600 dark:text-blue-400" />
          </div>
          <h3 class="mb-4 text-xl font-semibold text-gray-900 dark:text-white">
            Residential Projects
          </h3>
          <p class="text-gray-600 dark:text-gray-300">
            Multi-family housing and residential complexes with advanced fire safety systems and
            compliance.
          </p>
        </div>

        <div class="rounded-xl bg-white p-8 shadow-lg dark:bg-gray-800">
          <div
            class="mx-auto mb-6 flex h-16 w-16 items-center justify-center rounded-lg bg-green-100 dark:bg-green-900/30"
          >
            <BoxIcon name="wrench" class="bx-md text-green-600 dark:text-green-400" />
          </div>
          <h3 class="mb-4 text-xl font-semibold text-gray-900 dark:text-white">
            Industrial Facilities
          </h3>
          <p class="text-gray-600 dark:text-gray-300">
            Specialized fire protection solutions for manufacturing, warehousing, and industrial
            applications.
          </p>
        </div>
      </div>

      <a
        href="/projects"
        class="inline-flex items-center justify-center rounded-lg bg-red-600 px-8 py-4 font-semibold text-white shadow-lg transition-colors hover:bg-red-700 hover:shadow-xl"
      >
        <BoxIcon name="building" class="mr-2 h-5 w-5" />
        View All Projects
      </a>
    </div>
  </SectionContainer>
</App>
