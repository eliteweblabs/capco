---
import Button from "../components/common/Button.astro";
---

<html>
<head>
  <title>Debug Button Classes</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="p-8">
  <h1>Debug Button Classes</h1>
  
  <div class="space-y-4">
    <h2>Button with flex-1:</h2>
    <div class="flex gap-2">
      <Button variant="primary" class="flex-1">
        Flex 1 Button
      </Button>
      <Button variant="secondary" class="flex-1">
        Flex 1 Button 2
      </Button>
    </div>
    
    <h2>Button with custom background:</h2>
    <Button variant="ghost" class="bg-red-500 text-white">
      Red Background
    </Button>
    
    <h2>Button with custom width:</h2>
    <Button variant="outline" class="w-64">
      Custom Width
    </Button>
  </div>
  
  <script>
    setTimeout(() => {
      const buttons = document.querySelectorAll('button');
      buttons.forEach((btn, index) => {
        console.log(`Button ${index + 1}:`, {
          className: btn.className,
          hasFlex1: btn.classList.contains('flex-1'),
          hasBgRed: btn.classList.contains('bg-red-500'),
          hasW64: btn.classList.contains('w-64')
        });
      });
    }, 100);
  </script>
</body>
</html>
