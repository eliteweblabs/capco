---
/**
 * Hybrid Contact Page
 * Offers users a choice between conversational chat interface or traditional form
 */

import App from "../components/ui/App.astro";
import VapiChatInterface from "../components/chat/VapiChatInterface.astro";
import MultiStepForm from "../components/form/MultiStepForm.astro";
import { getContactFormConfig } from "../lib/forms/contact-form-config";
import { checkAuth } from "../lib/auth";
import { globalCompanyData } from "../pages/api/global/global-company-data";

const { currentUser } = await checkAuth(Astro.cookies);
const { globalCompanyName, virtualAssistantName } = await globalCompanyData();
const contactFormConfig = getContactFormConfig(globalCompanyName, virtualAssistantName);
---

<App title={`Contact ${globalCompanyName}`} {currentUser} mask="top-left">
  <div class="container mx-auto px-4 py-12">
    <!-- Choice Screen (Initial View) -->
    <div id="choice-screen" class="max-w-2xl mx-auto text-center space-y-8">
      <div class="space-y-4">
        <h1 class="text-4xl md:text-5xl font-bold text-gray-900 dark:text-white">
          How would you like to get in touch?
        </h1>

        <p class="text-lg text-gray-600 dark:text-gray-400 max-w-xl mx-auto">
          Choose your preferred method of contact. Both routes get you the same result!
        </p>
      </div>

      <div class="grid md:grid-cols-2 gap-6">
        <!-- Chat Option -->
        <button
          onclick="showChat()"
          class="group p-8 bg-gradient-to-br from-primary-500 to-primary-600 hover:from-primary-600 hover:to-primary-700 rounded-2xl shadow-xl transition-all duration-300 transform hover:scale-105 text-left"
        >
          <div class="space-y-4 text-white">
            <div class="flex items-center justify-between">
              <svg class="w-16 h-16" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M8 10h.01M12 10h.01M16 10h.01M9 16H5a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v8a2 2 0 01-2 2h-5l-5 5v-5z"
                ></path>
              </svg>
              <span class="text-sm font-medium bg-white/20 px-3 py-1 rounded-full">
                Recommended
              </span>
            </div>

            <h2 class="text-2xl font-bold">Chat with Leah</h2>

            <p class="text-primary-100">
              Natural conversation with our AI assistant. Ask questions and get instant answers.
            </p>

            <ul class="text-sm text-primary-100 space-y-2">
              <li class="flex items-center gap-2">
                <svg
                  class="w-5 h-5 flex-shrink-0"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M5 13l4 4L19 7"></path>
                </svg>
                <span>Voice or text - your choice</span>
              </li>
              <li class="flex items-center gap-2">
                <svg
                  class="w-5 h-5 flex-shrink-0"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M5 13l4 4L19 7"></path>
                </svg>
                <span>Get instant answers to your questions</span>
              </li>
              <li class="flex items-center gap-2">
                <svg
                  class="w-5 h-5 flex-shrink-0"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M5 13l4 4L19 7"></path>
                </svg>
                <span>Flexible, conversational flow</span>
              </li>
              <li class="flex items-center gap-2">
                <svg
                  class="w-5 h-5 flex-shrink-0"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M5 13l4 4L19 7"></path>
                </svg>
                <span>Usually faster to complete</span>
              </li>
            </ul>

            <div
              class="mt-4 pt-4 border-t border-white/20 flex items-center justify-between text-sm"
            >
              <span class="font-medium">Start chatting →</span>
              <span class="opacity-75">~2 min</span>
            </div>
          </div>
        </button>

        <!-- Form Option -->
        <button
          onclick="showForm()"
          class="group p-8 bg-white dark:bg-gray-900 border-2 border-gray-200 dark:border-gray-700 hover:border-primary-500 dark:hover:border-primary-500 rounded-2xl shadow-lg transition-all duration-300 transform hover:scale-105 text-left"
        >
          <div class="space-y-4">
            <div class="flex items-center justify-between">
              <svg
                class="w-16 h-16 text-gray-600 dark:text-gray-400 group-hover:text-primary-600 transition-colors"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"
                ></path>
              </svg>
            </div>

            <h2 class="text-2xl font-bold text-gray-900 dark:text-white">
              Fill Out Traditional Form
            </h2>

            <p class="text-gray-600 dark:text-gray-400">
              Step-by-step guided form with visual confirmation at each stage.
            </p>

            <ul class="text-sm text-gray-600 dark:text-gray-400 space-y-2">
              <li class="flex items-center gap-2">
                <svg
                  class="w-5 h-5 flex-shrink-0"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M5 13l4 4L19 7"></path>
                </svg>
                <span>Structured, labeled fields</span>
              </li>
              <li class="flex items-center gap-2">
                <svg
                  class="w-5 h-5 flex-shrink-0"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M5 13l4 4L19 7"></path>
                </svg>
                <span>Visual progress tracking</span>
              </li>
              <li class="flex items-center gap-2">
                <svg
                  class="w-5 h-5 flex-shrink-0"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M5 13l4 4L19 7"></path>
                </svg>
                <span>Traditional familiar format</span>
              </li>
              <li class="flex items-center gap-2">
                <svg
                  class="w-5 h-5 flex-shrink-0"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M5 13l4 4L19 7"></path>
                </svg>
                <span>No voice/audio required</span>
              </li>
            </ul>

            <div
              class="mt-4 pt-4 border-t border-gray-200 dark:border-gray-700 flex items-center justify-between text-sm text-gray-700 dark:text-gray-300"
            >
              <span class="font-medium">Start form →</span>
              <span class="opacity-75">~3 min</span>
            </div>
          </div>
        </button>
      </div>

      <!-- Feature Comparison -->
      <div class="mt-12 pt-8 border-t border-gray-200 dark:border-gray-700">
        <p class="text-sm text-gray-500 dark:text-gray-400 text-center">
          Both methods save to the same database and get the same priority. Choose what's
          comfortable for you!
        </p>
      </div>
    </div>

    <!-- Chat Interface Container (Hidden Initially) -->
    <div id="chat-container" class="hidden max-w-4xl mx-auto">
      <button
        onclick="showChoice()"
        class="mb-6 text-primary-600 hover:text-primary-700 dark:text-primary-400 dark:hover:text-primary-300 font-medium flex items-center gap-2 transition-colors"
      >
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
        </svg>
        <span>Back to options</span>
      </button>

      <VapiChatInterface
        title="Let's get in touch..."
        introMessage={`Hi! I'm Leah, ${globalCompanyName}'s project assistant. I'm here to help you get in touch with our team. I can answer questions about our fire protection services and collect your contact information. What brings you here today?`}
        placeholder="Type your message or ask a question..."
      />

      <!-- Quick Examples -->
      <div
        class="mt-6 p-4 bg-blue-50 dark:bg-blue-900/20 border border-blue-200 dark:border-blue-800 rounded-lg"
      >
        <p class="text-sm font-medium text-blue-900 dark:text-blue-200 mb-2">Try asking:</p>
        <div class="flex flex-wrap gap-2">
          <button
            onclick="document.getElementById('vapi-input').value = 'What services do you offer?'; document.getElementById('vapi-input').focus();"
            class="text-xs px-3 py-1 bg-white dark:bg-gray-900 border border-blue-300 dark:border-blue-700 rounded-lg hover:bg-blue-50 dark:hover:bg-blue-900/30 transition-colors text-blue-800 dark:text-blue-200"
          >
            What services do you offer?
          </button>
          <button
            onclick="document.getElementById('vapi-input').value = 'I need a fire alarm system'; document.getElementById('vapi-input').focus();"
            class="text-xs px-3 py-1 bg-white dark:bg-gray-900 border border-blue-300 dark:border-blue-700 rounded-lg hover:bg-blue-50 dark:hover:bg-blue-900/30 transition-colors text-blue-800 dark:text-blue-200"
          >
            I need a fire alarm system
          </button>
          <button
            onclick="document.getElementById('vapi-input').value = 'How long does a project take?'; document.getElementById('vapi-input').focus();"
            class="text-xs px-3 py-1 bg-white dark:bg-gray-900 border border-blue-300 dark:border-blue-700 rounded-lg hover:bg-blue-50 dark:hover:bg-blue-900/30 transition-colors text-blue-800 dark:text-blue-200"
          >
            How long does a project take?
          </button>
        </div>
      </div>
    </div>

    <!-- Form Container (Hidden Initially) -->
    <div id="form-container" class="hidden">
      <button
        onclick="showChoice()"
        class="mb-6 text-primary-600 hover:text-primary-700 dark:text-primary-400 dark:hover:text-primary-300 font-medium flex items-center gap-2 transition-colors"
      >
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
        </svg>
        <span>Back to options</span>
      </button>

      <MultiStepForm config={contactFormConfig} />
    </div>
  </div>
</App>

<script is:inline>
  // Navigation functions
  function showChat() {
    document.getElementById("choice-screen").classList.add("hidden");
    document.getElementById("chat-container").classList.remove("hidden");
    document.getElementById("form-container").classList.add("hidden");

    // Scroll to top smoothly
    window.scrollTo({ top: 0, behavior: "smooth" });

    // Focus the chat input after animation
    setTimeout(() => {
      const chatInput = document.getElementById("vapi-input");
      if (chatInput) chatInput.focus();
    }, 100);
  }

  function showForm() {
    document.getElementById("choice-screen").classList.add("hidden");
    document.getElementById("chat-container").classList.add("hidden");
    document.getElementById("form-container").classList.remove("hidden");

    // Scroll to top smoothly
    window.scrollTo({ top: 0, behavior: "smooth" });
  }

  function showChoice() {
    document.getElementById("choice-screen").classList.remove("hidden");
    document.getElementById("chat-container").classList.add("hidden");
    document.getElementById("form-container").classList.add("hidden");

    // Scroll to top smoothly
    window.scrollTo({ top: 0, behavior: "smooth" });
  }
</script>
