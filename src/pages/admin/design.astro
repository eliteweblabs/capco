---
/**
 * Design Systems Page
 * Showcase all design system components, starting with button variants
 */
import { checkAuth } from "../../lib/auth";
import App from "../../components/common/App.astro";
import Button from "../../components/common/Button.astro";
import { globalCompanyData } from "../api/global/global-company-data";

const { currentUser, session } = await checkAuth(Astro.cookies);
const currentRole = currentUser?.profile?.role;

// Redirect to login if not authenticated
if (!currentUser || !session) {
  return Astro.redirect("/auth/login");
}

// Check if user is admin
if (currentRole !== "Admin") {
  return Astro.redirect("/dashboard");
}

const companyData = await globalCompanyData();

// Button variants to showcase
const buttonVariants = [
  "primary",
  "secondary",
  "success",
  "warning",
  "danger",
  "outline",
  "ghost",
  "link",
  "anchor",
  "selected",
  "tab",
] as const;

// Button sizes to showcase
const buttonSizes = ["xs", "sm", "md", "lg", "xl"] as const;

---

<App
  title="Design System"
  description="Design system components and patterns"
  {currentUser}
  {session}
  globalCompanyName={companyData.globalCompanyName}
  globalCompanySlogan={companyData.globalCompanySlogan}
  globalCompanyLogo={companyData.globalCompanyLogo}
>
  <div class="max-w-6xl mx-auto px-4 py-8">
    <div class="mb-8">
      <h1 class="text-3xl font-bold mb-2">Design System</h1>
      <p class="text-gray-600 dark:text-gray-400">
        A comprehensive guide to all design system components and patterns used throughout the application.
      </p>
    </div>

    <!-- Buttons Section -->
    <section class="mb-12">
      <div class="mb-6">
        <h2 class="text-2xl font-semibold mb-2">Buttons</h2>
        <p class="text-gray-600 dark:text-gray-400">
          All available button variants and sizes. Buttons can be used with icons, loading states, and disabled states.
        </p>
      </div>

      <!-- Button Variants -->
      <div class="bg-white dark:bg-gray-800 shadow rounded-lg p-6 mb-6">
        <h3 class="text-xl font-semibold mb-4">Variants</h3>
        <div class="space-y-6">
          {buttonVariants.map((variant) => (
            <div class="border-b border-gray-200 dark:border-gray-700 pb-6 last:border-b-0 last:pb-0">
              <div class="mb-3">
                <h4 class="text-lg font-medium text-gray-900 dark:text-gray-100 capitalize">
                  {variant}
                </h4>
                <code class="text-xs text-gray-500 dark:text-gray-400 font-mono">
                  variant="{variant}"
                </code>
              </div>
              <div class="flex flex-wrap items-center gap-3">
                <Button variant={variant}>Button Text</Button>
                <Button variant={variant} icon="bx-check" iconPosition="left">
                  With Icon
                </Button>
                <Button variant={variant} loading={true}>
                  Loading
                </Button>
                <Button variant={variant} disabled={true}>
                  Disabled
                </Button>
              </div>
            </div>
          ))}
        </div>
      </div>

      <!-- Button Sizes -->
      <div class="bg-white dark:bg-gray-800 shadow rounded-lg p-6 mb-6">
        <h3 class="text-xl font-semibold mb-4">Sizes</h3>
        <div class="space-y-4">
          {buttonSizes.map((size) => (
            <div class="flex items-center gap-4">
              <div class="w-24 text-sm text-gray-600 dark:text-gray-400 font-medium uppercase">
                {size}
              </div>
              <div class="flex flex-wrap items-center gap-3">
                <Button variant="primary" size={size}>
                  {size.toUpperCase()} Button
                </Button>
                <Button variant="secondary" size={size}>
                  {size.toUpperCase()} Button
                </Button>
                <Button variant="outline" size={size}>
                  {size.toUpperCase()} Button
                </Button>
              </div>
            </div>
          ))}
        </div>
      </div>

      <!-- Button States -->
      <div class="bg-white dark:bg-gray-800 shadow rounded-lg p-6 mb-6">
        <h3 class="text-xl font-semibold mb-4">States</h3>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          <div>
            <h4 class="text-sm font-medium text-gray-700 dark:text-gray-300 mb-3">Default</h4>
            <div class="flex flex-wrap gap-3">
              <Button variant="primary">Default</Button>
              <Button variant="secondary">Default</Button>
              <Button variant="outline">Default</Button>
            </div>
          </div>
          <div>
            <h4 class="text-sm font-medium text-gray-700 dark:text-gray-300 mb-3">Hover</h4>
            <p class="text-xs text-gray-500 dark:text-gray-400 mb-3">
              Hover over buttons to see hover states
            </p>
            <div class="flex flex-wrap gap-3">
              <Button variant="primary">Hover Me</Button>
              <Button variant="secondary">Hover Me</Button>
              <Button variant="outline">Hover Me</Button>
            </div>
          </div>
          <div>
            <h4 class="text-sm font-medium text-gray-700 dark:text-gray-300 mb-3">Loading</h4>
            <div class="flex flex-wrap gap-3">
              <Button variant="primary" loading={true}>
                Loading
              </Button>
              <Button variant="secondary" loading={true}>
                Loading
              </Button>
              <Button variant="outline" loading={true}>
                Loading
              </Button>
            </div>
          </div>
          <div>
            <h4 class="text-sm font-medium text-gray-700 dark:text-gray-300 mb-3">Disabled</h4>
            <div class="flex flex-wrap gap-3">
              <Button variant="primary" disabled={true}>
                Disabled
              </Button>
              <Button variant="secondary" disabled={true}>
                Disabled
              </Button>
              <Button variant="outline" disabled={true}>
                Disabled
              </Button>
            </div>
          </div>
        </div>
      </div>

      <!-- Button with Icons -->
      <div class="bg-white dark:bg-gray-800 shadow rounded-lg p-6 mb-6">
        <h3 class="text-xl font-semibold mb-4">With Icons</h3>
        <div class="space-y-4">
          <div>
            <h4 class="text-sm font-medium text-gray-700 dark:text-gray-300 mb-3">Icon Left</h4>
            <div class="flex flex-wrap gap-3">
              <Button variant="primary" icon="bx-plus" iconPosition="left">
                Add Item
              </Button>
              <Button variant="secondary" icon="bx-edit" iconPosition="left">
                Edit
              </Button>
              <Button variant="danger" icon="bx-trash" iconPosition="left">
                Delete
              </Button>
            </div>
          </div>
          <div>
            <h4 class="text-sm font-medium text-gray-700 dark:text-gray-300 mb-3">Icon Right</h4>
            <div class="flex flex-wrap gap-3">
              <Button variant="primary" icon="bx-arrow-right" iconPosition="right">
                Continue
              </Button>
              <Button variant="secondary" icon="bx-download" iconPosition="right">
                Download
              </Button>
              <Button variant="outline" icon="bx-external-link" iconPosition="right">
                Open Link
              </Button>
            </div>
          </div>
        </div>
      </div>

      <!-- Full Width Buttons -->
      <div class="bg-white dark:bg-gray-800 shadow rounded-lg p-6">
        <h3 class="text-xl font-semibold mb-4">Full Width</h3>
        <div class="space-y-3">
          <Button variant="primary" fullWidth={true}>
            Full Width Primary Button
          </Button>
          <Button variant="secondary" fullWidth={true}>
            Full Width Secondary Button
          </Button>
          <Button variant="outline" fullWidth={true}>
            Full Width Outline Button
          </Button>
        </div>
      </div>
    </section>

    <!-- Usage Examples -->
    <section class="mb-12">
      <div class="bg-white dark:bg-gray-800 shadow rounded-lg p-6">
        <h2 class="text-2xl font-semibold mb-4">Usage Examples</h2>
        <div class="space-y-4">
          <div>
            <h3 class="text-lg font-medium mb-2">Basic Usage</h3>
            <pre class="bg-gray-100 dark:bg-gray-900 p-4 rounded-lg overflow-x-auto text-sm"><code>{`<Button variant="primary">Click Me</Button>
<Button variant="secondary" size="lg">Large Button</Button>
<Button variant="outline" icon="bx-plus" iconPosition="left">Add Item</Button>`}</code></pre>
          </div>
          <div>
            <h3 class="text-lg font-medium mb-2">With States</h3>
            <pre class="bg-gray-100 dark:bg-gray-900 p-4 rounded-lg overflow-x-auto text-sm"><code>{`<Button variant="primary" loading={true}>Loading...</Button>
<Button variant="primary" disabled={true}>Disabled</Button>
<Button variant="primary" fullWidth={true}>Full Width</Button>`}</code></pre>
          </div>
          <div>
            <h3 class="text-lg font-medium mb-2">As Link</h3>
            <pre class="bg-gray-100 dark:bg-gray-900 p-4 rounded-lg overflow-x-auto text-sm"><code>{`<Button variant="primary" href="/dashboard">Go to Dashboard</Button>
<Button variant="link" href="/about">About Us</Button>`}</code></pre>
          </div>
        </div>
      </div>
    </section>
  </div>
</App>
