---
/**
 * Design Systems Page
 * Showcase all design system components organized by category
 */
import { checkAuth } from "../../lib/auth";
import App from "../../components/ui/App.astro";
import Button from "../../components/common/Button.astro";
import { globalCompanyData } from "../api/global/global-company-data";

// Common Components
import Hero from "../../components/common/Hero.astro";
import LoadingSpinner from "../../components/ui/LoadingSpinner.astro";
import Tooltip from "../../components/common/Tooltip.astro";
import SlideToggle from "../../components/common/SlideToggle.astro";
import Breadcrumb from "../../components/common/Breadcrumb.astro";
import PricingCard from "../../components/common/PricingCard.astro";
import SimpleIcon from "../../components/common/SimpleIcon.astro";

// Blocks
import AlertBlock from "../../components/blocks/AlertBlock.astro";
import StatsBlock from "../../components/blocks/StatsBlock.astro";
import FAQBlock from "../../components/blocks/FAQBlock.astro";
import CTABlock from "../../components/blocks/CTABlock.astro";
import TimelineBlock from "../../components/blocks/TimelineBlock.astro";
import LogoCloudBlock from "../../components/blocks/LogoCloudBlock.astro";

// UI Components
import ImageSlider from "../../components/ui/ImageSlider.astro";

// Features
import Testimonials from "../../features/testimonials/components/Testimonials.astro";

const { currentUser, session } = await checkAuth(Astro.cookies);
const currentRole = currentUser?.profile?.role;

// Redirect to login if not authenticated
if (!currentUser || !session) {
  return Astro.redirect("/auth/login");
}

// Check if user is admin
if (currentRole !== "Admin") {
  return Astro.redirect("/dashboard");
}

const companyData = await globalCompanyData();

// Button variants to showcase
const buttonVariants = [
  "primary",
  "secondary",
  "success",
  "warning",
  "danger",
  "outline",
  "ghost",
  "link",
  "anchor",
  "selected",
  "tab",
] as const;

// Button sizes to showcase
const buttonSizes = ["xs", "sm", "md", "lg", "xl"] as const;

// Breadcrumb items for demo
const breadcrumbItems = [
  { label: "Home", href: "/", icon: "home" },
  { label: "Admin", href: "/admin" },
  { label: "Design System", current: true },
];
---

<App
  title="Design System"
  description="Design system components and patterns"
  {currentUser}
  {session}
  globalCompanyName={companyData.globalCompanyName}
  globalCompanySlogan={companyData.globalCompanySlogan}
  globalCompanyLogo={companyData.globalCompanyLogo}
>
  <div class="max-w-7xl mx-auto px-4 py-8">
    <div class="mb-8">
      <h1 class="text-3xl font-bold mb-2">Design System</h1>
      <p class="text-gray-600 dark:text-gray-400">
        A comprehensive guide to all design system components and patterns used throughout the
        application.
      </p>
    </div>

    <!-- ==================== COMMON COMPONENTS ==================== -->
    <div class="mb-8">
      <h2 class="text-2xl font-bold mb-4 text-primary-600 dark:text-primary-400">Common Components</h2>
      
      <!-- Buttons Accordion -->
      <div class="mb-4 bg-white dark:bg-gray-800 border border-gray-200 dark:border-gray-700 rounded-lg">
        <div class="flex items-center justify-between">
          <div
            class="flex-1 cursor-pointer rounded-lg p-4 transition-colors hover:bg-gray-50 dark:hover:bg-gray-700"
            data-accordion-target="#accordion-buttons"
            aria-expanded="false"
            aria-controls="accordion-buttons"
            role="button"
            tabindex="0"
          >
            <h3 class="text-lg font-medium text-gray-900 dark:text-white">Buttons</h3>
            <p class="mt-1 text-sm text-gray-500 dark:text-gray-400">All button variants, sizes, and states</p>
          </div>
          <button
            class="p-4 text-gray-400 transition-colors hover:text-gray-600 dark:hover:text-gray-300"
            data-accordion-target="#accordion-buttons"
            aria-expanded="false"
            type="button"
          >
            <svg class="w-4 h-4 transition-transform duration-200" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
            </svg>
          </button>
        </div>
        <div id="accordion-buttons" class="hidden border-t border-gray-200 dark:border-gray-700">
          <div class="p-6 space-y-8">
            <!-- Button Variants -->
            <div>
              <h4 class="text-xl font-semibold mb-4">Variants</h4>
              <div class="space-y-6">
                {buttonVariants.map((variant) => (
                  <div class="border-b border-gray-200 dark:border-gray-700 pb-6 last:border-b-0 last:pb-0">
                    <div class="mb-3">
                      <h5 class="text-lg font-medium text-gray-900 dark:text-gray-100 capitalize">{variant}</h5>
                      <code class="text-xs text-gray-500 dark:text-gray-400 font-mono">variant="{variant}"</code>
                    </div>
                    <div class="flex flex-wrap items-center gap-3">
                      <Button variant={variant}>Button Text</Button>
                      <Button variant={variant} icon="bx-check" iconPosition="left">With Icon</Button>
                      <Button variant={variant} loading={true}>Loading</Button>
                      <Button variant={variant} disabled={true}>Disabled</Button>
                    </div>
                  </div>
                ))}
              </div>
            </div>

            <!-- Button Sizes -->
            <div>
              <h4 class="text-xl font-semibold mb-4">Sizes</h4>
              <div class="space-y-4">
                {buttonSizes.map((size) => (
                  <div class="flex items-center gap-4">
                    <div class="w-24 text-sm text-gray-600 dark:text-gray-400 font-medium uppercase">{size}</div>
                    <div class="flex flex-wrap items-center gap-3">
                      <Button variant="primary" size={size}>{size.toUpperCase()} Button</Button>
                      <Button variant="secondary" size={size}>{size.toUpperCase()} Button</Button>
                      <Button variant="outline" size={size}>{size.toUpperCase()} Button</Button>
                    </div>
                  </div>
                ))}
              </div>
            </div>

            <!-- Full Width -->
            <div>
              <h4 class="text-xl font-semibold mb-4">Full Width</h4>
              <div class="space-y-3 max-w-md">
                <Button variant="primary" fullWidth={true}>Full Width Primary</Button>
                <Button variant="secondary" fullWidth={true}>Full Width Secondary</Button>
                <Button variant="outline" fullWidth={true}>Full Width Outline</Button>
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- Hero Accordion -->
      <div class="mb-4 bg-white dark:bg-gray-800 border border-gray-200 dark:border-gray-700 rounded-lg">
        <div class="flex items-center justify-between">
          <div
            class="flex-1 cursor-pointer rounded-lg p-4 transition-colors hover:bg-gray-50 dark:hover:bg-gray-700"
            data-accordion-target="#accordion-hero"
            aria-expanded="false"
            role="button"
            tabindex="0"
          >
            <h3 class="text-lg font-medium text-gray-900 dark:text-white">Hero</h3>
            <p class="mt-1 text-sm text-gray-500 dark:text-gray-400">Hero sections with title, description, and buttons</p>
          </div>
          <button class="p-4 text-gray-400" data-accordion-target="#accordion-hero" type="button">
            <svg class="w-4 h-4 transition-transform duration-200" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
            </svg>
          </button>
        </div>
        <div id="accordion-hero" class="hidden border-t border-gray-200 dark:border-gray-700">
          <div class="p-6 space-y-8">
            <div>
              <h4 class="text-lg font-medium mb-4">Basic Hero</h4>
              <Hero
                title="Welcome to Our Platform"
                description="Build amazing fire protection systems with our comprehensive tools and support."
                leftButton={{ text: "Get Started", href: "/contact", variant: "primary" }}
                rightButton={{ text: "Learn More", href: "/about", variant: "outline" }}
              />
            </div>
            <div>
              <h4 class="text-lg font-medium mb-4">Hero with Background Image</h4>
              <Hero
                title="Fire Protection Experts"
                description="Serving the Northeast since 2015"
                backgroundImage="https://images.unsplash.com/photo-1504307651254-35680f356dfd?w=1200&auto=format"
                backgroundOverlay={true}
                overlayOpacity={0.6}
                leftButton={{ text: "Contact Us", href: "/contact", variant: "primary" }}
              />
            </div>
          </div>
        </div>
      </div>

      <!-- Loading Spinner Accordion -->
      <div class="mb-4 bg-white dark:bg-gray-800 border border-gray-200 dark:border-gray-700 rounded-lg">
        <div class="flex items-center justify-between">
          <div
            class="flex-1 cursor-pointer rounded-lg p-4 transition-colors hover:bg-gray-50 dark:hover:bg-gray-700"
            data-accordion-target="#accordion-spinner"
            aria-expanded="false"
            role="button"
            tabindex="0"
          >
            <h3 class="text-lg font-medium text-gray-900 dark:text-white">Loading Spinner</h3>
            <p class="mt-1 text-sm text-gray-500 dark:text-gray-400">Loading indicators with different sizes and colors</p>
          </div>
          <button class="p-4 text-gray-400" data-accordion-target="#accordion-spinner" type="button">
            <svg class="w-4 h-4 transition-transform duration-200" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
            </svg>
          </button>
        </div>
        <div id="accordion-spinner" class="hidden border-t border-gray-200 dark:border-gray-700">
          <div class="p-6">
            <div class="flex flex-wrap items-start gap-8">
              <div class="text-center">
                <p class="text-sm text-gray-500 mb-2">Small / Primary</p>
                <LoadingSpinner size="sm" color="primary" loadingText="Loading..." />
              </div>
              <div class="text-center">
                <p class="text-sm text-gray-500 mb-2">Medium / Success</p>
                <LoadingSpinner size="md" color="success" loadingText="Processing..." />
              </div>
              <div class="text-center">
                <p class="text-sm text-gray-500 mb-2">Large / Danger</p>
                <LoadingSpinner size="lg" color="danger" loadingText="Please wait..." />
              </div>
              <div class="text-center">
                <p class="text-sm text-gray-500 mb-2">Warning</p>
                <LoadingSpinner size="md" color="warning" loadingText="Saving..." />
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- Tooltip Accordion -->
      <div class="mb-4 bg-white dark:bg-gray-800 border border-gray-200 dark:border-gray-700 rounded-lg">
        <div class="flex items-center justify-between">
          <div
            class="flex-1 cursor-pointer rounded-lg p-4 transition-colors hover:bg-gray-50 dark:hover:bg-gray-700"
            data-accordion-target="#accordion-tooltip"
            aria-expanded="false"
            role="button"
            tabindex="0"
          >
            <h3 class="text-lg font-medium text-gray-900 dark:text-white">Tooltip</h3>
            <p class="mt-1 text-sm text-gray-500 dark:text-gray-400">Hover tooltips with different positions</p>
          </div>
          <button class="p-4 text-gray-400" data-accordion-target="#accordion-tooltip" type="button">
            <svg class="w-4 h-4 transition-transform duration-200" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
            </svg>
          </button>
        </div>
        <div id="accordion-tooltip" class="hidden border-t border-gray-200 dark:border-gray-700">
          <div class="p-6">
            <div class="flex flex-wrap items-center gap-8">
              <Tooltip text="This appears on top" position="top">
                <Button variant="outline">Tooltip Top</Button>
              </Tooltip>
              <Tooltip text="This appears on bottom" position="bottom">
                <Button variant="outline">Tooltip Bottom</Button>
              </Tooltip>
              <Tooltip text="This appears on left" position="left">
                <Button variant="outline">Tooltip Left</Button>
              </Tooltip>
              <Tooltip text="This appears on right" position="right">
                <Button variant="outline">Tooltip Right</Button>
              </Tooltip>
            </div>
          </div>
        </div>
      </div>

      <!-- Slide Toggle Accordion -->
      <div class="mb-4 bg-white dark:bg-gray-800 border border-gray-200 dark:border-gray-700 rounded-lg">
        <div class="flex items-center justify-between">
          <div
            class="flex-1 cursor-pointer rounded-lg p-4 transition-colors hover:bg-gray-50 dark:hover:bg-gray-700"
            data-accordion-target="#accordion-toggle"
            aria-expanded="false"
            role="button"
            tabindex="0"
          >
            <h3 class="text-lg font-medium text-gray-900 dark:text-white">Slide Toggle</h3>
            <p class="mt-1 text-sm text-gray-500 dark:text-gray-400">Toggle switches for boolean settings</p>
          </div>
          <button class="p-4 text-gray-400" data-accordion-target="#accordion-toggle" type="button">
            <svg class="w-4 h-4 transition-transform duration-200" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
            </svg>
          </button>
        </div>
        <div id="accordion-toggle" class="hidden border-t border-gray-200 dark:border-gray-700">
          <div class="p-6">
            <div class="space-y-4">
              <SlideToggle id="toggle-1" name="notifications" label="Enable notifications" checked={true} color="primary" />
              <SlideToggle id="toggle-2" name="darkmode" label="Dark mode" color="secondary" />
              <SlideToggle id="toggle-3" name="emails" label="Email updates" checked={true} color="success" />
              <SlideToggle id="toggle-4" name="analytics" label="Analytics tracking" color="warning" />
            </div>
          </div>
        </div>
      </div>

      <!-- Breadcrumb Accordion -->
      <div class="mb-4 bg-white dark:bg-gray-800 border border-gray-200 dark:border-gray-700 rounded-lg">
        <div class="flex items-center justify-between">
          <div
            class="flex-1 cursor-pointer rounded-lg p-4 transition-colors hover:bg-gray-50 dark:hover:bg-gray-700"
            data-accordion-target="#accordion-breadcrumb"
            aria-expanded="false"
            role="button"
            tabindex="0"
          >
            <h3 class="text-lg font-medium text-gray-900 dark:text-white">Breadcrumb</h3>
            <p class="mt-1 text-sm text-gray-500 dark:text-gray-400">Navigation breadcrumbs</p>
          </div>
          <button class="p-4 text-gray-400" data-accordion-target="#accordion-breadcrumb" type="button">
            <svg class="w-4 h-4 transition-transform duration-200" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
            </svg>
          </button>
        </div>
        <div id="accordion-breadcrumb" class="hidden border-t border-gray-200 dark:border-gray-700">
          <div class="p-6">
            <Breadcrumb items={breadcrumbItems} />
          </div>
        </div>
      </div>

      <!-- Pricing Card Accordion -->
      <div class="mb-4 bg-white dark:bg-gray-800 border border-gray-200 dark:border-gray-700 rounded-lg">
        <div class="flex items-center justify-between">
          <div
            class="flex-1 cursor-pointer rounded-lg p-4 transition-colors hover:bg-gray-50 dark:hover:bg-gray-700"
            data-accordion-target="#accordion-pricing"
            aria-expanded="false"
            role="button"
            tabindex="0"
          >
            <h3 class="text-lg font-medium text-gray-900 dark:text-white">Pricing Card</h3>
            <p class="mt-1 text-sm text-gray-500 dark:text-gray-400">Pricing display cards</p>
          </div>
          <button class="p-4 text-gray-400" data-accordion-target="#accordion-pricing" type="button">
            <svg class="w-4 h-4 transition-transform duration-200" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
            </svg>
          </button>
        </div>
        <div id="accordion-pricing" class="hidden border-t border-gray-200 dark:border-gray-700">
          <div class="p-6">
            <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
              <PricingCard
                title="Starter"
                description="Perfect for small projects"
                price="$49/mo"
                features={["5 active projects", "Basic support", "Document storage"]}
                buttonText="Get Started"
                buttonHref="/pricing"
              />
              <PricingCard
                title="Professional"
                description="For growing businesses"
                price="$149/mo"
                features={["25 active projects", "Priority support", "Advanced analytics", "Team collaboration"]}
                buttonText="Start Free Trial"
                buttonHref="/pricing"
              />
              <PricingCard
                title="Enterprise"
                description="For large organizations"
                price="Custom"
                features={["Unlimited projects", "Dedicated support", "Custom integrations", "SLA guarantee"]}
                buttonText="Contact Sales"
                buttonHref="/contact"
              />
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- ==================== UI COMPONENTS ==================== -->
    <div class="mb-8">
      <h2 class="text-2xl font-bold mb-4 text-primary-600 dark:text-primary-400">UI Components</h2>

      <!-- Image Slider Accordion -->
      <div class="mb-4 bg-white dark:bg-gray-800 border border-gray-200 dark:border-gray-700 rounded-lg">
        <div class="flex items-center justify-between">
          <div
            class="flex-1 cursor-pointer rounded-lg p-4 transition-colors hover:bg-gray-50 dark:hover:bg-gray-700"
            data-accordion-target="#accordion-imageslider"
            aria-expanded="false"
            role="button"
            tabindex="0"
          >
            <h3 class="text-lg font-medium text-gray-900 dark:text-white">Image Slider</h3>
            <p class="mt-1 text-sm text-gray-500 dark:text-gray-400">Multi-directional animated image grid with hero overlay</p>
          </div>
          <button class="p-4 text-gray-400" data-accordion-target="#accordion-imageslider" type="button">
            <svg class="w-4 h-4 transition-transform duration-200" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
            </svg>
          </button>
        </div>
        <div id="accordion-imageslider" class="hidden border-t border-gray-200 dark:border-gray-700">
          <div class="p-6 space-y-8">
            <div>
              <h4 class="text-lg font-medium mb-4">With Hero Overlay</h4>
              <ImageSlider
                title="Our Projects"
                description="Quality fire protection across the Northeast"
                image1="https://images.unsplash.com/photo-1504307651254-35680f356dfd?w=800&auto=format"
                image2="https://images.unsplash.com/photo-1581092160562-40aa08e78837?w=800&auto=format"
                image3="https://images.unsplash.com/photo-1558618666-fcd25c85cd64?w=800&auto=format"
                image4="https://images.unsplash.com/photo-1486406146926-c627a92ad1ab?w=800&auto=format"
                alt1="Construction site"
                alt2="Fire sprinkler installation"
                alt3="Fire protection equipment"
                alt4="Commercial building"
                direction1="left"
                direction2="right"
                direction3="up"
                direction4="down"
                height="400px"
                overlay="true"
                overlayOpacity="0.5"
                leftButtonText="Get a Quote"
                leftButtonHref="/contact"
                rightButtonText="Learn More"
                rightButtonHref="/services"
              />
            </div>
            <div>
              <h4 class="text-lg font-medium mb-4">Images Only (No Overlay)</h4>
              <ImageSlider
                image1="https://images.unsplash.com/photo-1541888946425-d81bb19240f5?w=800&auto=format"
                image2="https://images.unsplash.com/photo-1503387762-592deb58ef4e?w=800&auto=format"
                image3="https://images.unsplash.com/photo-1497366216548-37526070297c?w=800&auto=format"
                image4="https://images.unsplash.com/photo-1497366811353-6870744d04b2?w=800&auto=format"
                height="300px"
                overlay="false"
              />
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- ==================== BLOCKS ==================== -->
    <div class="mb-8">
      <h2 class="text-2xl font-bold mb-4 text-primary-600 dark:text-primary-400">Blocks</h2>

      <!-- Alert Block Accordion -->
      <div class="mb-4 bg-white dark:bg-gray-800 border border-gray-200 dark:border-gray-700 rounded-lg">
        <div class="flex items-center justify-between">
          <div
            class="flex-1 cursor-pointer rounded-lg p-4 transition-colors hover:bg-gray-50 dark:hover:bg-gray-700"
            data-accordion-target="#accordion-alertblock"
            aria-expanded="false"
            role="button"
            tabindex="0"
          >
            <h3 class="text-lg font-medium text-gray-900 dark:text-white">AlertBlock</h3>
            <p class="mt-1 text-sm text-gray-500 dark:text-gray-400">Alert/notification banners with different variants</p>
          </div>
          <button class="p-4 text-gray-400" data-accordion-target="#accordion-alertblock" type="button">
            <svg class="w-4 h-4 transition-transform duration-200" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
            </svg>
          </button>
        </div>
        <div id="accordion-alertblock" class="hidden border-t border-gray-200 dark:border-gray-700">
          <div class="p-6 space-y-4">
            <AlertBlock variant="info" title="Information" message="This is an informational message." />
            <AlertBlock variant="success" title="Success" message="Operation completed successfully!" />
            <AlertBlock variant="warning" title="Warning" message="Please review before proceeding." dismissible={true} />
            <AlertBlock variant="danger" title="Error" message="Something went wrong. Please try again." buttonText="Retry" buttonHref="#" />
            <div>
              <p class="text-sm text-gray-500 mb-2">Card Layout:</p>
              <AlertBlock variant="info" layout="card" title="System Update" message="A new version is available with improved performance and security fixes." buttonText="Update Now" buttonHref="#" />
            </div>
            <div>
              <p class="text-sm text-gray-500 mb-2">Toast Layout:</p>
              <AlertBlock variant="success" layout="toast" title="Saved!" message="Your changes have been saved." dismissible={true} />
            </div>
          </div>
        </div>
      </div>

      <!-- Stats Block Accordion -->
      <div class="mb-4 bg-white dark:bg-gray-800 border border-gray-200 dark:border-gray-700 rounded-lg">
        <div class="flex items-center justify-between">
          <div
            class="flex-1 cursor-pointer rounded-lg p-4 transition-colors hover:bg-gray-50 dark:hover:bg-gray-700"
            data-accordion-target="#accordion-statsblock"
            aria-expanded="false"
            role="button"
            tabindex="0"
          >
            <h3 class="text-lg font-medium text-gray-900 dark:text-white">StatsBlock</h3>
            <p class="mt-1 text-sm text-gray-500 dark:text-gray-400">Statistics and metrics display</p>
          </div>
          <button class="p-4 text-gray-400" data-accordion-target="#accordion-statsblock" type="button">
            <svg class="w-4 h-4 transition-transform duration-200" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
            </svg>
          </button>
        </div>
        <div id="accordion-statsblock" class="hidden border-t border-gray-200 dark:border-gray-700">
          <div class="p-6 space-y-8">
            <div>
              <p class="text-sm text-gray-500 mb-4">Simple Variant:</p>
              <StatsBlock
                title="By The Numbers"
                description="Our track record speaks for itself"
                variant="simple"
                stat1Value="500+"
                stat1Label="Projects Completed"
                stat1Icon="folder"
                stat2Value="99%"
                stat2Label="Client Satisfaction"
                stat2Icon="heart"
                stat3Value="24/7"
                stat3Label="Support Available"
                stat3Icon="phone"
                stat4Value="15+"
                stat4Label="Years Experience"
                stat4Icon="award"
