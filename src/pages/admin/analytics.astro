---
import App from "../../components/common/App.astro";
import { checkAuth } from "../../lib/auth";

const { currentUser, session, supabase } = await checkAuth(Astro.cookies);
const currentRole = currentUser?.profile?.role || "Client";

// For development: allow access without authentication
// In production, you might want to re-enable these checks
if (!currentUser) {
  return Astro.redirect("/auth/login");
}

if (currentRole !== "Admin") {
  return Astro.redirect("/dashboard");
}
---

<App
  title="Analytics Dashboard - CAPCo Fire Protection"
  description="Real-time website analytics and insights for capcofire.com"
  {currentUser}
  {session}
  {supabase}
  isBackend={true}
>
  <!-- Main Content -->
  <div class="max-w-7xl mx-auto py-6 sm:px-6 lg:px-8">
    <!-- Header -->

    <!-- Browser Compatibility Notice -->
    <div
      class="hidden mb-6 bg-yellow-50 dark:bg-yellow-900/20 border border-yellow-200 dark:border-yellow-800 rounded-lg p-4"
    >
      <div class="flex">
        <div class="flex-shrink-0">
          <svg class="h-5 w-5 text-yellow-400" fill="currentColor" viewBox="0 0 20 20">
            <path
              fill-rule="evenodd"
              d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z"
              clip-rule="evenodd"></path>
          </svg>
        </div>
        <div class="ml-3">
          <h3 class="text-sm font-medium text-yellow-800 dark:text-yellow-200">
            Browser Compatibility Notice
          </h3>
          <div class="mt-2 text-sm text-yellow-700 dark:text-yellow-300">
            <p>
              If you're using Firefox or have strict security settings, the analytics dashboard may
              be blocked.
              <a
                href="https://plausible-analytics-ce-production-6fd8.up.railway.app/capcofire.com"
                target="_blank"
                rel="noopener noreferrer"
                class="font-medium underline hover:text-yellow-600 dark:hover:text-yellow-400"
              >
                Click here to open analytics in a new tab
              </a>.
            </p>
          </div>
        </div>
      </div>
    </div>

    <!-- Dashboard Container -->
    <div class="color-background rounded-lg shadow-sm border dark:border-gray-700">
      <div class="p-6">
        <div class="mb-4">
          <h3 class="text-lg font-medium text-gray-900 dark:text-white">Analytics Dashboard</h3>
          <p class="text-sm text-gray-500 dark:text-gray-400">
            Real-time analytics data for capcofire.com
          </p>
        </div>

        <!-- API-based Analytics Display -->
        <div class="space-y-6">
          <!-- Analytics Source and Period Selectors -->
          <div class="flex flex-col sm:flex-row gap-4">
            <div class="flex items-center space-x-4">
              <label
                for="source-select"
                class="text-sm font-medium text-gray-700 dark:text-gray-300"
              >
                Data Source:
              </label>
              <select
                id="source-select"
                class="rounded-md border-gray-300 dark:border-gray-600 dark:bg-gray-700 dark:text-white"
                onchange="loadAnalyticsData()"
              >
                <option value="self-hosted" selected>Self-Hosted Plausible</option>
                <option value="external">External API</option>
              </select>
            </div>
            <div class="flex items-center space-x-4">
              <label
                for="period-select"
                class="text-sm font-medium text-gray-700 dark:text-gray-300"
              >
                Time Period:
              </label>
              <select
                id="period-select"
                class="rounded-md border-gray-300 dark:border-gray-600 dark:bg-gray-700 dark:text-white"
                onchange="loadAnalyticsData()"
              >
                <option value="7d">Last 7 days</option>
                <option value="30d" selected>Last 30 days</option>
                <option value="90d">Last 90 days</option>
                <option value="12mo">Last 12 months</option>
              </select>
            </div>
          </div>

          <!-- Loading State -->
          <div id="analytics-loading" class="flex items-center justify-center py-12">
            <div class="animate-spin rounded-full h-8 w-8 border-b-2 border-blue-600"></div>
            <span class="ml-2 text-gray-600 dark:text-gray-400">Loading analytics data...</span>
          </div>

          <!-- Analytics Data Display -->
          <div id="analytics-content" class="hidden">
            <!-- This will be populated by JavaScript -->
          </div>

          <!-- Error State -->
          <div
            id="analytics-error"
            class="hidden bg-red-50 dark:bg-red-900/20 border border-red-200 dark:border-red-800 rounded-lg p-4"
          >
            <div class="flex">
              <div class="flex-shrink-0">
                <svg class="h-5 w-5 text-red-400" fill="currentColor" viewBox="0 0 20 20">
                  <path
                    fill-rule="evenodd"
                    d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z"
                    clip-rule="evenodd"></path>
                </svg>
              </div>
              <div class="ml-3">
                <h3 class="text-sm font-medium text-red-800 dark:text-red-200">
                  Error Loading Analytics
                </h3>
                <div class="mt-2 text-sm text-red-700 dark:text-red-300">
                  <p id="error-message">Failed to load analytics data. Please try again.</p>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Quick Stats Cards -->
    <div class="mt-8 grid grid-cols-1 md:grid-cols-3 gap-6">
      <div class="color-background rounded-lg shadow-sm border dark:border-gray-700 p-6">
        <div class="flex items-center">
          <div class="flex-shrink-0">
            <div
              class="w-8 h-8 bg-blue-100 dark:bg-blue-900 rounded-md flex items-center justify-center"
            >
              <svg
                class="w-5 h-5 text-blue-600 dark:text-blue-400"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"
                ></path>
              </svg>
            </div>
          </div>
          <div class="ml-4">
            <p class="text-sm font-medium text-gray-500 dark:text-gray-400">Page Views</p>
            <p class="text-2xl font-semibold text-gray-900 dark:text-white">Live Data</p>
          </div>
        </div>
      </div>

      <div class="color-background rounded-lg shadow-sm border dark:border-gray-700 p-6">
        <div class="flex items-center">
          <div class="flex-shrink-0">
            <div
              class="w-8 h-8 bg-green-100 dark:bg-green-900 rounded-md flex items-center justify-center"
            >
              <svg
                class="w-5 h-5 text-green-600 dark:text-green-400"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"
                ></path>
              </svg>
            </div>
          </div>
          <div class="ml-4">
            <p class="text-sm font-medium text-gray-500 dark:text-gray-400">Unique Visitors</p>
            <p class="text-2xl font-semibold text-gray-900 dark:text-white">Live Data</p>
          </div>
        </div>
      </div>

      <div class="color-background rounded-lg shadow-sm border dark:border-gray-700 p-6">
        <div class="flex items-center">
          <div class="flex-shrink-0">
            <div
              class="w-8 h-8 bg-purple-100 dark:bg-purple-900 rounded-md flex items-center justify-center"
            >
              <svg
                class="w-5 h-5 text-purple-600 dark:text-purple-400"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"
                ></path>
              </svg>
            </div>
          </div>
          <div class="ml-4">
            <p class="text-sm font-medium text-gray-500 dark:text-gray-400">Bounce Rate</p>
            <p class="text-2xl font-semibold text-gray-900 dark:text-white">Live Data</p>
          </div>
        </div>
      </div>
    </div>

    <!-- Additional Info -->
    <div
      class="mt-8 bg-blue-50 dark:bg-blue-900/20 border border-blue-200 dark:border-blue-800 rounded-lg p-6"
    >
      <div class="flex">
        <div class="flex-shrink-0">
          <svg class="h-5 w-5 text-blue-400" fill="currentColor" viewBox="0 0 20 20">
            <path
              fill-rule="evenodd"
              d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z"
              clip-rule="evenodd"></path>
          </svg>
        </div>
        <div class="ml-3">
          <h3 class="text-sm font-medium text-blue-800 dark:text-blue-200">
            Analytics Information
          </h3>
          <div class="mt-2 text-sm text-blue-700 dark:text-blue-300">
            <p>
              This dashboard shows real-time analytics for capcofire.com using Plausible Analytics.
            </p>
            <p class="mt-1">
              The iframe above displays live data including page views, unique visitors, top pages,
              and more.
            </p>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Plausible Analytics Script -->
  <script
    defer
    data-domain="capcofire.com"
    src="https://plausible-analytics-ce-production-6fd8.up.railway.app/js/script.file-downloads.hash.outbound-links.pageview-props.revenue.tagged-events.js"
  ></script>
  <script>
    // Analytics API integration
    async function loadAnalyticsData() {
      const loadingEl = document.getElementById("analytics-loading");
      const contentEl = document.getElementById("analytics-content");
      const errorEl = document.getElementById("analytics-error");
      const periodSelect = document.getElementById("period-select") as HTMLSelectElement;
      const sourceSelect = document.getElementById("source-select") as HTMLSelectElement;

      const period = periodSelect?.value || "30d";
      const source = sourceSelect?.value || "self-hosted";

      // Show loading state
      if (loadingEl) loadingEl.classList.remove("hidden");
      if (contentEl) contentEl.classList.add("hidden");
      if (errorEl) errorEl.classList.add("hidden");

      try {
        // Fetch analytics data from API
        const response = await fetch(
          `/api/self-hosted-analytics?source=${source}&period=${period}`
        );
        const result = await response.json();

        if (result.success) {
          displayAnalyticsData(result.data);
        } else {
          throw new Error(result.error || "Failed to fetch analytics data");
        }
      } catch (error) {
        console.error("Analytics API error:", error);
        showAnalyticsError(
          error instanceof Error ? error.message : "Failed to load analytics data"
        );
      } finally {
        if (loadingEl) loadingEl.classList.add("hidden");
      }
    }

    function displayAnalyticsData(data: any) {
      const contentEl = document.getElementById("analytics-content");
      if (!contentEl) return;

      // Create analytics display HTML
      const html = `
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-8">
          <div class="bg-blue-50 dark:bg-blue-900/20 rounded-lg p-6">
            <div class="flex items-center">
              <div class="flex-shrink-0">
                <div class="w-8 h-8 bg-blue-100 dark:bg-blue-900 rounded-md flex items-center justify-center">
                  <svg class="w-5 h-5 text-blue-600 dark:text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path>
                  </svg>
                </div>
              </div>
              <div class="ml-4">
                <p class="text-sm font-medium text-blue-600 dark:text-blue-400">Page Views</p>
                <p class="text-2xl font-semibold text-blue-900 dark:text-blue-100">${data.pageviews || 0}</p>
              </div>
            </div>
          </div>

          <div class="bg-green-50 dark:bg-green-900/20 rounded-lg p-6">
            <div class="flex items-center">
              <div class="flex-shrink-0">
                <div class="w-8 h-8 bg-green-100 dark:bg-green-900 rounded-md flex items-center justify-center">
                  <svg class="w-5 h-5 text-green-600 dark:text-green-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
                  </svg>
                </div>
              </div>
              <div class="ml-4">
                <p class="text-sm font-medium text-green-600 dark:text-green-400">Unique Visitors</p>
                <p class="text-2xl font-semibold text-green-900 dark:text-green-100">${data.visitors || 0}</p>
              </div>
            </div>
          </div>

          <div class="bg-purple-50 dark:bg-purple-900/20 rounded-lg p-6">
            <div class="flex items-center">
              <div class="flex-shrink-0">
                <div class="w-8 h-8 bg-purple-100 dark:bg-purple-900 rounded-md flex items-center justify-center">
                  <svg class="w-5 h-5 text-purple-600 dark:text-purple-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path>
                  </svg>
                </div>
              </div>
              <div class="ml-4">
                <p class="text-sm font-medium text-purple-600 dark:text-purple-400">Bounce Rate</p>
                <p class="text-2xl font-semibold text-purple-900 dark:text-purple-100">${data.bounce_rate || 0}%</p>
              </div>
            </div>
          </div>

          <div class="bg-orange-50 dark:bg-orange-900/20 rounded-lg p-6">
            <div class="flex items-center">
              <div class="flex-shrink-0">
                <div class="w-8 h-8 bg-orange-100 dark:bg-orange-900 rounded-md flex items-center justify-center">
                  <svg class="w-5 h-5 text-orange-600 dark:text-orange-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                  </svg>
                </div>
              </div>
              <div class="ml-4">
                <p class="text-sm font-medium text-orange-600 dark:text-orange-400">Avg. Duration</p>
                <p class="text-2xl font-semibold text-orange-900 dark:text-orange-100">${data.visit_duration || 0}s</p>
              </div>
            </div>
          </div>
        </div>

        <div class="bg-gray-50 dark:bg-gray-700 rounded-lg p-6">
          <h4 class="text-lg font-medium text-gray-900 dark:text-white mb-4">Analytics Summary</h4>
          <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
            <div>
              <p class="text-sm text-gray-600 dark:text-gray-400">Data Provider: ${data.provider || "Plausible"}</p>
              <p class="text-sm text-gray-600 dark:text-gray-400">Period: ${data.period || "30 days"}</p>
            </div>
            <div>
              <p class="text-sm text-gray-600 dark:text-gray-400">Last Updated: ${new Date().toLocaleString()}</p>
              <p class="text-sm text-gray-600 dark:text-gray-400">Status: Live Data</p>
            </div>
          </div>
        </div>
      `;

      contentEl.innerHTML = html;
      contentEl.classList.remove("hidden");
    }

    function showAnalyticsError(message: string) {
      const errorEl = document.getElementById("analytics-error");
      const errorMessageEl = document.getElementById("error-message");

      if (errorEl) errorEl.classList.remove("hidden");
      if (errorMessageEl) errorMessageEl.textContent = message;
    }

    // Initialize analytics on page load
    document.addEventListener("DOMContentLoaded", function () {
      loadAnalyticsData();
    });

    // Make loadAnalyticsData globally available
    (window as any).loadAnalyticsData = loadAnalyticsData;
  </script>
</App>
