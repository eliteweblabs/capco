---
import { checkAuth } from "../../../lib/auth";
import LayoutFullWidth from "../../../components/layouts/LayoutFullWidth.astro";
import Breadcrumb from "../../../components/common/Breadcrumb.astro";
import { globalClasses } from "../../api/global/global-classes";

const { currentUser, session } = await checkAuth(Astro.cookies);
if (!currentUser || !session || currentUser?.profile?.role !== "Admin") {
  return Astro.redirect("/auth/login");
}
const { primaryTextClasses, mutedTextClasses, globalCardStyle } = globalClasses();
const items = [
  { label: "Home", href: "/", icon: "home" },
  { label: "Admin", href: "/admin" },
  { label: "Design", href: "/admin/design" },
  { label: "Breadcrumb", current: true },
];
---

<LayoutFullWidth title="Breadcrumb" description="Breadcrumb navigation component." classList="p-4">
  <div class="px-4 py-8">
    <h1 class={`mb-2 text-3xl font-bold ${primaryTextClasses}`}>Breadcrumb</h1>
    <p class={`mb-6 ${mutedTextClasses}`}>Breadcrumb navigation.</p>

    <div class={`${globalCardStyle} p-6`}>
      <Breadcrumb items={items} />
    </div>
  </div>
</LayoutFullWidth>
