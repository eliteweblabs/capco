---
import { checkAuth } from "../../../lib/auth";
import LayoutFullWidth from "../../../components/layouts/LayoutFullWidth.astro";
import TooltipUi from "../../../components/ui/Tooltip.astro";
import Button from "../../../components/common/Button.astro";
import { globalClasses } from "../../api/global/global-classes";

const { currentUser, session } = await checkAuth(Astro.cookies);
if (!currentUser || !session || currentUser?.profile?.role !== "Admin") {
  return Astro.redirect("/auth/login");
}
const { primaryTextClasses, mutedTextClasses, globalCardStyle } = globalClasses();
---

<LayoutFullWidth title="Tooltip" description="Hover tooltips with different positions." classList="p-4">
  <div class="px-4 py-8">
    <h1 class={`mb-2 text-3xl font-bold ${primaryTextClasses}`}>Tooltip</h1>
    <p class={`mb-6 ${mutedTextClasses}`}>Hover tooltips with different positions.</p>

    <div
      class={`flex flex-wrap gap-4 ${globalCardStyle} p-6`}
    >
      <TooltipUi text="Tooltip on top" position="top">
        <Button variant="outline">Top</Button>
      </TooltipUi>
      <TooltipUi text="Tooltip on right" position="right">
        <Button variant="outline">Right</Button>
      </TooltipUi>
      <TooltipUi text="Tooltip on bottom" position="bottom">
        <Button variant="outline">Bottom</Button>
      </TooltipUi>
      <TooltipUi text="Tooltip on left" position="left">
        <Button variant="outline">Left</Button>
      </TooltipUi>
    </div>
  </div>
</LayoutFullWidth>
