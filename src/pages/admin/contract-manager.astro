---
import ContractEditor from "../../components/admin/ContractEditor.astro";
import Layout from "../../components/common/Layout.astro";

// This would typically fetch from your project data
// For now, I'll use placeholder data
const projectId = "479"; // This would come from URL params or props
const projectTitle = "Sample Fire Protection Project";
---

<Layout title="Contract Manager">
  <div class="container mx-auto px-4 py-8">
    <div class="mb-6">
      <h1 class="text-3xl font-bold text-gray-900 dark:text-white">Contract Manager</h1>
      <p class="mt-2 text-gray-600 dark:text-gray-400">Edit and manage project contracts</p>
    </div>

    <div
      class="rounded-lg border border-gray-200 bg-white shadow-sm dark:border-gray-700 dark:bg-gray-800"
    >
      <ContractEditor projectId={projectId} projectTitle={projectTitle} initialContractHtml="" />
    </div>
  </div>
</Layout>
