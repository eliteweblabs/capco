---
const requireAuthRedirect = "/auth/login";
import { checkAuth } from "../../lib/auth";

const { currentUser, session, supabase, refreshToken, accessToken } = await checkAuth(
  Astro.cookies
);

// Handle auth redirect first
if (requireAuthRedirect && (!session || !currentUser || currentUser?.profile?.role !== "Admin")) {
  return Astro.redirect(requireAuthRedirect);
}

import LayoutCentered from "../../components/layouts/LayoutCentered.astro";
import SimpleIcon from "../../components/common/SimpleIcon.astro";
// refresh-manager loaded in App.astro for Admin

// Create slug from company name
function slugify(text: string): string {
  return text
    .toString()
    .toLowerCase()
    .trim()
    .replace(/\s+/g, "-") // Replace spaces with -
    .replace(/[^\w\-]+/g, "") // Remove all non-word chars
    .replace(/\-\-+/g, "-") // Replace multiple - with single -
    .replace(/^-+/, "") // Trim - from start of text
    .replace(/-+$/, ""); // Trim - from end of text
}

// Get calLink from company name or default to 'capco'
const companySlug = currentUser?.profile?.companyName
  ? slugify(currentUser.profile?.companyName || "")
  : "capco";

// Cal.com URLs (PUBLIC_CALCOM_BASE_URL)
const CALCOM_BASE_URL =
  import.meta.env.PUBLIC_CALCOM_BASE_URL || "https://calcom-web-app-production-0b16.up.railway.app";
const CALCOM_ADMIN_URL = `${CALCOM_BASE_URL}/settings/admin`;
const CALCOM_USER_URL = `${CALCOM_BASE_URL}/${companySlug}`;
const CALCOM_IFRAME_URL = `${CALCOM_BASE_URL}/auth/login`; // Start with login - will auto-redirect if already authenticated
---

<LayoutCentered title="Calendar Admin" description="Manage calendar integrations">
  <div class="flex h-full flex-col">
    <!-- Compact Header -->
    <h1>Calendar Admin - Add ${companySlug} - {CALCOM_BASE_URL}</h1>
    <div class="color-background flex-shrink-0 border-b border-gray-200 dark:border-gray-700">
      <div class="flex items-center justify-between px-4 py-3">
        <div class="flex items-center gap-3">
          <SimpleIcon name="calendar" size="lg" class="text-primary-600 dark:text-primary-400" />
          <div>
            <h1 class="text-lg font-semibold text-gray-900 dark:text-white">Calendar Management</h1>
            <!-- <p class="text-xs text-gray-600 dark:text-gray-400">
              <code class="bg-gray-100 dark:bg-gray-700 px-1 rounded">/{companySlug}</code>
            </p> -->
          </div>
        </div>
        <div class="flex gap-2">
          <a
            href={CALCOM_USER_URL}
            target="_blank"
            rel="noopener noreferrer"
            class="inline-flex items-center gap-2 rounded bg-green-600 px-3 py-1.5 text-sm text-white transition-colors hover:bg-green-700"
            title="View your public booking page"
          >
            <SimpleIcon name="calendar" size="sm" />
            Booking
          </a>
          <a
            href={CALCOM_ADMIN_URL}
            target="_blank"
            rel="noopener noreferrer"
            class="inline-flex items-center gap-2 rounded bg-primary-600 px-3 py-1.5 text-sm text-white transition-colors hover:bg-primary-700"
            title="Open admin settings in new tab"
          >
            <SimpleIcon name="external-link" size="sm" />
            Admin
          </a>
        </div>
      </div>

      <!-- Separate Login Notice (Compact) -->
      <div class="px-4 pb-3">
        <div
          class="dark:bg-primary-900/20 flex items-start gap-2 rounded border border-primary-200 bg-primary-50 p-2 dark:border-primary-800"
        >
          <SimpleIcon
            name="info"
            size="md"
            class="flex-shrink-0 text-primary-600 dark:text-primary-400"
          />
          <p class="text-xs text-primary-800 dark:text-primary-200">
            <strong>Note:</strong> Cal.com uses separate authentication. You'll need to log in with your
            Cal.com credentials.
          </p>
        </div>
      </div>
    </div>

    <!-- Cal.com Admin Iframe (Full Height) -->
    <div class="color-background relative flex-1">
      <!-- Loading State -->
      <div
        id="iframe-loading"
        class="color-background absolute inset-0 z-10 flex items-center justify-center"
      >
        <div class="text-center">
          <div
            class="mb-4 inline-block h-12 w-12 animate-spin rounded-full border-4 border-gray-200 border-t-primary-600"
          >
          </div>
          <p class="text-gray-600 dark:text-gray-400">Loading calendar...</p>
        </div>
      </div>

      <!-- Iframe -->
      <iframe
        id="calcom-admin-iframe"
        src={CALCOM_IFRAME_URL}
        class="absolute inset-0 h-full w-full border-0"
        title="Cal.com Admin Interface"
        allow="camera; microphone; geolocation; clipboard-write"
        sandbox="allow-same-origin allow-scripts allow-forms allow-popups allow-popups-to-escape-sandbox allow-modals"
      ></iframe>
    </div>
  </div>

  <script define:vars={{ CALCOM_ADMIN_URL }}>
    // Handle iframe loading
    const iframe = document.getElementById("calcom-admin-iframe");
    const loading = document.getElementById("iframe-loading");

    if (iframe && loading) {
      iframe.addEventListener("load", () => {
        if (loading) loading.style.display = "none";
      });

      // Fallback: hide loading after 5 seconds
      setTimeout(() => {
        if (loading) {
          loading.style.display = "none";
        }
      }, 5000);
    }

    // Handle iframe errors
    if (iframe) {
      iframe.addEventListener("error", () => {
        console.error("Failed to load Cal.com admin interface");
        if (loading) {
          loading.innerHTML = `
            <div class="text-center p-8">
              <div class="w-16 h-16 bg-red-100 dark:bg-red-900 rounded-full flex items-center justify-center mx-auto mb-4">
                <svg class="w-8 h-8 text-red-600 dark:text-red-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-2.5L13.732 4c-.77-.833-1.732-.833-2.5 0L4.268 19.5c-.77.833.192 2.5 1.732 2.5z"></path>
                </svg>
              </div>
              <h3 class="text-lg font-medium text-gray-900 dark:text-white mb-2">Calendar Unavailable</h3>
              <p class="text-gray-600 dark:text-gray-400 mb-4">Unable to load the calendar interface.</p>
              <a href="${CALCOM_ADMIN_URL}" target="_blank" rel="noopener noreferrer" 
                 class="inline-flex items-center px-4 py-2 bg-primary-600 text-white rounded-lg hover:bg-primary-700 transition-colors">
                Open Cal.com Directly
              </a>
            </div>
          `;
        }
      });
    }
  </script>
</LayoutCentered>
