---
/**
 * NFPA 25 Wet Pipe Sprinkler Systems — Inspection, Testing, and Maintenance
 * Form config is loaded from config.json under forms["nfpa25-wet-pipe-itm"].
 */
import LayoutFullForm from "@/components/layouts/LayoutFullForm.astro";
import MultiStepForm from "@/features/forms/components/MultiStepForm.astro";
import { getFormConfig } from "@/lib/forms/form-config-from-site";

const formConfig = await getFormConfig("nfpa25-wet-pipe-itm");
if (!formConfig) {
  throw new Error(
    "Form nfpa25-wet-pipe-itm is missing. Add it to config.json under forms[\"nfpa25-wet-pipe-itm\"]"
  );
}
---

<LayoutFullForm
  title="Wet Pipe Sprinkler Systems — ITM"
  description="NFPA 25 Inspection, Testing, and Maintenance"
>
  <MultiStepForm config={formConfig} />
</LayoutFullForm>
