---
/**
 * New Project Page - Renders CMS content for /project/new
 */
import { checkAuth } from "../../lib/auth";

import MultiStepProjectForm from "../../components/project/___MultiStepProjectForm.astro";
import LayoutCentered from "../../components/layouts/LayoutCentered.astro";
import { globalClasses } from "../api/global/global-classes.ts";

const { currentUser, session, supabase } = await checkAuth(Astro.cookies);
const { globalInputClasses, primaryTextClasses, secondaryTextClasses } = globalClasses();
---

<LayoutCentered title="Start a New Project" description="Create a new project using the multi-step form">
  <MultiStepProjectForm
    {currentUser}
    isNewProject={true}
    {globalInputClasses}
    {secondaryTextClasses}
    {primaryTextClasses}
  />
</LayoutCentered>
