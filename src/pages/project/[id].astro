      />

      <!-- Proposal Tab -->
      <TabProposal
        project={project}
        currentRole={currentRole || undefined}
        projectId={projectId}
        projectStatus={currentStatusInt}
        projectStatusLabel={currentStatusName || undefined}
        authorProfile={projectAuthor}
        currentUser={currentUser}
        invoiceResult={invoiceResult || { data: null, error: null }}
      />

      <!-- Contract Tab -->
      <TabContract
        project={project}
        currentRole={currentRole || undefined}
        projectId={projectId}
        projectStatus={currentStatusInt}
        projectStatusLabel={currentStatusName || undefined}
        authorProfile={projectAuthor}
      />

      <!-- Deposit Tab -->
      <TabDeposit
        project={project}
        currentRole={currentRole || undefined}
        projectId={projectId}
        projectStatus={currentStatusInt}
        projectStatusLabel={currentStatusName || undefined}
        authorProfile={projectAuthor}
      />

      <!-- Final Invoice Tab -->
      <TabFinalInvoice
        project={project}
        currentRole={currentRole || undefined}
        projectId={projectId}
        projectStatus={currentStatusInt}
        projectStatusLabel={currentStatusName || undefined}
        authorProfile={projectAuthor}
      />

      <TabActivityLog currentRole={currentRole || undefined} projectId={projectId} />

      <TabGeneratePdf projectId={projectId} currentRole={currentRole || undefined} />
    </div>
  </SectionContainer>
</App>

