  description={`${project?.address || project?.title || "Untitled Project"} - CAPCo Fire Protection`}
  isAuth={!!currentUser}
  currentUser={currentUser}
  currentRole={currentRole || "Client"}
  session={null}
  project={project}
  projectId={projectId}
>
  <!-- Add Supabase URL meta tag for image loading -->
  <!-- <meta name="supabase-url" content={import.meta.env.PUBLIC_SUPABASE_URL} /> -->
  <HeroProject
    title={project?.address || project?.title || "Untitled Project"}
    description={`<div class="space-y-1">
      <div class="inline-flex items-center">
        <i class="bx bx-user mr-2 text-gray-500"></i>
        <span class="font-medium">${project?.company_name || "Unknown Author"}</span>
      </div>
     
