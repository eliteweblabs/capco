    // Handle tab-specific actions based on parameters
    if (baseTabName === "discussion" && params.get("new") === "true") {
      // Auto-trigger new comment form after a short delay to ensure tab is visible
      setTimeout(() => {
        if (window.toggleCommentForm) {
