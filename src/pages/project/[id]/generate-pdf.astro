console.log("üèóÔ∏è [GENERATE-PDF] API URL:", `${Astro.url.origin}/api/get-project?id=${id}`);

if (!currentUser) {
  console.error("üèóÔ∏è [GENERATE-PDF] No authenticated user, redirecting to login");
  return Astro.redirect("/auth/login");
