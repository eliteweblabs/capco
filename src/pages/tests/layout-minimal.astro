---
/**
 * Test page: layout="minimal"
 * Minimal layoutâ€”full app chrome but layout value is "minimal" for data-template / CMS.
 */
import App from "../../components/ui/App.astro";
import { checkAuth } from "../../lib/auth";
import { globalClasses } from "../api/global/global-classes";

const { currentUser } = await checkAuth(Astro.cookies);
const { globalCardStyle } = globalClasses();
---

<App
  title="Layout: Minimal"
  description="Test page for minimal template"
  layout="minimal"
  {currentUser}
>
  <div class="container mx-auto max-w-4xl px-4 py-8">
    <h1 class="mb-4 text-2xl font-bold text-gray-900 dark:text-white">Minimal layout</h1>
    <p class="mb-6 text-gray-600 dark:text-gray-400">
      This page uses <code class="rounded bg-gray-200 px-1 dark:bg-gray-700">layout="minimal"</code
      >. You still get header and footer; the main difference is the template identifier for CMS or
      theming (data-template).
    </p>

    <ul class="mb-8 list-disc space-y-2 pl-6 text-gray-700 dark:text-gray-300">
      <li>First bullet for dummy content</li>
      <li>Second bullet</li>
      <li>Third bullet</li>
    </ul>

    <div
      class={`${globalCardStyle} p-4`}
    >
      <p class="text-sm text-gray-600 dark:text-gray-400">
        Use this page to verify minimal template behavior and that content is constrained to a
        readable width.
      </p>
    </div>
  </div>
</App>
