---
/**
 * Demo: Swipe to Reveal List
 * Test the SwipeToRevealList component - swipe left on each item to reveal Delete/Archive actions
 */
import App from "../../components/ui/App.astro";
import SwipeToRevealList from "../../components/ui/SwipeToRevealList.astro";
import type { SwipeItem } from "../../components/ui/SwipeToRevealList.astro";

const demoItems: SwipeItem[] = [
  { id: "1", label: "Project Alpha", subtitle: "Fire suppression system" },
  { id: "2", label: "Project Beta", subtitle: "Sprinkler installation" },
  { id: "3", label: "Project Gamma", subtitle: "Alarm system upgrade" },
  {
    id: "4",
    label: "Project Delta",
    subtitle: "Full inspection",
    actions: [
      { label: "Archive", variant: "secondary", icon: "archive" },
      { label: "Delete", variant: "danger", icon: "trash" },
    ],
  },
  { id: "5", label: "Project Epsilon", subtitle: "New construction" },
];
---

<App title="Swipe to Reveal Demo" description="Demo of swipe-to-reveal list component">
  <div class="container mx-auto max-w-xl px-4 py-12">
    <h1 class="mb-2 text-3xl font-bold text-gray-900 dark:text-white">
      Swipe to Reveal List
    </h1>
    <p class="mb-8 text-gray-600 dark:text-gray-400">
      Swipe left on each item to reveal actions. Works with touch and mouse.
    </p>

    <SwipeToRevealList
      items={demoItems}
      hint="Swipe left to reveal actions"
    />
  </div>
</App>
