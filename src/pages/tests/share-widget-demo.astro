---
/**
 * Demo: Share Widget
 * Awwwards-style share button that expands to show Twitter, LinkedIn, Facebook, and close.
 */
import App from "../../components/ui/App.astro";
import ShareWidget from "../../components/ui/ShareWidget.astro";
---

<App title="Share Widget Demo" description="Awwwards-style share widget demo">
  <div class="container mx-auto max-w-xl px-4 py-12">
    <h1 class="mb-2 text-3xl font-bold text-gray-900 dark:text-white">
      Share Widget Demo
    </h1>
    <p class="mb-8 text-gray-600 dark:text-gray-400">
      Click the share icon to reveal Twitter, LinkedIn, and Facebook options.
    </p>

    <ul class="flex items-center gap-4">
      <ShareWidget />
    </ul>
  </div>
</App>
