---
/**
 * Test page: Two-column layout, 100dvh, content centered in both panels.
 * Flowbite + Tailwind.
 */
import LayoutTwoColumn from "../../components/layouts/LayoutTwoColumn.astro";
import { checkAuth } from "../../lib/auth";

const { currentUser } = await checkAuth(Astro.cookies);
---

<LayoutTwoColumn
  title="Two Column"
  description="Two-column layout with centered content"
  {currentUser}
>
  <div slot="left" class="max-w-md">
    <h1 class="text-2xl font-bold text-gray-900 dark:text-white mb-2">Left panel</h1>
    <p class="text-gray-600 dark:text-gray-400">
      Content here is centered horizontally and vertically within this panel.
    </p>
  </div>
  <div slot="right" class="max-w-md">
    <h1 class="text-2xl font-bold text-gray-900 dark:text-white mb-2">Right panel</h1>
    <p class="text-gray-600 dark:text-gray-400">
      Content here is centered horizontally and vertically within this panel.
    </p>
  </div>
</LayoutTwoColumn>
