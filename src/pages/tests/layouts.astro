---
/**
 * Index of layout template test pages.
 * Links to each layout type for quick visual verification.
 */
import App from "../../components/ui/App.astro";
import { checkAuth } from "../../lib/auth";

const { currentUser } = await checkAuth(Astro.cookies);

const layouts = [
  {
    slug: "layout-default",
    label: "Default",
    description: "Standard container, prose, full chrome",
  },
  { slug: "layout-fullwidth", label: "Full Width", description: "No max-width, no preloader mask" },
  { slug: "layout-minimal", label: "Minimal", description: "Minimal template (data-template)" },
  {
    slug: "layout-centered",
    label: "Centered",
    description: "Vertically and horizontally centered",
  },
  {
    slug: "layout-fullscreen",
    label: "Fullscreen",
    description: "100dvh, scrollable main, fixed footer",
  },
];
---

<App title="Layout template tests" description="Test pages for each App layout type" {currentUser}>
  <div class="mx-auto w-full max-w-3xl px-8 py-16">
    <h1 class="mb-2 text-2xl font-bold text-gray-900 dark:text-white">Layout template tests</h1>
    <p class="mb-8 text-gray-600 dark:text-gray-400">
      Test pages for each <code class="rounded bg-gray-200 px-1 dark:bg-gray-700">layout</code> type
      in App.astro. Each page has dummy content to verify behavior.
    </p>
    <ul class="space-y-4">
      {
        layouts.map(({ slug, label, description }) => (
          <li>
            <a
              href={`/tests/${slug}`}
              class="block rounded-lg border border-gray-200 bg-white p-4 transition-colors hover:border-primary-500 dark:border-gray-700 dark:bg-gray-900 dark:hover:border-primary-500"
            >
              <span class="font-medium text-gray-900 dark:text-white">{label}</span>
              <span class="mt-1 block text-sm text-gray-600 dark:text-gray-400">{description}</span>
            </a>
          </li>
        ))
      }
    </ul>
  </div>
</App>
