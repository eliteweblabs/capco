---
/**
 * Index of layout template test pages.
 * Links to each layout type for quick visual verification.
 */
import App from "../../components/ui/App.astro";
import { checkAuth } from "../../lib/auth";

const { currentUser } = await checkAuth(Astro.cookies);

const layouts = [
  { slug: "layout-default", label: "Default", description: "Standard container, prose, full chrome" },
  { slug: "layout-fullwidth", label: "Full Width", description: "No max-width, no preloader mask" },
  { slug: "layout-minimal", label: "Minimal", description: "Minimal template (data-template)" },
  { slug: "layout-centered", label: "Centered", description: "Vertically and horizontally centered" },
  { slug: "layout-fullscreen", label: "Fullscreen", description: "100dvh, scrollable main, fixed footer" },
];
---

<App title="Layout template tests" description="Test pages for each App layout type" {currentUser}>
  <div class="w-full mx-auto max-w-3xl px-8 py-16">
    <h1 class="text-2xl font-bold text-gray-900 dark:text-white mb-2">Layout template tests</h1>
    <p class="text-gray-600 dark:text-gray-400 mb-8">
      Test pages for each <code class="rounded bg-gray-200 dark:bg-gray-700 px-1">layout</code> type
      in App.astro. Each page has dummy content to verify behavior.
    </p>
    <ul class="space-y-4">
      {
        layouts.map(({ slug, label, description }) => (
          <li>
            <a
              href={`/tests/${slug}`}
              class="block rounded-lg border border-gray-200 dark:border-gray-700 bg-white dark:bg-gray-900 p-4 hover:border-primary-500 dark:hover:border-primary-500 transition-colors"
            >
              <span class="font-medium text-gray-900 dark:text-white">{label}</span>
              <span class="block text-sm text-gray-600 dark:text-gray-400 mt-1">{description}</span>
            </a>
          </li>
        ))
      }
    </ul>
  </div>
</App>
