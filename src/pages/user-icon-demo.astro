---
import UserIcon from "../components/common/UserIcon.astro";
---

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>UserIcon Component Demo</title>
    <script src="https://cdn.tailwindcss.com"></script>
  </head>
  <body class="bg-gray-100 p-8">
    <div class="max-w-4xl mx-auto">
      <h1 class="text-3xl font-bold mb-8">UserIcon Component Demo</h1>

      <!-- Single User Examples -->
      <section class="mb-12">
        <h2 class="text-2xl font-semibold mb-4">Single User Examples</h2>

        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
          <!-- With Avatar -->
          <div class="bg-white p-6 rounded-lg shadow">
            <h3 class="font-medium mb-4">With Avatar</h3>
            <UserIcon
              user={{
                id: "1",
                firstName: "John",
                lastName: "Doe",
                email: "john.doe@example.com",
                avatarUrl:
                  "https://images.unsplash.com/photo-1472099645785-5658abf4ff4e?w=100&h=100&fit=crop&crop=face",
              }}
              size="lg"
            />
          </div>

          <!-- Without Avatar (Initials) -->
          <div class="bg-white p-6 rounded-lg shadow">
            <h3 class="font-medium mb-4">Without Avatar (Initials)</h3>
            <UserIcon
              user={{
                id: "2",
                firstName: "Jane",
                lastName: "Smith",
                email: "jane.smith@example.com",
              }}
              size="lg"
            />
          </div>

          <!-- Company Name Only -->
          <div class="bg-white p-6 rounded-lg shadow">
            <h3 class="font-medium mb-4">Company Name Only</h3>
            <UserIcon
              user={{
                id: "3",
                companyName: "Acme Corp",
                email: "contact@acme.com",
              }}
              size="lg"
            />
          </div>
        </div>
      </section>

      <!-- Multiple Users Examples -->
      <section class="mb-12">
        <h2 class="text-2xl font-semibold mb-4">Multiple Users Examples</h2>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
          <!-- Small Group -->
          <div class="bg-white p-6 rounded-lg shadow">
            <h3 class="font-medium mb-4">Small Group (3 users)</h3>
            <UserIcon
              users={[
                {
                  id: "1",
                  firstName: "Alice",
                  lastName: "Johnson",
                  email: "alice@example.com",
                  avatarUrl:
                    "https://images.unsplash.com/photo-1494790108755-2616b612b786?w=100&h=100&fit=crop&crop=face",
                },
                {
                  id: "2",
                  firstName: "Bob",
                  lastName: "Wilson",
                  email: "bob@example.com",
                },
                {
                  id: "3",
                  firstName: "Carol",
                  lastName: "Davis",
                  email: "carol@example.com",
                  avatarUrl:
                    "https://images.unsplash.com/photo-1438761681033-6461ffad8d80?w=100&h=100&fit=crop&crop=face",
                },
              ]}
              size="md"
            />
          </div>

          <!-- Large Group -->
          <div class="bg-white p-6 rounded-lg shadow">
            <h3 class="font-medium mb-4">Large Group (5+ users)</h3>
            <UserIcon
              users={[
                {
                  id: "1",
                  firstName: "Alice",
                  lastName: "Johnson",
                  email: "alice@example.com",
                  avatarUrl:
                    "https://images.unsplash.com/photo-1494790108755-2616b612b786?w=100&h=100&fit=crop&crop=face",
                },
                {
                  id: "2",
                  firstName: "Bob",
                  lastName: "Wilson",
                  email: "bob@example.com",
                },
                {
                  id: "3",
                  firstName: "Carol",
                  lastName: "Davis",
                  email: "carol@example.com",
                  avatarUrl:
                    "https://images.unsplash.com/photo-1438761681033-6461ffad8d80?w=100&h=100&fit=crop&crop=face",
                },
                {
                  id: "4",
                  firstName: "David",
                  lastName: "Brown",
                  email: "david@example.com",
                },
                {
                  id: "5",
                  firstName: "Eve",
                  lastName: "Miller",
                  email: "eve@example.com",
                },
              ]}
              size="md"
              maxDisplay={3}
            />
          </div>
        </div>
      </section>

      <!-- Size Variations -->
      <section class="mb-12">
        <h2 class="text-2xl font-semibold mb-4">Size Variations</h2>

        <div class="bg-white p-6 rounded-lg shadow">
          <div class="flex items-center gap-8">
            <div class="text-center">
              <h4 class="font-medium mb-2">Small</h4>
              <UserIcon
                user={{
                  id: "1",
                  firstName: "John",
                  lastName: "Doe",
                  email: "john@example.com",
                }}
                size="sm"
              />
            </div>

            <div class="text-center">
              <h4 class="font-medium mb-2">Medium</h4>
              <UserIcon
                user={{
                  id: "1",
                  firstName: "John",
                  lastName: "Doe",
                  email: "john@example.com",
                }}
                size="md"
              />
            </div>

            <div class="text-center">
              <h4 class="font-medium mb-2">Large</h4>
              <UserIcon
                user={{
                  id: "1",
                  firstName: "John",
                  lastName: "Doe",
                  email: "john@example.com",
                }}
                size="lg"
              />
            </div>
          </div>
        </div>
      </section>

      <!-- Tooltip Positions -->
      <section class="mb-12">
        <h2 class="text-2xl font-semibold mb-4">Tooltip Positions</h2>

        <div class="bg-white p-6 rounded-lg shadow">
          <div class="grid grid-cols-2 md:grid-cols-4 gap-8">
            <div class="text-center">
              <h4 class="font-medium mb-2">Top</h4>
              <UserIcon
                user={{
                  id: "1",
                  firstName: "John",
                  lastName: "Doe",
                  email: "john@example.com",
                }}
                tooltipPosition="top"
              />
            </div>

            <div class="text-center">
              <h4 class="font-medium mb-2">Bottom</h4>
              <UserIcon
                user={{
                  id: "1",
                  firstName: "John",
                  lastName: "Doe",
                  email: "john@example.com",
                }}
                tooltipPosition="bottom"
              />
            </div>

            <div class="text-center">
              <h4 class="font-medium mb-2">Left</h4>
              <UserIcon
                user={{
                  id: "1",
                  firstName: "John",
                  lastName: "Doe",
                  email: "john@example.com",
                }}
                tooltipPosition="left"
              />
            </div>

            <div class="text-center">
              <h4 class="font-medium mb-2">Right</h4>
              <UserIcon
                user={{
                  id: "1",
                  firstName: "John",
                  lastName: "Doe",
                  email: "john@example.com",
                }}
                tooltipPosition="right"
              />
            </div>
          </div>
        </div>
      </section>

      <!-- Usage Examples -->
      <section>
        <h2 class="text-2xl font-semibold mb-4">Usage Examples</h2>

        <div class="bg-white p-6 rounded-lg shadow">
          <h3 class="font-medium mb-4">In Project Cards</h3>
          <div class="flex items-center gap-4 p-4 border rounded-lg">
            <div>
              <h4 class="font-medium">Project Alpha</h4>
              <p class="text-sm text-gray-600">Assigned to:</p>
            </div>
            <UserIcon
              users={[
                {
                  id: "1",
                  firstName: "Alice",
                  lastName: "Johnson",
                  email: "alice@example.com",
                },
                {
                  id: "2",
                  firstName: "Bob",
                  lastName: "Wilson",
                  email: "bob@example.com",
                },
              ]}
              size="sm"
            />
          </div>

          <h3 class="font-medium mb-4 mt-6">In Discussion Threads</h3>
          <div class="flex items-center gap-4 p-4 border rounded-lg">
            <div>
              <p class="text-sm">Discussion participants:</p>
            </div>
            <UserIcon
              users={[
                {
                  id: "1",
                  firstName: "Alice",
                  lastName: "Johnson",
                  email: "alice@example.com",
                },
                {
                  id: "2",
                  firstName: "Bob",
                  lastName: "Wilson",
                  email: "bob@example.com",
                },
                {
                  id: "3",
                  firstName: "Carol",
                  lastName: "Davis",
                  email: "carol@example.com",
                },
                {
                  id: "4",
                  firstName: "David",
                  lastName: "Brown",
                  email: "david@example.com",
                },
              ]}
              size="sm"
              maxDisplay={2}
            />
          </div>
        </div>
      </section>
    </div>
  </body>
</html>
