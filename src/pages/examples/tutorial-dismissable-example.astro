---
// Example usage of TutorialOverlay with dismissable tooltips
// This demonstrates a mixed tutorial flow with both standard and dismissable steps
import TutorialOverlay from "../../components/common/TutorialOverlay.astro";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Tutorial Overlay - Dismissable Tooltips Example</title>
  </head>
  <body>
    <div class="p-8">
      <h1 class="mb-4 text-2xl font-bold">Tutorial with Dismissable Tooltips Example</h1>

      <!-- Navigation Bar -->
      <nav class="mb-8 flex gap-4 rounded bg-gray-100 p-4">
        <!-- Step 0: Standard welcome -->
        <button
          class="rounded bg-blue-500 px-4 py-2 text-white"
          data-welcome='{
          "title": "Welcome to Your Dashboard!",
          "msg": "Let us show you around. This tutorial will guide you through the key features.",
          "position": "bottom",
          "icon": "info-circle",
          "step": 0
        }'
        >
          Dashboard
        </button>

        <!-- Step 1: Standard important feature -->
        <button
          class="rounded bg-green-500 px-4 py-2 text-white"
          data-welcome='{
          "title": "Create New Project",
          "msg": "Click here to start a new project. Fill out the form with project details and submit.",
          "position": "bottom",
          "icon": "plus-circle",
          "step": 1
        }'
        >
          New Project
        </button>

        <!-- Step 2: Dismissable quick tip -->
        <button
          class="rounded bg-gray-500 px-4 py-2 text-white"
          data-welcome='{
          "title": "Quick Search",
          "msg": "Pro tip: Press Cmd+K (Mac) or Ctrl+K (Windows) to quickly search projects!",
          "position": "bottom",
          "icon": "search",
          "step": 2,
          "dismissable": true
        }'
        >
          Search
        </button>

        <!-- Step 3: Standard important feature -->
        <button
          class="rounded bg-purple-500 px-4 py-2 text-white"
          data-welcome='{
          "title": "File Manager",
          "msg": "Upload, organize, and manage all your project documents here. Drag and drop files or click to browse.",
          "position": "bottom",
          "icon": "folder",
          "step": 3
        }'
        >
          Files
        </button>

        <!-- Step 4: Dismissable keyboard shortcut -->
        <button
          class="rounded bg-yellow-500 px-4 py-2 text-white"
          data-welcome='{
          "title": "Keyboard Shortcuts",
          "msg": "Press ? anytime to see all available keyboard shortcuts. Save time with quick actions!",
          "position": "left",
          "icon": "keyboard",
          "step": 4,
          "dismissable": true
        }'
        >
          Help
        </button>
      </nav>

      <!-- Content Area -->
      <div class="grid grid-cols-2 gap-4">
        <!-- Step 5: Dismissable tip on sidebar -->
        <div
          class="rounded border border-blue-200 bg-blue-50 p-4"
          data-welcome='{
          "title": "Filter Options",
          "msg": "Use these filters to quickly find projects by status, date, or client.",
          "position": "right",
          "icon": "filter",
          "step": 5,
          "dismissable": true
        }'
        >
          <h2 class="mb-2 font-semibold">Sidebar Filters</h2>
          <ul>
            <li>Active Projects</li>
            <li>Completed</li>
            <li>On Hold</li>
          </ul>
        </div>

        <!-- Step 6: Standard final step -->
        <div
          class="rounded border border-green-200 bg-green-50 p-4"
          data-welcome='{
          "title": "You are All Set!",
          "msg": "You have completed the tour. Start exploring and building amazing projects!",
          "position": "left",
          "icon": "check-circle",
          "step": 6
        }'
        >
          <h2 class="mb-2 font-semibold">Main Content</h2>
          <p>Your projects will appear here...</p>
        </div>
      </div>

      <!-- Tutorial trigger button -->
      <div class="mt-8">
        <button
          id="tutorial-trigger"
          class="rounded-lg bg-indigo-600 px-6 py-3 text-white shadow hover:bg-indigo-700"
        >
          Start Tutorial
        </button>
      </div>
    </div>

    <!-- Include TutorialOverlay component -->
    <TutorialOverlay
      currentUser={{ id: "demo-user-123" }}
      tutorialId="dashboard-example"
      autoStart={false}
      isAuth={true}
    />
  </body>
</html>

<style>
  body {
    font-family:
      system-ui,
      -apple-system,
      sans-serif;
  }
</style>
