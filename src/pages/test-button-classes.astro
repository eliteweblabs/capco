---
import Button from "../components/common/Button.astro";
---

<html>
  <head>
    <title>Button Classes Test</title>
    <script src="https://cdn.tailwindcss.com"></script>
  </head>
  <body class="p-8">
    <h1>Testing Button Class Application</h1>

    <div class="space-y-4">
      <h2>Side-by-side buttons with flex-1:</h2>
      <div class="flex gap-2">
        <Button variant="primary" class="flex-1"> Button 1 (flex-1) </Button>
        <Button variant="secondary" class="flex-1"> Button 2 (flex-1) </Button>
      </div>

      <h2>Button with custom background:</h2>
      <Button variant="ghost" class="bg-red-500 text-white"> Custom Background </Button>

      <h2>Button with custom margin:</h2>
      <Button variant="outline" class="ml-4 mt-2"> Custom Margin </Button>

      <h2>Button with multiple custom classes:</h2>
      <Button variant="primary" class="h-16 w-32 text-lg font-bold"> Custom Size & Font </Button>
    </div>

    <script>
      // Debug: Check what classes are actually applied
      setTimeout(() => {
        const buttons = document.querySelectorAll("button");
        buttons.forEach((btn, index) => {
          console.log(`Button ${index + 1} classes:`, btn.className);
          console.log(`Button ${index + 1} has flex-1:`, btn.classList.contains("flex-1"));
          console.log(`Button ${index + 1} has bg-red-500:`, btn.classList.contains("bg-red-500"));
          console.log("---");
        });
      }, 100);
    </script>
  </body>
</html>
