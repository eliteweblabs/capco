---
import App from "../components/common/App.astro";
import Hero from "../components/common/Hero.astro";
import PricingElements from "../components/common/PricingElements.astro";

// Get auth data for conditional rendering
import { checkAuth } from "../lib/auth";
const { isAuth } = await checkAuth(Astro.cookies);
---

<App
  title="Pricing - CAPCo Fire Protection Systems"
  description="Choose the perfect plan for your fire protection system needs. Flexible pricing options for projects of all sizes."
>
  <!-- Hero Section -->
  <Hero
    title="Choose Your Plan"
    description="Select the perfect plan for your fire protection system needs. All plans include our core features with varying levels of support and customization."
  />
  <!-- Pricing Section -->
  <PricingElements />
</App>
