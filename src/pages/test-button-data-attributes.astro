---
import Button from "../components/common/Button.astro";
---

<html>
  <head>
    <title>Button Data Attributes Test</title>
  </head>
  <body>
    <h1>Button Component with Individual Data Attributes</h1>

    <div class="space-y-4 p-8">
      <h2>Old way (using dataAttributes object):</h2>
      <Button
        variant="primary"
        dataAttributes={{
          "data-count": "5",
          "data-project-status-filter": "active",
          "data-drawer-target": "project-drawer",
        }}
      >
        Old Way Button
      </Button>

      <h2>New way (individual data attributes):</h2>
      <Button
        variant="primary"
        data-count="5"
        data-project-status-filter="active"
        data-drawer-target="project-drawer"
      >
        New Way Button
      </Button>

      <h2>Mixed approach (both work together):</h2>
      <Button
        variant="secondary"
        dataAttributes={{
          "data-count": "3",
        }}
        data-project-status-filter="pending"
        data-modal-target="confirm-modal"
      >
        Mixed Approach Button
      </Button>

      <h2>Common data attributes:</h2>
      <Button
        variant="outline"
        data-drawer-toggle="user-drawer"
        data-drawer-show="user-drawer"
        data-drawer-placement="right"
      >
        Drawer Toggle
      </Button>

      <Button variant="ghost" data-modal-toggle="settings-modal" data-modal-target="settings-modal">
        Modal Toggle
      </Button>

      <Button variant="primary" data-component-id="search-form" data-count="12">
        Component with Count
      </Button>
    </div>
  </body>
</html>
