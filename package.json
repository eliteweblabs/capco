{
  "name": "CAPCo",
  "type": "module",
  "version": "0.3.0",
  "description": "CAPCo Fire Protection Systems - PDF submission and review platform for fire protection projects. Built with Astro + Supabase. NO REACT - uses vanilla JS/TS only.",
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=9.0.0"
  },
  "scripts": {
    "dev": "astro dev",
    "start": "node ./dist/server/entry.mjs",
    "build": "astro build",
    "preview": "astro preview",
    "astro": "astro",
    "host": "astro dev --host",
    "format": "prettier --write \"src/**/*.{ts,js,json,css,md}\"",
    "format:astro": "prettier --write \"src/**/*.astro\" --plugin=prettier-plugin-astro --ignore-unknown",
    "format:all": "npm run format && npm run format:astro",
    "import-test-projects": "node scripts/import-test-projects.js",
    "update-project-dates": "node scripts/update-project-dates.js",
    "seed-db": "npm run import-test-projects 50"
  },
  "dependencies": {
    "@astrojs/check": "^0.9.4",
    "@astrojs/node": "^9.3.0",
    "@astrojs/solid-js": "^5.1.0",
    "@astrojs/tailwind": "^6.0.2",
    "@fontsource-variable/outfit": "^5.2.6",
    "@react-email/components": "^0.4.0",
    "@react-email/render": "^1.1.4",
    "@stripe/stripe-js": "^7.8.0",
    "@supabase/ssr": "^0.6.1",
    "@supabase/supabase-js": "^2.52.1",
    "@tailwindcss/forms": "^0.5.10",
    "astro": "^5.12.3",
    "boxicons": "^2.1.4",
    "micromatch": "^4.0.5",
    "pdfjs-dist": "^5.3.93",
    "puppeteer": "^24.15.0",
    "react-email": "^4.2.7",
    "signature_pad": "^5.0.10",
    "solid-js": "^1.8.7",
    "stripe": "^18.4.0",
    "tailwindcss": "^3.4.1",
    "tailwindcss-animate": "^1.0.7",
    "typescript": "^5.8.3"
  },
  "devDependencies": {
    "@faker-js/faker": "^10.0.0",
    "@types/micromatch": "^4.0.6",
    "@types/react": "^19.1.9",
    "@types/react-dom": "^19.1.7",
    "@typescript-eslint/eslint-plugin": "^8.38.0",
    "@typescript-eslint/parser": "^8.38.0",
    "autoprefixer": "^10.4.21",
    "dotenv": "^17.2.1",
    "eslint": "^9.31.0",
    "eslint-plugin-astro": "^1.3.1",
    "nodemon": "^3.1.10",
    "prettier": "^3.6.2",
    "prettier-plugin-astro": "^0.14.1",
    "prettier-plugin-tailwindcss": "^0.6.14"
  }
}
