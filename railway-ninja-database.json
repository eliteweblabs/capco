{
  "name": "ninja-invoice-database",
  "services": [
    {
      "name": "ninja-mysql",
      "image": "mysql:8.0",
      "environment": {
        "MYSQL_ROOT_PASSWORD": "${{MYSQL_ROOT_PASSWORD}}",
        "MYSQL_DATABASE": "${{MYSQL_DATABASE}}",
        "MYSQL_USER": "${{MYSQL_USER}}",
        "MYSQL_PASSWORD": "${{MYSQL_PASSWORD}}"
      },
      "volumes": [
        {
          "name": "mysql_data",
          "mountPath": "/var/lib/mysql"
        }
      ]
    },
    {
      "name": "ninja-redis",
      "image": "redis:7-alpine",
      "volumes": [
        {
          "name": "redis_data",
          "mountPath": "/data"
        }
      ]
    }
  ],
  "volumes": [
    {
      "name": "mysql_data"
    },
    {
      "name": "redis_data"
    }
  ]
}
