{
  "$schema": "https://policygen.xyz/schemas/0.6/schema.json",
  "output": {
    "fileType": "astro",
    "cssFramework": "tailwind",
    "locales": [
      "en"
    ],
    "privacyFilePath": "./src/pages/privacy.astro",
    "termsFilePath": "./src/pages/terms.astro",
    "astroLayout": {
      "path": "../components/layouts/LayoutLegal.astro"
    }
  },
  "entity": {
    "name": "Fire Protection Services",
    "website": "https://example.com",
    "address": "123 Main St"
  },
  "privacy": {
    "privacyEmail": "privacy@example.com",
    "platforms": [
      "web"
    ],
    "locations": [
      "us",
      "eu"
    ],
    "socialSignIn": true,
    "personalInformation": [
      "name",
      "email",
      "phone",
      "address",
      "password",
      "ipAddress"
    ],
    "sensitiveInformation": [],
    "thirdPartyData": [
      "analytics",
      "email",
      "support"
    ],
    "paymentData": true,
    "paymentProcessors": [
      "https://stripe.com/privacy"
    ],
    "appUsageData": true,
    "thirdPartyDisclosure": true,
    "thirdPartyDisclosureEntities": [
      "Hosting (Supabase, Railway)",
      "Payment processing (Stripe)",
      "Authentication (Supabase)"
    ],
    "thirdPartySharing": false,
    "thirdPartySharingEntities": [],
    "securityMeasures": true,
    "webTracking": true,
    "thirdPartyAnalytics": true,
    "serviceRequirements": [
      "accounts",
      "communication",
      "orders"
    ],
    "legalBasis": [
      "security",
      "fraudPrevention"
    ],
    "dataRetentionPeriod": "Until account deletion or 7 years for legal records",
    "usStatePrivacyLaws": true,
    "dpo": false,
    "cookieConsent": true,
    "cookieConsentProvider": "Custom in-app preferences",
    "dataBreachNotification": true,
    "dataBreachTimeframe": "72 hours"
  },
  "terms": {
    "underEighteen": false,
    "underThirteen": false,
    "purchasableGoods": true,
    "subscription": true,
    "freeTrial": false,
    "autoRenew": true,
    "refundPolicy": "prorata",
    "userContent": true,
    "userContentLicense": true,
    "userAccounts": true,
    "governingLaw": "United States",
    "disputeResolution": "arbitration",
    "mediation": true,
    "prohibitedUses": [
      "illegal",
      "harmful",
      "infringing",
      "abusive",
      "spam",
      "impersonation"
    ],
    "serviceSLA": true,
    "serviceSLAAmount": 99.5,
    "serviceSLATimeframe": "monthly",
    "serviceSLARefund": true,
    "serviceSLARefundType": "prorata",
    "liabilityLimitation": true,
    "liabilityLimitationType": "amount_paid",
    "liabilityLimitationAmount": 100,
    "supportEmail": "support@example.com",
    "forceMajeure": true,
    "dmcaTakedown": false,
    "taxLiability": true,
    "taxJurisdiction": "United States"
  }
}